<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4">
      <h1 class="text-2xl font-bold">마이페이지</h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <div class="bg-card rounded-xl p-6 border border-border mb-6">
      <div class="flex items-start gap-4 mb-4">
        <div class="h-20 w-20 rounded-full bg-secondary flex items-center justify-center">
          <% if @user[:avatar] %>
            <%= image_tag @user[:avatar], alt: @user[:name], class: "h-full w-full object-cover rounded-full" %>
          <% else %>
            <span class="text-2xl font-semibold"><%= @user[:name][0] %></span>
          <% end %>
        </div>
        <div class="flex-1">
          <h2 class="text-2xl font-bold mb-1"><%= @user[:name] %></h2>
          <p class="text-muted-foreground"><%= @user[:email] %></p>
          <% if @user[:role] %>
            <span class="inline-flex items-center rounded-md bg-secondary px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground mt-2">
              <%= @user[:role] %>
            </span>
          <% end %>
        </div>
      </div>

      <%= link_to edit_my_page_path, class: "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-4 py-2 w-full" do %>
        프로필 수정
      <% end %>
    </div>

    <!-- Menu Items -->
    <div class="space-y-2">
      <div class="bg-card rounded-xl border border-border overflow-hidden">
        <a href="#" class="block px-6 py-4 hover:bg-accent transition-colors border-b border-border">
          <h3 class="font-semibold">저장한 글</h3>
          <p class="text-sm text-muted-foreground">북마크한 커뮤니티 글 보기</p>
        </a>
        <a href="#" class="block px-6 py-4 hover:bg-accent transition-colors border-b border-border">
          <h3 class="font-semibold">내가 작성한 글</h3>
          <p class="text-sm text-muted-foreground">커뮤니티에 작성한 글 모아보기</p>
        </a>
        <a href="#" class="block px-6 py-4 hover:bg-accent transition-colors">
          <h3 class="font-semibold">나의 외주 공고</h3>
          <p class="text-sm text-muted-foreground">등록한 외주 공고 관리</p>
        </a>
      </div>

      <div class="bg-card rounded-xl border border-border overflow-hidden">
        <a href="#" class="block px-6 py-4 hover:bg-accent transition-colors border-b border-border">
          <h3 class="font-semibold">설정</h3>
          <p class="text-sm text-muted-foreground">앱 설정 및 알림 관리</p>
        </a>
        <a href="#" class="block px-6 py-4 hover:bg-accent transition-colors text-destructive">
          <h3 class="font-semibold">로그아웃</h3>
        </a>
      </div>
    </div>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
