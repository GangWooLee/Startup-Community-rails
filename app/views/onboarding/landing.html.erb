<%# Onboarding Landing Page - New Design %>
<%# macOS 브라우저 프레임 스타일 + 모달 기반 아이디어 입력 %>

<div class="min-h-screen bg-[#E8E3DC]" data-controller="idea-modal"
     data-idea-modal-analyze-url-value="<%= onboarding_ai_analyze_path %>"
     data-idea-modal-csrf-token-value="<%= form_authenticity_token %>"
     data-action="keydown@window->idea-modal#keydown">

  <%# ========== HERO SECTION ========== %>
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden px-4 sm:px-6 py-8 sm:py-12">
    <div class="relative w-full max-w-7xl lg:scale-125 origin-center">

      <%# macOS Browser Window Frame - 1.25x scaled via CSS transform %>
      <div class="bg-white rounded-2xl shadow-2xl overflow-hidden animate-scale-in">

        <%# macOS Top Bar %>
        <div class="h-10 sm:h-12 bg-gradient-to-b from-gray-100 to-gray-50 border-b border-gray-200 flex items-center px-3 sm:px-4">
          <%# Traffic Light Buttons %>
          <div class="flex gap-1.5 sm:gap-2">
            <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 rounded-full bg-[#FF5F57]"></div>
            <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 rounded-full bg-[#FEBC2E]"></div>
            <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 rounded-full bg-[#28C840]"></div>
          </div>

          <%# Browser Toolbar - Hidden on mobile %>
          <div class="hidden sm:flex items-center gap-3 ml-4">
            <button type="button" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <button type="button" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>

          <%# URL Bar %>
          <div class="flex-1 mx-3 sm:mx-6">
            <div class="bg-white border border-gray-200 rounded-lg px-3 sm:px-4 py-1 sm:py-1.5 text-[10px] sm:text-xs text-gray-400 text-center max-w-xl mx-auto">
              undrew.studio
            </div>
          </div>

          <%# Right Icons - Hidden on mobile %>
          <div class="hidden sm:flex gap-2 text-gray-400">
            <button type="button" class="hover:text-gray-600 transition-colors">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
              </svg>
            </button>
            <button type="button" class="hover:text-gray-600 transition-colors">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </button>
          </div>
        </div>

        <%# Content Area %>
        <div class="grid lg:grid-cols-2 gap-6 lg:gap-12 p-6 sm:p-8 lg:p-16 min-h-[500px] lg:min-h-[600px] items-center">

          <%# Left Side - Text Content %>
          <div class="space-y-5 sm:space-y-6 order-2 lg:order-1">
            <%# Logo %>
            <div class="mb-6 sm:mb-8 animate-fade-slide-up animate-delay-200">
              <img src="/icon.png" alt="Undrew" class="w-32 h-32 sm:w-40 sm:h-40 lg:w-48 lg:h-48 object-contain">
            </div>

            <%# Main Headline - Task #12: "Start with" 구조로 변경 %>
            <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold landing-text-primary leading-tight animate-fade-slide-up animate-delay-300">
              Stop Scrolling.<br>
              Start with<br>
              Undrew AI
            </h1>

            <%# Description %>
            <p class="text-sm sm:text-base lg:text-lg text-gray-600 leading-relaxed animate-fade-slide-up animate-delay-400">
              첫 창업의 막막함을 Undrew하는 공간<br>
              첫 스케치부터 실행까지 함께합니다.
            </p>

            <%# CTA Buttons - Task #13, #14: 가로 배치 + 크기 1.25x %>
            <div class="pt-2 sm:pt-4 animate-fade-slide-up animate-delay-500 flex flex-col sm:flex-row gap-3 sm:gap-4">
              <button type="button"
                      class="h-14 sm:h-16 px-10 sm:px-12 text-base sm:text-lg font-semibold rounded-lg bg-[#2C4A6B] hover:bg-[#1e3548] text-white shadow-lg hover:shadow-xl transition-all flex items-center justify-center gap-2"
                      data-action="click->idea-modal#open">
                창업 시작하기
              </button>
              <%= link_to community_path, class: "h-14 sm:h-16 px-10 sm:px-12 text-base sm:text-lg font-semibold rounded-lg bg-white border border-[#2C4A6B]/30 text-[#2C4A6B] hover:border-[#2C4A6B]/60 hover:bg-gray-50 transition-all flex items-center justify-center gap-2" do %>
                Undrew 커뮤니티
              <% end %>
            </div>
          </div>

          <%# Right Side - AI Studio UI Mockup %>
          <div class="bg-white rounded-2xl border border-gray-200 p-4 sm:p-6 shadow-lg animate-fade-slide-right animate-delay-400 order-1 lg:order-2">
            <%# Header %>
            <div class="flex items-center gap-2 mb-3 sm:mb-4">
              <div class="w-2 h-2 rounded-full bg-green-500"></div>
              <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
              <div class="w-2 h-2 rounded-full bg-purple-500"></div>
              <h3 class="ml-2 text-xs sm:text-sm font-semibold text-gray-900">AI IDEA STUDIO</h3>
            </div>

            <%# Input Area Mockup %>
            <div class="bg-gray-50 rounded-lg p-3 sm:p-4 mb-3 sm:mb-4 min-h-[80px] sm:min-h-[120px] border border-gray-200">
              <p class="text-[10px] sm:text-xs text-gray-400">아이디어 설명, 목적이 구두로 전달되는 곳</p>
            </div>

            <%# Action Buttons Mockup %>
            <div class="flex gap-2 mb-4 sm:mb-6">
              <button type="button" class="flex-1 py-1.5 sm:py-2 px-2 sm:px-3 rounded-lg bg-green-50 text-green-700 text-[10px] sm:text-xs font-medium border border-green-200">
                + Action 1
              </button>
              <button type="button" class="flex-1 py-1.5 sm:py-2 px-2 sm:px-3 rounded-lg bg-blue-50 text-blue-700 text-[10px] sm:text-xs font-medium border border-blue-200">
                + Action 2
              </button>
              <button type="button" class="flex-1 py-1.5 sm:py-2 px-2 sm:px-3 rounded-lg bg-purple-50 text-purple-700 text-[10px] sm:text-xs font-medium border border-purple-200">
                + Action 3
              </button>
            </div>

            <%# Profile Cards Mockup %>
            <div class="grid grid-cols-2 gap-2 sm:gap-3">
              <% 4.times do |i| %>
                <div class="bg-gray-50 rounded-lg p-2 sm:p-3 border border-gray-200">
                  <div class="flex items-center gap-2 mb-1.5 sm:mb-2">
                    <div class="w-6 h-6 sm:w-8 sm:h-8 rounded-full <%= i.even? ? 'bg-green-200' : 'bg-purple-200' %>"></div>
                    <div class="flex-1 min-w-0">
                      <p class="text-[10px] sm:text-xs font-semibold text-gray-900 truncate">Nickname</p>
                      <p class="text-[8px] sm:text-[10px] text-gray-500">Role</p>
                    </div>
                  </div>
                  <p class="text-[8px] sm:text-[10px] text-gray-400 leading-relaxed line-clamp-2">
                    UX/UI 디자이너<br>
                    "시장과 경쟁을 주도합니다."
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# ========== FEATURES SECTION ========== %>
  <%# Reference: whileInView animations with staggered delays %>
  <section class="relative py-16 sm:py-24 md:py-32 px-4 sm:px-6 overflow-hidden bg-[#F8F9FA]"
           data-controller="scroll-animation"
           data-scroll-animation-margin-value="-100px">
    <div class="relative z-10 max-w-5xl mx-auto">
      <%# Section header - y: 30 → 0, duration: 0.6s %>
      <div class="text-center mb-12 sm:mb-16 md:mb-20 animate-on-scroll"
           data-scroll-animation-target="item"
           data-animation-delay="0">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-[#2C4A6B] leading-tight mb-4">
          스타트업 커뮤니티가 아니라<br>
          <span class="text-[#2C4A6B]/40">작업실이에요</span>
        </h2>
      </div>

      <%# Features grid - cards with staggered delays (index * 0.1s) %>
      <div class="grid sm:grid-cols-2 gap-4 sm:gap-6">
        <% landing_features.each_with_index do |feature, index| %>
          <div class="group relative p-5 sm:p-6 md:p-8 rounded-2xl bg-white border border-[#2C4A6B]/10 hover:border-[#2C4A6B]/20 hover:shadow-lg transition-all duration-300 animate-on-scroll-card"
               data-scroll-animation-target="item"
               data-animation-delay="<%= index * 0.1 %>">
            <div class="relative z-10">
              <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-[#2C4A6B]/5 flex items-center justify-center mb-4 sm:mb-5 group-hover:bg-[#2C4A6B]/10 transition-colors duration-300">
                <%= render_feature_icon(feature[:icon]) %>
              </div>

              <h3 class="text-base sm:text-lg md:text-xl font-semibold text-[#2C4A6B] mb-2">
                <%= feature[:title] %>
              </h3>
              <p class="text-[#2C4A6B]/60 text-sm md:text-base leading-relaxed">
                <%= feature[:description] %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <%# ========== FOOTER ========== %>
  <%# Reference: whileInView={{ opacity: 1, y: 0 }}, duration: 0.6s %>
  <footer class="relative py-12 sm:py-16 px-4 sm:px-6 bg-[#F8F9FA] border-t border-[#2C4A6B]/10"
          data-controller="scroll-animation">
    <div class="max-w-5xl mx-auto flex flex-col items-center text-center animate-on-scroll"
         data-scroll-animation-target="item">
      <%# Wordmark %>
      <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-[#2C4A6B] tracking-tight mb-2 sm:mb-3">
        Undrew
      </h2>

      <%# Tagline %>
      <p class="text-[#2C4A6B]/40 text-xs sm:text-sm mb-6 sm:mb-8">
        아직 완성되지 않아도 괜찮아요
      </p>

      <%# Divider %>
      <div class="w-12 h-px bg-[#2C4A6B]/20 mb-6 sm:mb-8"></div>

      <%# Company %>
      <p class="text-[#2C4A6B]/30 text-[10px] sm:text-xs uppercase tracking-widest">
        Grounded Inc.
      </p>
    </div>
  </footer>

  <%# ========== IDEA MODAL ========== %>
  <div class="hidden" data-idea-modal-target="modal">
    <%# Backdrop %>
    <div class="fixed inset-0 bg-black/40 backdrop-blur-sm z-50 transition-opacity duration-200 opacity-0"
         data-idea-modal-target="backdrop"
         data-action="click->idea-modal#backdropClick"></div>

    <%# Modal Container - Reference: scale 0.98 → 1, duration 0.2s %>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="w-full max-w-2xl max-h-[90vh] overflow-y-auto bg-white rounded-2xl p-5 sm:p-6 md:p-8 shadow-2xl relative transition-all duration-200 opacity-0 scale-[0.98]"
           data-idea-modal-target="content">

        <%# Close button %>
        <button type="button"
                class="absolute top-3 sm:top-4 right-3 sm:right-4 landing-text-light hover:landing-text-primary transition-colors z-10"
                data-action="click->idea-modal#close">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <%# Modal Content %>
        <div class="relative z-10">
          <div class="text-center mb-6 sm:mb-8">
            <h3 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold landing-text-primary leading-tight mb-2 sm:mb-3">
              지금 머릿속에 있는 생각,<br>
              다듬지 말고 써도 괜찮아요.
            </h3>
            <p class="landing-text-muted text-xs sm:text-sm md:text-base">
              한 줄도 좋아요. 필요한 액션으로 바꿔드릴게요.
            </p>
          </div>

          <textarea
            data-idea-modal-target="ideaInput"
            data-action="input->idea-modal#updateInput"
            placeholder="아이디어를 자유롭게 입력해주세요. 완벽하지 않아도 괜찮습니다."
            class="w-full min-h-[180px] sm:min-h-[200px] md:min-h-[280px] bg-[#F8F9FA] border border-[#2C4A6B]/20 landing-text-primary text-sm sm:text-base md:text-lg placeholder:landing-text-light focus:border-[#2C4A6B] focus:ring-2 focus:ring-[#2C4A6B]/20 focus:outline-none resize-none rounded-xl p-4 sm:p-5 md:p-6"></textarea>

          <div class="flex items-center justify-between mt-2 text-[10px] sm:text-xs landing-text-muted">
            <span><span data-idea-modal-target="charCount">0</span> / 500자</span>
            <span>최소 10자</span>
          </div>

          <button type="button"
                  data-idea-modal-target="submitButton"
                  data-action="click->idea-modal#submit"
                  disabled
                  class="w-full mt-5 sm:mt-6 md:mt-8 h-11 sm:h-12 md:h-14 bg-[#2C4A6B] hover:bg-[#1e3548] text-white text-sm sm:text-base md:text-lg font-semibold rounded-xl transition-all disabled:opacity-40 disabled:cursor-not-allowed group shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
            <%# Loading spinner (hidden by default) %>
            <svg data-idea-modal-target="loadingSpinner" class="hidden animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span data-idea-modal-target="buttonText">아이디어 스케치 시작하기</span>
            <svg data-idea-modal-target="buttonIcon" class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
