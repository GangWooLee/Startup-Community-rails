<%# AI 분석 결과 콘텐츠 - Undrew Design System Style %>
<%# 이 파일은 Turbo Stream으로 동적 교체됩니다 %>

<%# 분석 실패 시 에러 표시 %>
<% if idea_analysis.failed? %>
  <div class="bg-white rounded-xl shadow-2xl overflow-hidden border border-slate-300/50">
    <%# macOS 윈도우 헤더 %>
    <div class="bg-gradient-to-b from-slate-200 to-slate-100 border-b border-slate-300/70 px-4 py-3">
      <div class="flex items-center">
        <div class="flex gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500 border border-red-600/30"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500 border border-yellow-600/30"></div>
          <div class="w-3 h-3 rounded-full bg-green-500 border border-green-600/30"></div>
        </div>
      </div>
    </div>
    <div class="flex flex-col items-center justify-center py-20 px-8 space-y-6">
      <div class="h-20 w-20 rounded-full bg-red-100 flex items-center justify-center shadow-lg">
        <svg class="h-10 w-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
      <div class="text-center space-y-3">
        <h3 class="text-xl font-bold text-slate-800">분석에 실패했습니다</h3>
        <p class="text-slate-600">잠시 후 다시 시도해주세요</p>
      </div>
      <%= link_to onboarding_ai_input_path,
          class: "inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold btn-hover shadow-lg" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        다시 분석하기
      <% end %>
    </div>
  </div>

<% elsif idea_analysis.analyzing? %>
  <%# 분석 중일 때는 스켈레톤 UI 표시 %>
  <div class="bg-white rounded-xl shadow-2xl overflow-hidden border border-slate-300/50">
    <%# macOS 윈도우 헤더 %>
    <div class="bg-gradient-to-b from-slate-200 to-slate-100 border-b border-slate-300/70 px-4 py-3">
      <div class="flex items-center">
        <div class="flex gap-2">
          <div class="w-3 h-3 rounded-full bg-red-500 border border-red-600/30"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500 border border-yellow-600/30"></div>
          <div class="w-3 h-3 rounded-full bg-green-500 border border-green-600/30"></div>
        </div>
        <div class="flex-1 mx-4">
          <div class="bg-white rounded-md px-3 py-1.5 text-sm text-slate-500 border border-slate-200">
            undrew.ai/analysis
          </div>
        </div>
      </div>
    </div>
    <div class="p-4 sm:p-6 md:p-8 lg:p-12 space-y-8 animate-pulse">
      <%# 점수 원형 스켈레톤 %>
      <div class="flex justify-center">
        <div class="w-48 h-48 rounded-full bg-slate-200"></div>
      </div>
      <%# 액션 카드 스켈레톤 %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% 3.times do %>
          <div class="bg-slate-100 rounded-2xl h-48"></div>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
  <%# 분석 완료 - 실제 결과 표시 %>
  <% score = analysis.dig(:score, :overall) || 0 %>
  <% weak_areas = analysis.dig(:score, :weak_areas) || [] %>
  <% strong_areas = analysis.dig(:score, :strong_areas) || [] %>

  <div class="space-y-8">

    <%# 휘발성 경고 배너 - 미저장 상태일 때만 표시 %>
    <% unless idea_analysis.is_saved %>
      <div class="flex justify-center">
        <div class="inline-flex items-center gap-3 px-4 py-3 bg-amber-50 border border-amber-200 rounded-xl animate-fade-in">
          <svg class="w-5 h-5 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          <span class="text-sm text-amber-700">이 분석 결과는 페이지를 나가면 사라집니다. 보관하려면 아래에서 저장해주세요.</span>
        </div>
      </div>
    <% end %>

    <!-- =============================================== -->
    <!-- SECTION 1: THE NAVIGATOR (BrowserCard Style) -->
    <!-- =============================================== -->
    <section class="bg-white rounded-xl shadow-2xl overflow-hidden border border-slate-300/50 animate-stagger-1">
      <%# macOS 윈도우 헤더 %>
      <div class="bg-gradient-to-b from-slate-200 to-slate-100 border-b border-slate-300/70 px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500 border border-red-600/30"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500 border border-yellow-600/30"></div>
            <div class="w-3 h-3 rounded-full bg-green-500 border border-green-600/30"></div>
          </div>
          <div class="flex-1 mx-4 hidden md:block">
            <div class="bg-white rounded-md px-3 py-1.5 text-sm text-slate-500 border border-slate-200 text-center">
              undrew.ai/navigator
            </div>
          </div>
          <div class="flex items-center gap-2">
            <div class="h-6 w-6 rounded-full bg-blue-600/20 flex items-center justify-center">
              <span class="text-xs font-bold text-blue-600">1</span>
            </div>
            <span class="text-sm font-semibold text-blue-600 uppercase tracking-wider">The Navigator</span>
          </div>
        </div>
      </div>

      <%# 카드 본문 %>
      <div class="p-4 sm:p-6 md:p-8 lg:p-12">
        <%# 섹션 타이틀 %>
        <div class="text-center mb-8 sm:mb-10">
          <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 mb-2">아이디어 진단 및 핵심 액션</h2>
          <p class="text-slate-600">당신의 아이디어가 나아갈 방향을 제시합니다</p>
        </div>

        <%# Idea Summary Badge %>
        <div class="flex justify-center mb-8">
          <div class="bg-yellow-50 border-2 border-yellow-300 rounded-full px-6 py-3 inline-flex items-center gap-3 shadow-md">
            <span class="text-2xl">💡</span>
            <span class="text-yellow-800 font-semibold"><%= analysis[:summary] %></span>
          </div>
        </div>

        <%# Score Circle (w-48 h-48 = 192px, r=85) %>
        <div class="flex justify-center mb-10">
          <div class="relative flex items-center justify-center">
            <%# 외곽 글로우 효과 %>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500/20 to-violet-500/20 blur-2xl scale-110"></div>

            <svg class="transform -rotate-90 w-48 h-48 relative z-10" viewBox="0 0 192 192">
              <%# 그라데이션 정의 %>
              <defs>
                <linearGradient id="scoreGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" stop-color="#3b82f6"/>
                  <stop offset="50%" stop-color="#6366f1"/>
                  <stop offset="100%" stop-color="#8b5cf6"/>
                </linearGradient>
              </defs>

              <%# 배경 원 %>
              <circle cx="96" cy="96" r="85" stroke="#e2e8f0" stroke-width="14" fill="none"/>

              <%# 진행도 원 - stroke-dasharray 계산: 85 * 2 * PI * (score/100) %>
              <circle cx="96" cy="96" r="85"
                      stroke="url(#scoreGradient)"
                      stroke-width="14"
                      fill="none"
                      stroke-dasharray="<%= (85 * 2 * 3.14159 * score / 100).round %> <%= (85 * 2 * 3.14159).round %>"
                      stroke-linecap="round"
                      class="drop-shadow-lg animate-score-circle"/>
            </svg>

            <%# 중앙 점수 텍스트 %>
            <div class="absolute inset-0 flex flex-col items-center justify-center z-20">
              <span class="font-bold text-slate-800 animate-count-up" style="font-size: 3.5rem;"><%= score %></span>
              <span class="text-slate-500 font-medium mt-1">점</span>
            </div>
          </div>
        </div>

        <%# Score Status %>
        <% score_status = case score
             when 0..40 then { label: "보완 필요", bg: "from-red-50 to-red-100/50", border: "border-red-300", text: "text-red-700" }
             when 41..60 then { label: "기본기 갖춤", bg: "from-yellow-50 to-yellow-100/50", border: "border-yellow-300", text: "text-yellow-700" }
             when 61..80 then { label: "좋은 출발", bg: "from-blue-50 to-blue-100/50", border: "border-blue-300", text: "text-blue-700" }
             else { label: "훌륭한 아이디어", bg: "from-emerald-50 to-emerald-100/50", border: "border-emerald-300", text: "text-emerald-700" }
           end %>
        <div class="flex justify-center mb-10">
          <div class="bg-gradient-to-r <%= score_status[:bg] %> rounded-full px-6 py-2.5 border-2 <%= score_status[:border] %> shadow-md">
            <span class="font-bold <%= score_status[:text] %>"><%= score_status[:label] %></span>
          </div>
        </div>

        <%# Diagnosis Box %>
        <div class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-2xl p-6 border-2 border-slate-200 mb-10">
          <h3 class="text-lg font-bold text-slate-800 mb-4 flex items-center gap-2">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            아이디어 진단 결과
          </h3>
          <p class="text-slate-700 leading-relaxed mb-4">
            <% if strong_areas.any? %>
              당신의 아이디어는 <span class="font-semibold text-emerald-600"><%= strong_areas.first %></span> 면에서 강점을 가지고 있<%= strong_areas.length > 1 ? "으며, #{strong_areas[1]}도 좋습니다" : "습니다" %>.
              <% if weak_areas.any? %>
                다만, <span class="font-semibold text-blue-600"><%= weak_areas.join(', ') %></span> 영역의 보완이 필요합니다.
              <% end %>
            <% elsif weak_areas.any? %>
              아이디어의 기본 컨셉은 좋지만, <span class="font-semibold text-blue-600"><%= weak_areas.join(', ') %></span> 영역을 보강하면 더욱 완성도 높은 아이디어가 될 수 있습니다.
            <% else %>
              전반적으로 균형 잡힌 아이디어입니다. 세부 사항을 더 구체화하면 성공 가능성이 높아집니다.
            <% end %>
          </p>

          <%# Area Badges %>
          <div class="flex flex-wrap gap-2">
            <% weak_areas.each do |area| %>
              <span class="px-4 py-2 rounded-lg bg-blue-100 text-blue-700 text-sm font-semibold border border-blue-200">
                📌 <%= area %> 보완 필요
              </span>
            <% end %>
            <% strong_areas.first(2).each do |area| %>
              <span class="px-4 py-2 rounded-lg bg-emerald-100 text-emerald-700 text-sm font-semibold border border-emerald-200">
                ✓ <%= area %>
              </span>
            <% end %>
          </div>
        </div>

        <%# Action Cards (3 Color Variants) %>
        <% if analysis[:actions].present? %>
          <div class="mb-6">
            <h3 class="text-lg font-bold text-slate-800 mb-6 flex items-center gap-2">
              <span class="text-2xl">🚀</span> 지금 필요한 액션
            </h3>

            <%
              action_colors = [
                { bg: "from-blue-50 to-blue-100/50", border: "border-blue-300", icon_bg: "bg-blue-600", label_bg: "bg-blue-600", glow: "from-blue-500 to-blue-600" },
                { bg: "from-purple-50 to-purple-100/50", border: "border-purple-300", icon_bg: "bg-purple-600", label_bg: "bg-purple-600", glow: "from-purple-500 to-purple-600" },
                { bg: "from-emerald-50 to-emerald-100/50", border: "border-emerald-300", icon_bg: "bg-emerald-600", label_bg: "bg-emerald-600", glow: "from-emerald-500 to-emerald-600" }
              ]
              action_emojis = ["🎯", "💡", "🔑"]
            %>

            <div class="grid md:grid-cols-3 gap-6">
              <% analysis[:actions].first(3).each_with_index do |action, index| %>
                <% c = action_colors[index % 3] %>
                <div class="group relative cursor-pointer animate-card-lift h-full">
                  <%# 호버 시 글로우 배경 %>
                  <div class="absolute inset-0 bg-gradient-to-br <%= c[:glow] %> rounded-2xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-300"></div>

                  <%# 카드 본체 %>
                  <div class="relative bg-gradient-to-br <%= c[:bg] %> rounded-2xl p-7 border-2 <%= c[:border] %> shadow-lg group-hover:shadow-2xl transition-all duration-300 h-full flex flex-col">
                    <%# 아이콘 박스 (14x14 = 56px) %>
                    <div class="w-14 h-14 <%= c[:icon_bg] %> rounded-xl flex items-center justify-center mb-5 shadow-md">
                      <span class="text-3xl"><%= action_emojis[index] || "💼" %></span>
                    </div>

                    <%# 액션 라벨 %>
                    <div class="mb-3">
                      <span class="inline-block <%= c[:label_bg] %> text-white px-3 py-1.5 rounded-lg font-bold uppercase tracking-wide text-sm">
                        ACTION <%= index + 1 %>
                      </span>
                    </div>

                    <%# 제목 %>
                    <h4 class="font-bold text-slate-800 mb-3 text-lg"><%= action[:title] %></h4>

                    <%# 설명 %>
                    <p class="text-slate-700 leading-relaxed"><%= action[:description] %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- =============================================== -->
    <!-- SECTION 2: THE TEAM BUILDER (BrowserCard Style) -->
    <!-- =============================================== -->
    <% if recommended_experts.present? %>
      <section class="bg-white rounded-xl shadow-2xl overflow-hidden border border-slate-300/50 animate-stagger-2" data-controller="expert-overlay">
        <%# macOS 윈도우 헤더 %>
        <div class="bg-gradient-to-b from-slate-200 to-slate-100 border-b border-slate-300/70 px-4 py-3">
          <div class="flex items-center justify-between">
            <div class="flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500 border border-red-600/30"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500 border border-yellow-600/30"></div>
              <div class="w-3 h-3 rounded-full bg-green-500 border border-green-600/30"></div>
            </div>
            <div class="flex-1 mx-4 hidden md:block">
              <div class="bg-white rounded-md px-3 py-1.5 text-sm text-slate-500 border border-slate-200 text-center">
                undrew.ai/team-builder
              </div>
            </div>
            <div class="flex items-center gap-2">
              <div class="h-6 w-6 rounded-full bg-cyan-500/20 flex items-center justify-center">
                <span class="text-xs font-bold text-cyan-600">2</span>
              </div>
              <span class="text-sm font-semibold text-cyan-600 uppercase tracking-wider">The Team Builder</span>
            </div>
          </div>
        </div>

        <%# 카드 본문 %>
        <div class="p-4 sm:p-6 md:p-8 lg:p-12">
          <%# 섹션 타이틀 %>
          <div class="text-center mb-8 sm:mb-10">
            <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 mb-2">부족한 점수를 채워줄 최적의 스쿼드</h2>
            <p class="text-slate-600">이 전문가들과 함께하면 아이디어가 더욱 완성도 높아집니다</p>
          </div>

          <%# Score Projection Box (Amber/Orange) %>
          <%
            total_boost = recommended_experts.sum { |p| p[:score_boost] || 10 }
            projected_score = [score + total_boost, 100].min
          %>
          <div class="bg-gradient-to-br from-amber-50 to-orange-50 rounded-2xl p-8 border-2 border-amber-300 shadow-lg mb-10">
            <div class="flex flex-col md:flex-row items-start gap-5">
              <%# 아이콘 %>
              <div class="w-16 h-16 bg-gradient-to-br from-amber-400 to-orange-500 rounded-full flex items-center justify-center flex-shrink-0 shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
              </div>

              <div class="flex-1">
                <h4 class="font-bold text-amber-900 mb-3" style="font-size: 1.3rem;">점수 상승 예상</h4>
                <p class="text-amber-800 mb-4" style="font-size: 1.05rem;">
                  이 팀을 구성하면 아이디어 점수가
                  <span class="font-bold text-amber-900"><%= score %>점 → <%= projected_score %>점</span>으로 상승합니다
                </p>

                <%# 진행바 %>
                <div class="flex items-center gap-3">
                  <div class="flex-1 bg-amber-200/60 rounded-full h-4 shadow-inner">
                    <div class="bg-gradient-to-r from-amber-500 to-orange-600 h-4 rounded-full shadow-md transition-all duration-1000"
                         style="width: <%= projected_score %>%;"></div>
                  </div>
                  <span class="font-bold text-amber-900 text-xl">+<%= total_boost %>점</span>
                </div>
              </div>
            </div>
          </div>

          <%# Required Expertise Tags %>
          <% if analysis[:required_expertise].present? %>
            <div class="mb-8">
              <h3 class="font-semibold text-slate-700 mb-4" style="font-size: 1.1rem;">필요한 역할</h3>
              <div class="flex flex-wrap gap-3">
                <% (analysis[:required_expertise][:roles] || []).each do |role| %>
                  <span class="bg-indigo-100 text-indigo-700 px-5 py-2.5 rounded-lg border-2 border-indigo-300 font-semibold">
                    <%= role %>
                  </span>
                <% end %>
                <% (analysis[:required_expertise][:skills] || []).first(4).each do |skill| %>
                  <span class="bg-slate-100 text-slate-600 px-5 py-2.5 rounded-lg border-2 border-slate-300 font-medium">
                    <%= skill %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>

          <%# Expert Cards Grid %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <% recommended_experts.first(4).each_with_index do |prediction, index| %>
              <%= render "onboarding/expert_card_v2", prediction: prediction, card_index: index %>
            <% end %>
          </div>

          <%# More Experts Link %>
          <div class="pt-6 border-t border-slate-200">
            <%= link_to search_path(tab: "users"), class: "flex items-center justify-center gap-2 text-blue-600 font-semibold link-hover relative" do %>
              더 많은 전문가 찾기
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>

    <!-- =============================================== -->
    <!-- SECTION 3: THE EVIDENCE (BrowserCard Style) -->
    <!-- =============================================== -->
    <section class="bg-white rounded-xl shadow-2xl overflow-hidden border border-slate-300/50 animate-stagger-3" data-controller="accordion">
      <%# macOS 윈도우 헤더 %>
      <div class="bg-gradient-to-b from-slate-200 to-slate-100 border-b border-slate-300/70 px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500 border border-red-600/30"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500 border border-yellow-600/30"></div>
            <div class="w-3 h-3 rounded-full bg-green-500 border border-green-600/30"></div>
          </div>
          <div class="flex-1 mx-4 hidden md:block">
            <div class="bg-white rounded-md px-3 py-1.5 text-sm text-slate-500 border border-slate-200 text-center">
              undrew.ai/evidence
            </div>
          </div>
          <div class="flex items-center gap-2">
            <div class="h-6 w-6 rounded-full bg-purple-500/20 flex items-center justify-center">
              <span class="text-xs font-bold text-purple-600">3</span>
            </div>
            <span class="text-sm font-semibold text-purple-600 uppercase tracking-wider">The Evidence</span>
          </div>
        </div>
      </div>

      <%# 아코디언 트리거 %>
      <div data-accordion-target="item">
        <button type="button"
                class="w-full flex items-center justify-between p-6 bg-gradient-to-r from-slate-50 to-purple-50 btn-hover group"
                data-action="click->accordion#toggle"
                data-accordion-target="trigger">
          <div class="flex items-center gap-4">
            <%# 아이콘 박스 %>
            <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
              <span class="text-3xl">📋</span>
            </div>

            <div class="text-left">
              <h3 class="font-bold text-slate-800 mb-1" style="font-size: 1.3rem;">심층 분석 레포트</h3>
              <p class="text-slate-600">AI가 작성한 상세 분석 보고서를 확인하세요</p>
            </div>
          </div>

          <div class="flex items-center gap-2">
            <span class="text-purple-600 font-semibold hidden md:block" data-accordion-target="label">닫기</span>
            <svg class="w-6 h-6 text-purple-600 transition-transform group-hover:translate-y-1 rotate-180"
                 data-accordion-target="icon"
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </button>

        <%# 확장 콘텐츠 - 기본값 펼쳐짐 %>
        <div class="px-4 sm:px-6 md:px-8 pb-6 sm:pb-8 space-y-6 sm:space-y-8" data-accordion-target="content">

          <%# 📊 시장 분석 데이터 %>
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-200">
            <h4 class="font-bold text-slate-800 mb-4 flex items-center gap-2 text-lg">
              <span>📊</span> 시장 분석 데이터
            </h4>
            <div class="space-y-4">
              <% if analysis.dig(:market_analysis, :market_size).present? %>
                <div>
                  <p class="text-sm font-semibold text-slate-600 mb-1">시장 규모</p>
                  <p class="text-slate-800"><%= analysis.dig(:market_analysis, :market_size) %></p>
                </div>
              <% end %>

              <% if analysis.dig(:market_analysis, :trends).present? %>
                <div>
                  <p class="text-sm font-semibold text-slate-600 mb-1">트렌드</p>
                  <p class="text-slate-800"><%= analysis.dig(:market_analysis, :trends) %></p>
                </div>
              <% end %>

              <% if analysis.dig(:market_analysis, :potential).present? %>
                <div class="flex items-center gap-3">
                  <span class="text-sm text-slate-600">시장 잠재력:</span>
                  <span class="px-4 py-1.5 rounded-full bg-blue-600 text-white text-sm font-bold"><%= analysis.dig(:market_analysis, :potential) %></span>
                </div>
              <% end %>

              <% competitors = analysis.dig(:market_analysis, :competitors) %>
              <% if competitors.present? %>
                <div>
                  <p class="text-sm font-semibold text-slate-600 mb-2">주요 경쟁사</p>
                  <div class="flex flex-wrap gap-2">
                    <% competitors.each do |competitor| %>
                      <span class="px-4 py-2 rounded-lg bg-white border border-slate-200 text-slate-700 font-medium shadow-sm"><%= competitor %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if analysis.dig(:market_analysis, :differentiation).present? %>
                <div>
                  <p class="text-sm font-semibold text-slate-600 mb-1">차별화 포인트</p>
                  <p class="text-slate-800"><%= analysis.dig(:market_analysis, :differentiation) %></p>
                </div>
              <% end %>
            </div>
          </div>

          <%# 👥 타겟 사용자 정의 %>
          <% target_users = analysis[:target_users] %>
          <% if target_users.present? %>
            <div class="bg-gradient-to-br from-emerald-50 to-teal-50 rounded-2xl p-6 border border-emerald-200">
              <h4 class="font-bold text-slate-800 mb-4 flex items-center gap-2 text-lg">
                <span>👥</span> 타겟 사용자 정의
              </h4>
              <% if target_users[:primary].present? %>
                <p class="text-slate-700 mb-4"><%= target_users[:primary] %></p>
              <% end %>

              <% personas = target_users[:personas] %>
              <% if personas.present? %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <% personas.each do |persona| %>
                    <div class="bg-white rounded-xl p-5 border border-emerald-100 shadow-sm">
                      <p class="font-bold text-slate-800 mb-1"><%= persona[:name] %></p>
                      <p class="text-sm text-slate-500 mb-2"><%= persona[:age_range] %></p>
                      <p class="text-slate-600 text-sm"><%= persona[:description] %></p>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <% characteristics = target_users[:characteristics] %>
                <% if characteristics.present? %>
                  <div class="flex flex-wrap gap-2">
                    <% characteristics.each do |char| %>
                      <span class="px-4 py-2 rounded-lg bg-emerald-100 text-emerald-700 font-medium"><%= char %></span>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>

          <%# 🚀 MVP 필수 기능 %>
          <% recommendations = analysis[:recommendations] %>
          <% mvp_features = recommendations&.dig(:mvp_features) %>
          <% if mvp_features.present? %>
            <div class="bg-gradient-to-br from-amber-50 to-yellow-50 rounded-2xl p-6 border border-amber-200">
              <h4 class="font-bold text-slate-800 mb-2 flex items-center gap-2 text-lg">
                <span>🚀</span> MVP 필수 기능
              </h4>
              <p class="text-slate-600 mb-4">우선순위가 높은 기능 Top <%= mvp_features.length %></p>
              <div class="space-y-3">
                <% mvp_features.each_with_index do |feature, index| %>
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center shadow-md">
                      <span class="text-sm font-bold text-white"><%= index + 1 %></span>
                    </div>
                    <p class="text-slate-800 pt-1"><%= feature %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <%# ⚠️ 예상 과제 %>
          <% challenges = recommendations&.dig(:challenges) %>
          <% if challenges.present? %>
            <div class="bg-gradient-to-br from-red-50 to-rose-50 rounded-2xl p-6 border border-red-200">
              <h4 class="font-bold text-slate-800 mb-4 flex items-center gap-2 text-lg">
                <span>⚠️</span> 예상 과제
              </h4>
              <div class="space-y-3">
                <% challenges.each do |challenge| %>
                  <div class="bg-white rounded-xl p-4 border border-red-100 shadow-sm">
                    <p class="text-red-800"><%= challenge %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <%# 🗺️ 다음 단계 로드맵 %>
          <% next_steps = recommendations&.dig(:next_steps) %>
          <% if next_steps.present? %>
            <div class="bg-gradient-to-br from-violet-50 to-purple-50 rounded-2xl p-6 border border-violet-200">
              <h4 class="font-bold text-slate-800 mb-2 flex items-center gap-2 text-lg">
                <span>🗺️</span> 다음 단계
              </h4>
              <p class="text-slate-600 mb-4">1단계 액션 이후의 로드맵</p>
              <ul class="space-y-3">
                <% next_steps.each do |step| %>
                  <li class="flex items-start gap-3 text-slate-700">
                    <span class="text-violet-600 mt-0.5 text-lg">•</span>
                    <span><%= step %></span>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <%# CTA Buttons %>
    <div class="space-y-4 pt-6 animate-stagger-4">
      <%# Primary CTA %>
      <%= link_to new_post_path(type: 'community'),
          class: "w-full flex items-center justify-center gap-3 px-8 py-5 rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-bold shadow-xl btn-hover",
          style: "font-size: 1.1rem;",
          data: { action: "click->ai-result#goToPost", summary: analysis[:summary] } do %>
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        이 아이디어로 커뮤니티에 게시하기
      <% end %>

      <%# Secondary CTA %>
      <%= link_to community_path, class: "w-full flex items-center justify-center gap-2 px-8 py-4 rounded-xl border-2 border-slate-300 bg-white text-slate-700 font-semibold btn-hover" do %>
        커뮤니티 보러가기
      <% end %>

      <%# 저장 체크박스 - 버튼 하단 중앙 %>
      <%# 페이지 이탈 시 체크 상태면 저장 (turbo:before-visit, beforeunload) %>
      <div class="flex justify-center pt-2"
           data-controller="save-analysis"
           data-save-analysis-url-value="<%= save_analysis_path(idea_analysis) %>"
           data-save-analysis-already-saved-value="<%= idea_analysis.is_saved %>">
        <label class="inline-flex items-center gap-2 cursor-pointer group">
          <input type="checkbox"
                 <%= 'checked' if idea_analysis.is_saved %>
                 class="h-5 w-5 rounded border-slate-300 text-emerald-500 focus:ring-emerald-500 cursor-pointer"
                 data-save-analysis-target="checkbox"
                 data-action="change->save-analysis#toggle">
          <span class="text-sm transition-colors <%= idea_analysis.is_saved ? 'text-emerald-600' : 'text-slate-600 group-hover:text-slate-800' %>"
                data-save-analysis-target="label">
            <%= idea_analysis.is_saved ? '저장됨' : '아이디어 저장' %>
          </span>
        </label>
      </div>
    </div>

  </div>
<% end %>
