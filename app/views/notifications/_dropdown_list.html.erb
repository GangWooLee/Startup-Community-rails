<%# 알림 드롭다운 목록 (Turbo Stream 업데이트용) %>
<%# locals: (notifications:) %>

<% valid_notifications = notifications.select { |n| n.actor.present? } %>

<% if valid_notifications.any? %>
  <% valid_notifications.each do |notification| %>
    <%= link_to notification_path(notification),
        class: "flex items-start gap-3 p-3 hover:bg-secondary/50 transition-colors #{notification.unread? ? 'bg-primary/5' : ''}",
        data: { turbo_method: :get, turbo_frame: "_top" } do %>

      <%# 액터 아바타 %>
      <div class="flex-shrink-0 relative">
        <% if notification.actor.has_profile_image? %>
          <% if notification.actor.avatar.attached? %>
            <%= image_tag notification.actor.avatar.variant(:thumb),
                class: "w-9 h-9 rounded-full object-cover",
                alt: notification.actor.name %>
          <% else %>
            <img src="<%= notification.actor.avatar_url %>"
                 class="w-9 h-9 rounded-full object-cover"
                 alt="<%= notification.actor.name %>">
          <% end %>
        <% else %>
          <div class="w-9 h-9 rounded-full bg-gradient-to-br from-primary to-primary/70 flex items-center justify-center">
            <span class="text-xs font-semibold text-primary-foreground">
              <%= notification.actor.name&.first&.upcase %>
            </span>
          </div>
        <% end %>

        <%# 액션 아이콘 뱃지 %>
        <div class="absolute -bottom-0.5 -right-0.5 w-4 h-4 rounded-full flex items-center justify-center
                    <%= notification_icon_bg(notification.action) %>">
          <svg class="w-2.5 h-2.5 text-white" fill="<%= notification.action == 'like' ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
            <% if notification.action == 'comment' || notification.action == 'reply' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            <% elsif notification.action == 'like' %>
              <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            <% else %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            <% end %>
          </svg>
        </div>
      </div>

      <%# 알림 내용 %>
      <div class="flex-1 min-w-0">
        <p class="text-xs text-foreground line-clamp-2">
          <span class="font-semibold"><%= notification.actor.name %></span>
          <span class="text-muted-foreground"><%= notification_action_text(notification.action) %></span>
        </p>
        <p class="text-xs text-muted-foreground mt-0.5">
          <%= time_ago_in_words(notification.created_at) %> 전
        </p>
      </div>

      <%# 읽지 않음 표시 %>
      <% if notification.unread? %>
        <div class="flex-shrink-0">
          <div class="w-2 h-2 rounded-full bg-primary"></div>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div class="flex flex-col items-center justify-center py-8 px-4 text-center">
    <svg class="h-8 w-8 text-muted-foreground mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
    </svg>
    <p class="text-xs text-muted-foreground">알림이 없습니다</p>
  </div>
<% end %>
