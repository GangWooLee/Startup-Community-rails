<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <!-- 뒤로가기 버튼 -->
        <%= render_button variant: :ghost, class: "h-9 w-9 p-0", data: { controller: "navigation", navigation_fallback_value: root_path, navigation_reset_on_connect_value: true, action: "click->navigation#goBack" } do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>

        <!-- 타이틀 -->
        <div>
          <h1 class="text-xl font-bold">마이페이지</h1>
          <p class="text-xs text-muted-foreground">내 프로필 및 활동 관리</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <!-- Profile Card -->
    <div class="rounded-xl border bg-card text-card-foreground p-6 mb-6 relative">
      <!-- Edit Profile Button (Top Right) -->
      <%= render_button variant: :outline, as: :link, href: edit_my_page_path, class: "absolute top-4 right-4 h-8 px-3 text-xs gap-1.5" do %>
        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        수정
      <% end %>

      <!-- AI Analysis History Button -->
      <%= render_button variant: :outline, as: :link, href: my_idea_analyses_path, class: "absolute top-14 right-4 h-8 px-3 text-xs gap-1.5" do %>
        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        AI 분석 기록
      <% end %>

      <div class="flex items-start gap-4 mb-4 pr-16">
        <!-- Profile Image - render_user_avatar 헬퍼 사용 -->
        <%= render_user_avatar(@user, size: :lg, class: "flex-shrink-0") %>

        <!-- Profile Info -->
        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-2 flex-wrap">
            <h2 class="text-xl font-bold"><%= @user.name %></h2>
            <% @user.availability_badges.each do |badge| %>
              <span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-0.5 text-xs font-medium text-white <%= badge[:color] %>">
                <span class="h-1.5 w-1.5 rounded-full bg-white"></span>
                <%= badge[:label] %>
              </span>
            <% end %>
          </div>

          <% if @user.role_title.present? %>
            <p class="text-sm text-muted-foreground mt-1"><%= @user.role_title %></p>
          <% end %>

          <% if @user.affiliation.present? %>
            <p class="text-sm text-muted-foreground">
              <svg class="inline-block h-3.5 w-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <%= @user.affiliation %>
            </p>
          <% end %>

          <p class="text-xs text-muted-foreground mt-1"><%= @user.email %></p>
        </div>
      </div>

      <!-- Bio -->
      <% if @user.bio.present? %>
        <div class="mb-4">
          <p class="text-sm text-foreground whitespace-pre-wrap"><%= @user.bio %></p>
        </div>
      <% end %>

      <!-- Skills -->
      <% if @user.skills_array.any? %>
        <div class="mb-4">
          <h3 class="text-sm font-medium text-muted-foreground mb-2">기술 스택</h3>
          <div class="flex flex-wrap gap-2">
            <% @user.skills_array.each do |skill| %>
              <%= render_badge skill, variant: :secondary, class: "text-xs" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Related Links -->
      <% if @user.linkedin_url.present? || @user.github_url.present? || @user.portfolio_url.present? %>
        <div class="flex flex-wrap gap-2 mb-4">
          <% if @user.linkedin_url.present? %>
            <%= link_to @user.linkedin_url, target: "_blank", rel: "noopener noreferrer",
                class: "inline-flex items-center gap-1.5 rounded-md bg-blue-600 px-3 py-1.5 text-xs font-medium text-white btn-hover" do %>
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            <% end %>
          <% end %>

          <% if @user.github_url.present? && safe_url?(@user.github_url) %>
            <%= link_to @user.github_url, target: "_blank", rel: "noopener noreferrer",
                class: "inline-flex items-center gap-1.5 rounded-md bg-foreground px-3 py-1.5 text-xs font-medium text-background btn-hover" do %>
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
              GitHub
            <% end %>
          <% end %>

          <% if @user.portfolio_url.present? && safe_url?(@user.portfolio_url) %>
            <%= link_to @user.portfolio_url, target: "_blank", rel: "noopener noreferrer",
                class: "inline-flex items-center gap-1.5 rounded-md bg-teal-500 px-3 py-1.5 text-xs font-medium text-white btn-hover" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
              포트폴리오
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>

    <!-- My Posts -->
    <div class="mb-6">
      <h3 class="text-lg font-bold mb-4">내가 쓴 글</h3>

      <!-- 커뮤니티 글 -->
      <div class="mb-4" data-controller="expand-list" data-expand-list-limit-value="4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-muted-foreground">커뮤니티</span>
          <span class="text-xs text-muted-foreground"><%= @my_community_posts.size %>개</span>
        </div>
        <div class="space-y-2">
          <% if @my_community_posts.any? %>
            <% @my_community_posts.each do |post| %>
              <div data-expand-list-target="item">
                <%= link_to post_path(post.id) do %>
                  <div class="bg-card rounded-lg p-4 border border-border card-hover cursor-pointer">
                    <p class="font-medium mb-1 line-clamp-2"><%= post.title %></p>
                    <div class="flex items-center gap-3 text-xs text-muted-foreground">
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <%= post.likes_count %>
                      </span>
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                        <%= post.comments_count %>
                      </span>
                      <span class="ml-auto"><%= time_ago_in_words(post.created_at) %> 전</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            <% if @my_community_posts.size > 4 %>
              <button type="button"
                      data-expand-list-target="button"
                      data-action="click->expand-list#toggle"
                      class="w-full py-2 text-sm text-muted-foreground btn-hover flex items-center justify-center gap-1">
                <span data-expand-list-target="buttonText">더보기 (<%= @my_community_posts.size - 4 %>개)</span>
                <svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            <% end %>
          <% else %>
            <div class="text-center py-6 text-muted-foreground bg-card rounded-lg border border-border">
              <p class="text-sm">커뮤니티에 작성한 글이 없습니다</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 외주 글 -->
      <div data-controller="expand-list" data-expand-list-limit-value="4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-muted-foreground">외주</span>
          <span class="text-xs text-muted-foreground"><%= @my_outsourcing_posts.size %>개</span>
        </div>
        <div class="space-y-2">
          <% if @my_outsourcing_posts.any? %>
            <% @my_outsourcing_posts.each do |post| %>
              <div data-expand-list-target="item">
                <%= link_to post_path(post.id) do %>
                  <div class="bg-card rounded-lg p-4 border border-border card-hover cursor-pointer">
                    <div class="flex items-center gap-2 mb-1">
                      <% if post.hiring? %>
                        <span class="inline-flex items-center rounded-md bg-blue-500/10 text-blue-600 px-2 py-0.5 text-xs font-semibold">구인</span>
                      <% else %>
                        <span class="inline-flex items-center rounded-md bg-green-500/10 text-green-600 px-2 py-0.5 text-xs font-semibold">구직</span>
                      <% end %>
                    </div>
                    <p class="font-medium mb-1 line-clamp-2"><%= post.title %></p>
                    <div class="flex items-center gap-3 text-xs text-muted-foreground">
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <%= post.likes_count %>
                      </span>
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                        <%= post.comments_count %>
                      </span>
                      <span class="ml-auto"><%= time_ago_in_words(post.created_at) %> 전</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            <% if @my_outsourcing_posts.size > 4 %>
              <button type="button"
                      data-expand-list-target="button"
                      data-action="click->expand-list#toggle"
                      class="w-full py-2 text-sm text-muted-foreground btn-hover flex items-center justify-center gap-1">
                <span data-expand-list-target="buttonText">더보기 (<%= @my_outsourcing_posts.size - 4 %>개)</span>
                <svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            <% end %>
          <% else %>
            <div class="text-center py-6 text-muted-foreground bg-card rounded-lg border border-border">
              <p class="text-sm">외주에 작성한 글이 없습니다</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Bookmarked Posts -->
    <div class="mb-6">
      <h3 class="text-lg font-bold mb-4">스크랩한 글</h3>

      <!-- 커뮤니티 스크랩 -->
      <div class="mb-4" data-controller="expand-list" data-expand-list-limit-value="4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-muted-foreground">커뮤니티</span>
          <span class="text-xs text-muted-foreground"><%= @bookmarked_community_posts.size %>개</span>
        </div>
        <div class="space-y-2">
          <% if @bookmarked_community_posts.any? %>
            <% @bookmarked_community_posts.each do |post| %>
              <div data-expand-list-target="item">
                <%= link_to post_path(post.id) do %>
                  <div class="bg-card rounded-lg p-4 border border-border card-hover cursor-pointer">
                    <p class="font-medium mb-1 line-clamp-2"><%= post.title %></p>
                    <div class="flex items-center gap-3 text-xs text-muted-foreground">
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <%= post.likes_count %>
                      </span>
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                        <%= post.comments_count %>
                      </span>
                      <span class="ml-auto"><%= time_ago_in_words(post.created_at) %> 전</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            <% if @bookmarked_community_posts.size > 4 %>
              <button type="button"
                      data-expand-list-target="button"
                      data-action="click->expand-list#toggle"
                      class="w-full py-2 text-sm text-muted-foreground btn-hover flex items-center justify-center gap-1">
                <span data-expand-list-target="buttonText">더보기 (<%= @bookmarked_community_posts.size - 4 %>개)</span>
                <svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            <% end %>
          <% else %>
            <div class="text-center py-6 text-muted-foreground bg-card rounded-lg border border-border">
              <p class="text-sm">스크랩한 커뮤니티 글이 없습니다</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 외주 스크랩 -->
      <div data-controller="expand-list" data-expand-list-limit-value="4">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-muted-foreground">외주</span>
          <span class="text-xs text-muted-foreground"><%= @bookmarked_outsourcing_posts.size %>개</span>
        </div>
        <div class="space-y-2">
          <% if @bookmarked_outsourcing_posts.any? %>
            <% @bookmarked_outsourcing_posts.each do |post| %>
              <div data-expand-list-target="item">
                <%= link_to post_path(post.id) do %>
                  <div class="bg-card rounded-lg p-4 border border-border card-hover cursor-pointer">
                    <div class="flex items-center gap-2 mb-1">
                      <% if post.hiring? %>
                        <span class="inline-flex items-center rounded-md bg-blue-500/10 text-blue-600 px-2 py-0.5 text-xs font-semibold">구인</span>
                      <% else %>
                        <span class="inline-flex items-center rounded-md bg-green-500/10 text-green-600 px-2 py-0.5 text-xs font-semibold">구직</span>
                      <% end %>
                    </div>
                    <p class="font-medium mb-1 line-clamp-2"><%= post.title %></p>
                    <div class="flex items-center gap-3 text-xs text-muted-foreground">
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <%= post.likes_count %>
                      </span>
                      <span class="inline-flex items-center gap-1">
                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                        <%= post.comments_count %>
                      </span>
                      <span class="ml-auto"><%= time_ago_in_words(post.created_at) %> 전</span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            <% if @bookmarked_outsourcing_posts.size > 4 %>
              <button type="button"
                      data-expand-list-target="button"
                      data-action="click->expand-list#toggle"
                      class="w-full py-2 text-sm text-muted-foreground btn-hover flex items-center justify-center gap-1">
                <span data-expand-list-target="buttonText">더보기 (<%= @bookmarked_outsourcing_posts.size - 4 %>개)</span>
                <svg class="h-4 w-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            <% end %>
          <% else %>
            <div class="text-center py-6 text-muted-foreground bg-card rounded-lg border border-border">
              <p class="text-sm">스크랩한 외주 글이 없습니다</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="space-y-3">
      <!-- Account Settings -->
