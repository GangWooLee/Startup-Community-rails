<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<%# Maker's Studio - My Page %>
<div class="min-h-screen bg-[#FDFBF7] pb-20">
  <%# Noise Texture Background %>
  <div class="fixed inset-0 pointer-events-none opacity-30 z-0"
       style="background-image: url('data:image/svg+xml,%3Csvg viewBox=\"0 0 200 200\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cfilter id=\"noise\"%3E%3CfeTurbulence type=\"fractalNoise\" baseFrequency=\"0.65\" numOctaves=\"3\" stitchTiles=\"stitch\"/%3E%3C/filter%3E%3Crect width=\"100%\" height=\"100%\" filter=\"url(%23noise)\" opacity=\"0.4\"/%3E%3C/svg%3E');">
  </div>

  <%# Header %>
  <header class="sticky top-0 bg-[#FDFBF7]/95 backdrop-blur-sm border-b border-stone-200/60 z-40">
    <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <button type="button"
                class="p-2 rounded-xl text-stone-500 hover:bg-stone-100 transition-colors"
                data-controller="navigation"
                data-navigation-fallback-value="<%= root_path %>"
                data-action="click->navigation#goBack">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <div>
          <h1 class="text-lg font-bold text-stone-800">마이페이지</h1>
          <p class="text-xs text-stone-500">내 프로필 및 활동 관리</p>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <%# AI 분석 기록 %>
        <%= link_to my_idea_analyses_path,
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium
                    text-orange-600 bg-orange-50 hover:bg-orange-100
                    rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
          <span class="hidden sm:inline">AI 분석</span>
        <% end %>

        <%# 계정 설정 %>
        <%= link_to settings_path,
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium
                    text-stone-600 hover:text-stone-800 hover:bg-stone-100
                    rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span class="hidden sm:inline">설정</span>
        <% end %>
      </div>
    </div>
  </header>

  <%# Main Content - 2 Column Layout %>
  <main class="relative z-10 max-w-6xl mx-auto px-4 py-6">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">

      <%# Left: Sticky Sidebar (col-span-4) %>
      <aside class="lg:col-span-4 mb-6 lg:mb-0">
        <div class="lg:sticky lg:top-24">
          <%= render "profiles/sidebar",
              user: @user,
              is_own_profile: true,
              is_following: false %>
        </div>
      </aside>

      <%# Right: Main Content (col-span-8) %>
      <div class="lg:col-span-8">
        <%# Cover Image Hero (편집 가능) %>
        <%= render "profiles/cover", user: @user, editable: true %>

        <%# Tabbed Content (저장됨 탭 포함) %>
        <%= render "profiles/tabs",
            user: @user,
            posts: @posts,
            outsourcing_posts: @outsourcing_posts,
            is_own_profile: true,
            viewer: @viewer %>
      </div>

    </div>
  </main>
</div>
