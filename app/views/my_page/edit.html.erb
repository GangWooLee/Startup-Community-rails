<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center gap-4">
      <%= link_to my_page_path, class: "text-muted-foreground hover:text-foreground" do %>
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold">프로필 수정</h1>
        <p class="text-sm text-muted-foreground">프로필 정보를 수정하세요</p>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <%= form_with model: @user, url: my_page_path, method: :patch, local: true, class: "space-y-6" do |f| %>
      <!-- Error Messages -->
      <% if @user.errors.any? %>
        <div class="rounded-md bg-destructive/10 border border-destructive/20 p-4">
          <div class="flex items-start gap-3">
            <svg class="h-5 w-5 text-destructive flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="flex-1">
              <h3 class="text-sm font-medium text-destructive mb-2">오류가 발생했습니다:</h3>
              <ul class="list-disc list-inside text-sm text-destructive space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Profile Image -->
      <div class="bg-card rounded-xl p-6 border border-border">
        <h3 class="text-lg font-semibold mb-4">프로필 사진</h3>
        <div class="flex items-center gap-6">
          <div class="h-24 w-24 rounded-full bg-secondary flex items-center justify-center overflow-hidden flex-shrink-0">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, alt: @user.name, class: "h-full w-full object-cover" %>
            <% elsif @user.avatar_url.present? %>
              <%= image_tag @user.avatar_url, alt: @user.name, class: "h-full w-full object-cover" %>
            <% else %>
              <span class="text-3xl font-semibold text-muted-foreground"><%= @user.name[0] %></span>
            <% end %>
          </div>
          <div class="flex-1">
            <label class="block mb-2">
              <span class="text-sm font-medium text-foreground">새 프로필 사진 업로드</span>
              <%= f.file_field :avatar,
                  accept: "image/*",
                  class: "mt-2 block w-full text-sm text-muted-foreground
                         file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0
                         file:text-sm file:font-medium file:bg-primary file:text-primary-foreground
                         hover:file:bg-primary/90 file:cursor-pointer cursor-pointer" %>
            </label>
            <p class="text-xs text-muted-foreground">JPG, PNG, GIF (최대 5MB)</p>
          </div>
        </div>
      </div>

      <!-- Basic Info -->
      <div class="bg-card rounded-xl p-6 border border-border space-y-4">
        <h3 class="text-lg font-semibold mb-4">기본 정보</h3>

        <!-- Name Field -->
        <div>
          <%= f.label :name, "이름 *", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.text_field :name,
              required: true,
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
        </div>

        <!-- Email (Read Only) -->
        <div>
          <label class="block text-sm font-medium text-foreground mb-2">이메일</label>
          <input type="email" value="<%= @user.email %>" disabled
                 class="w-full px-3 py-2 rounded-md border border-border bg-muted text-muted-foreground cursor-not-allowed">
          <p class="mt-1 text-xs text-muted-foreground">이메일은 변경할 수 없습니다</p>
        </div>

        <!-- Affiliation -->
        <div>
          <%= f.label :affiliation, "소속", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.text_field :affiliation,
              placeholder: "예: 21학번/CS, 스타트업 재직중, 프리랜서",
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
          <p class="mt-1 text-xs text-muted-foreground">이름 옆에 표시됩니다</p>
        </div>

        <!-- Role Title -->
        <div>
          <%= f.label :role_title, "직군/역할", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.text_field :role_title,
              placeholder: "예: 백엔드 개발자, UI/UX 디자이너, PM",
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
        </div>

        <!-- Bio -->
        <div>
          <%= f.label :bio, "한 줄 소개", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.text_area :bio,
              placeholder: "빠르게 MVP 만들어서 검증하는 개발자입니다.",
              rows: 2,
              maxlength: 500,
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring resize-none" %>
          <p class="mt-1 text-xs text-muted-foreground">프로필에 인용문처럼 표시됩니다 (최대 500자)</p>
        </div>
      </div>

      <!-- Activity Status -->
      <div class="bg-card rounded-xl p-6 border border-border space-y-4">
        <h3 class="text-lg font-semibold mb-4">활동 상태</h3>
        <p class="text-sm text-muted-foreground mb-4">현재 상태를 표시하여 다른 사용자들에게 연락 가능 여부를 알려주세요. 여러 개를 선택할 수 있습니다.</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <% User::AVAILABILITY_OPTIONS.each do |key, option| %>
            <label class="flex items-center gap-3 p-3 rounded-lg border border-border hover:bg-secondary/50 cursor-pointer transition-colors <%= @user.has_status?(key) ? 'bg-secondary/50 border-primary' : '' %>">
              <input type="checkbox"
                     name="user[availability_statuses][]"
                     value="<%= key %>"
                     <%= 'checked' if @user.has_status?(key) %>
                     class="h-4 w-4 rounded border-border text-primary focus:ring-primary">
              <div class="flex-1">
                <div class="flex items-center gap-2">
                  <span class="font-medium"><%= option[:label] %></span>
                  <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-xs font-semibold text-white <%= option[:color] %>">
                    <%= option[:label] %>
                  </span>
                </div>
              </div>
            </label>
          <% end %>
        </div>

        <!-- Custom Status -->
        <div class="mt-4 pt-4 border-t border-border">
          <label class="block text-sm font-medium text-foreground mb-2">
            기타 상태 (직접 입력)
          </label>
          <div class="flex items-center gap-3">
            <%= f.text_field :custom_status,
                placeholder: "예: 휴식 중, 공부 중, 이직 준비 중",
                maxlength: 30,
                class: "flex-1 px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
            <% if @user.custom_status.present? %>
              <span class="inline-flex items-center gap-1 rounded-full px-2.5 py-0.5 text-xs font-semibold text-white bg-pink-500">
                <%= @user.custom_status %>
              </span>
            <% end %>
          </div>
          <p class="mt-1 text-xs text-muted-foreground">원하는 상태를 직접 입력하세요 (최대 30자). 분홍색 뱃지로 표시됩니다.</p>
        </div>

        <!-- Hidden field to ensure empty array is sent when nothing is checked -->
        <input type="hidden" name="user[availability_statuses][]" value="">
      </div>

      <!-- Skills -->
      <div class="bg-card rounded-xl p-6 border border-border space-y-4">
        <h3 class="text-lg font-semibold mb-4">기술 스택</h3>

        <div>
          <%= f.label :skills, "기술/키워드", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.text_field :skills,
              placeholder: "React, Node.js, Figma, 시장분석",
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
          <p class="mt-1 text-xs text-muted-foreground">쉼표(,)로 구분하여 입력하세요. 프로필에 태그로 표시됩니다.</p>
        </div>

        <% if @user.skills_array.any? %>
          <div>
            <p class="text-sm font-medium text-foreground mb-2">현재 등록된 기술:</p>
            <div class="flex flex-wrap gap-2">
              <% @user.skills_array.each do |skill| %>
                <span class="inline-flex items-center rounded-full bg-secondary px-3 py-1 text-sm font-medium text-secondary-foreground">
                  <%= skill %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Contact & Links -->
      <div class="bg-card rounded-xl p-6 border border-border space-y-4">
        <h3 class="text-lg font-semibold mb-4">연락처 및 링크</h3>
        <p class="text-sm text-muted-foreground mb-4">다른 사용자들이 연락할 수 있는 수단을 제공하세요.</p>

        <!-- Open Chat URL -->
        <div>
          <%= f.label :open_chat_url, "오픈채팅 링크", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.url_field :open_chat_url,
              placeholder: "https://open.kakao.com/o/...",
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
          <p class="mt-1 text-xs text-muted-foreground">카카오톡 오픈채팅 또는 다른 메신저 링크</p>
        </div>

        <!-- GitHub URL -->
        <div>
          <%= f.label :github_url, "GitHub 링크", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.url_field :github_url,
              placeholder: "https://github.com/username",
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
        </div>

        <!-- Portfolio URL -->
        <div>
          <%= f.label :portfolio_url, "포트폴리오 링크", class: "block text-sm font-medium text-foreground mb-2" %>
          <%= f.url_field :portfolio_url,
              placeholder: "https://notion.so/..., https://behance.net/...",
              class: "w-full px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring" %>
          <p class="mt-1 text-xs text-muted-foreground">노션, 비핸스, 개인 웹사이트 등</p>
        </div>
      </div>

      <!-- Connected Accounts -->
      <% if @user.oauth_identities.any? %>
        <div class="bg-card rounded-xl p-6 border border-border">
          <h3 class="text-lg font-semibold mb-4">연결된 계정</h3>
          <div class="space-y-3">
            <% @user.oauth_identities.each do |identity| %>
              <div class="flex items-center gap-3 p-3 rounded-lg bg-secondary/50">
                <% if identity.provider == "google_oauth2" %>
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                  </svg>
                  <span class="font-medium">Google</span>
                <% elsif identity.provider == "github" %>
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span class="font-medium">GitHub</span>
                <% end %>
                <span class="text-sm text-muted-foreground ml-auto">연결됨</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Submit Buttons -->
      <div class="flex gap-3">
        <%= link_to my_page_path, class: "flex-1 inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-11 px-8" do %>
          취소
        <% end %>
        <button type="submit" class="flex-1 inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring bg-primary text-primary-foreground shadow hover:bg-primary/90 h-11 px-8">
          저장
        </button>
      </div>
    <% end %>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
