<%#
  Community Post Detail Page
  - Standard layout for free, question, promotion posts
  - Original design preserved from legacy show.html.erb

  locals: post, comments
%>

<div class="min-h-screen bg-background pb-24 md:pb-20 pb-safe" data-controller="report-modal">
  <%# Header %>
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center gap-3">
      <%= render_button variant: :ghost, class: "h-9 w-9 p-0", data: { controller: "navigation", navigation_fallback_value: root_path, action: "click->navigation#goBack" } do %>
        <%= render partial: "shared/icons/arrow_left", locals: { css_css_class: "h-5 w-5" } %>
      <% end %>
      <h1 class="text-xl font-bold">게시글</h1>

      <div class="ml-auto flex items-center gap-2">
        <% if logged_in? && post.user == current_user %>
          <%= button_to post_path(post), method: :delete,
              form: { data: { turbo: false, controller: "confirm", confirm_message_value: "정말 이 게시글을 삭제하시겠습니까?" } },
              class: "text-sm text-destructive link-hover" do %>
            삭제
          <% end %>
          <%= link_to edit_post_path(post), class: "text-sm text-muted-foreground link-hover relative" do %>
            수정
          <% end %>
        <% elsif logged_in? && post.user != current_user %>
          <%# 신고 버튼 (본인 글이 아닐 때) %>
          <div class="relative" data-controller="dropdown" data-testid="post-actions-dropdown">
            <button type="button"
                    class="p-2 rounded-md text-muted-foreground btn-hover"
                    data-action="click->dropdown#toggle">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
              </svg>
            </button>
            <div class="hidden absolute right-0 mt-2 w-40 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50"
                 data-dropdown-target="menu">
              <div class="py-1" role="menu">
                <button type="button"
                        class="w-full text-left px-4 py-2 text-sm text-red-600 btn-hover flex items-center gap-2"
                        data-action="click->report-modal#open"
                        data-reportable-type="Post"
                        data-reportable-id="<%= post.id %>"
                        data-target-name="<%= post.title.truncate(20) %>">
                  <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  신고하기
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </header>

  <%# Main Content %>
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <%# Post Card %>
    <article class="rounded-xl border bg-card text-card-foreground p-6 mb-6">
      <%# Author Info %>
      <%= link_to profile_path(post.user_id), class: "flex items-start gap-3 mb-4 group" do %>
        <%= render_user_avatar(post.user, size: "lg") %>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors"><%= post.user.display_name %></h3>
            <% if post.user.role_title.present? %>
              <%= render_badge post.user.role_title, variant: :secondary, class: "text-xs" %>
            <% end %>
          </div>
          <p class="text-xs text-muted-foreground">
            <%= time_ago_in_words(post.created_at) %> 전 · 조회 <%= post.views_count %>
          </p>
        </div>
      <% end %>

      <%# Post Title %>
      <h1 class="text-2xl font-bold mb-4 text-foreground"><%= post.title %></h1>

      <%# Post Content %>
      <div class="prose max-w-none mb-6">
        <p class="text-foreground leading-relaxed whitespace-pre-wrap"><%= linkify_urls(post.content) %></p>
      </div>

      <%# Post Images %>
      <% if post.images.attached? %>
        <% images = post.images.to_a %>
        <% image_urls = images.map { |img| url_for(img) } %>

        <div class="mb-6" data-controller="image-lightbox" data-image-lightbox-images-value="<%= image_urls.to_json %>">
          <% if images.size == 1 %>
            <%# 단일 이미지: 심플하게 표시 %>
            <div class="flex justify-center">
              <%= image_tag images.first, class: "max-w-[50%] rounded-lg cursor-pointer btn-hover", alt: "첨부 이미지", data: { action: "click->image-lightbox#open", index: 0 } %>
            </div>
          <% else %>
            <%# 다중 이미지: 캐러셀 %>
            <div class="flex justify-center">
              <div class="relative w-1/2" data-controller="image-carousel">
                <%# 이미지 슬라이드 %>
                <div class="relative overflow-hidden rounded-lg bg-secondary">
                  <% images.each_with_index do |image, index| %>
                    <div class="<%= index == 0 ? 'block' : 'hidden' %>" data-image-carousel-target="slide">
                      <%= image_tag image, class: "w-full cursor-pointer btn-hover", alt: "첨부 이미지 #{index + 1}", data: { action: "click->image-lightbox#open", index: index } %>
                    </div>
                  <% end %>

                  <%# 이전/다음 버튼 %>
                  <button
                    type="button"
                    class="absolute left-2 top-1/2 -translate-y-1/2 w-8 h-8 flex items-center justify-center bg-black/40 rounded-full text-white btn-hover z-10"
                    data-image-carousel-target="prevButton"
                    data-action="click->image-carousel#prev"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                  </button>
                  <button
                    type="button"
                    class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 flex items-center justify-center bg-black/40 rounded-full text-white btn-hover z-10"
                    data-image-carousel-target="nextButton"
                    data-action="click->image-carousel#next"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </button>

                  <%# 인디케이터 (하단 점) %>
                  <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex items-center gap-1.5 z-10">
                    <% images.each_with_index do |_, index| %>
                      <button
                        type="button"
                        class="w-1.5 h-1.5 rounded-full <%= index == 0 ? 'bg-white' : 'bg-white/50' %> btn-hover"
                        data-image-carousel-target="indicator"
                        data-action="click->image-carousel#goToSlide"
                        data-index="<%= index %>"
                      ></button>
                    <% end %>
                  </div>

                  <%# 페이지 카운터 %>
                  <div class="absolute top-2 right-2 px-1.5 py-0.5 bg-black/50 rounded-full text-white text-[10px] font-medium z-10">
                    <span data-image-carousel-target="current">1</span> / <%= images.size %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <%# Lightbox Modal %>
          <div
            class="hidden fixed inset-0 bg-black/90 z-50 flex items-center justify-center"
            data-image-lightbox-target="modal"
            data-action="click->image-lightbox#close"
          >
            <%# 닫기 버튼 %>
            <button
              type="button"
              class="absolute top-4 right-4 w-10 h-10 flex items-center justify-center bg-white/10 rounded-full text-white btn-hover"
              data-action="click->image-lightbox#close"
            >
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>

            <%# 이미지 카운터 %>
            <% if images.size > 1 %>
              <div class="absolute top-4 left-1/2 -translate-x-1/2 px-3 py-1 bg-white/10 rounded-full text-white text-sm font-medium">
                <span data-image-lightbox-target="counter">1 / <%= images.size %></span>
              </div>
            <% end %>

            <%# 이전 버튼 %>
            <% if images.size > 1 %>
              <button
                type="button"
                class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 flex items-center justify-center bg-white/10 rounded-full text-white btn-hover"
                data-action="click->image-lightbox#prev"
              >
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              </button>
            <% end %>

            <%# 이미지 %>
            <img
              src="<%= image_urls.first %>"
              alt="확대 이미지"
              class="max-w-[90vw] max-h-[90vh] object-contain"
              data-image-lightbox-target="image"
              data-action="click->image-lightbox#stopPropagation"
            >

            <%# 다음 버튼 %>
            <% if images.size > 1 %>
              <button
                type="button"
                class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 flex items-center justify-center bg-white/10 rounded-full text-white btn-hover"
                data-action="click->image-lightbox#next"
              >
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Interaction Buttons %>
      <div class="flex items-center gap-4 pt-4 border-t border-border">
        <%= render partial: "shared/like_button", locals: { post: post, liked: logged_in? ? post.liked_by?(current_user) : false } %>
        <div class="inline-flex items-center gap-2 px-4 py-2 text-muted-foreground">
          <%= render partial: "shared/icons/message_square", locals: { css_css_class: "h-5 w-5" } %>
          <span class="text-sm font-medium"><%= post.comments_count %></span>
        </div>
        <div class="ml-auto">
          <%= render partial: "shared/share_bottomsheet", locals: {
            url: post_url(post),
            title: post.title,
            description: post.content&.truncate(100)
          } %>
        </div>
        <%= render partial: "shared/bookmark_button", locals: { post: post, bookmarked: logged_in? ? post.bookmarked_by?(current_user) : false } %>
      </div>
    </article>

    <%# Comments Section %>
    <div class="rounded-xl border bg-card text-card-foreground pt-6 px-6">
      <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
        <%= render partial: "shared/icons/message_square", locals: { css_css_class: "h-5 w-5" } %>
        <span>댓글 <span id="comments-count"><%= post.comments_count %></span>개</span>
      </h2>

      <%# Comment Form %>
      <% if logged_in? %>
        <div class="pb-4 border-b border-border">
          <%= render partial: "comments/form", locals: { post: post } %>
        </div>
      <% else %>
        <div class="pb-4 border-b border-border">
          <%= link_to login_path, class: "block" do %>
            <div class="flex gap-3 cursor-pointer group">
              <%# 기본 익명 아바타 %>
              <div class="h-8 w-8 rounded-full bg-white border border-gray-200 flex items-center justify-center overflow-hidden flex-shrink-0">
                <%= image_tag "/anonymous1-.png", alt: "익명", class: "h-full w-full object-cover" %>
              </div>
              <div class="flex-1">
                <div class="w-full px-3 py-2 text-sm rounded-lg border border-stone-300 bg-background text-muted-foreground group-hover:border-primary/50 transition-colors">
                  댓글을 작성하려면 로그인이 필요합니다
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <%# Comments List %>
      <div id="comments-list" class="divide-y divide-border">
        <% if comments.any? %>
          <% comments.each do |comment| %>
            <%= render partial: "comments/comment", locals: {
              comment: comment,
              post: post,
              current_user: current_user,
              depth: 0
            } %>
          <% end %>
        <% end %>
      </div>

      <% if comments.empty? %>
        <div id="comments-empty" class="text-center py-12 text-muted-foreground">
          <p>아직 댓글이 없습니다</p>
          <p class="text-sm mt-1">첫 댓글을 작성해보세요!</p>
        </div>
      <% end %>
    </div>
  </main>

  <%# 신고 모달 %>
  <% if logged_in? %>
    <%= render "reports/modal" %>
  <% end %>
</div>
