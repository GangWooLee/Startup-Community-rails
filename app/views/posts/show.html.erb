<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center gap-3">
      <button onclick="history.back()" class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 rounded-md">
        <%= render partial: "shared/icons/arrow_left", locals: { css_class: "h-5 w-5" } %>
      </button>
      <h1 class="text-xl font-bold"><%= @post.outsourcing? ? (@post.hiring? ? '구인 공고' : '구직 공고') : '게시글' %></h1>

      <% if logged_in? && @post.user == current_user %>
        <div class="ml-auto flex items-center gap-2">
          <%= link_to edit_post_path(@post), class: "text-sm text-muted-foreground hover:text-foreground" do %>
            수정
          <% end %>
        </div>
      <% end %>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <!-- Post Card -->
    <article class="bg-card rounded-xl p-6 border border-border mb-6">
      <!-- Author Info -->
      <%= link_to profile_path(@post.user_id), class: "flex items-start gap-3 mb-4 group" do %>
        <div class="h-12 w-12 rounded-full bg-secondary flex items-center justify-center overflow-hidden">
          <% if @post.user.avatar.attached? %>
            <%= image_tag @post.user.avatar, alt: @post.user.name, class: "h-full w-full object-cover" %>
          <% elsif @post.user.avatar_url.present? %>
            <%= image_tag @post.user.avatar_url, alt: @post.user.name, class: "h-full w-full object-cover" %>
          <% else %>
            <span class="text-xl font-semibold"><%= @post.user.name[0] %></span>
          <% end %>
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors"><%= @post.user.name %></h3>
            <% if @post.user.role_title.present? %>
              <span class="inline-flex items-center rounded-md bg-secondary px-2 py-0.5 text-xs font-semibold text-secondary-foreground">
                <%= @post.user.role_title %>
              </span>
            <% end %>
          </div>
          <p class="text-xs text-muted-foreground">
            <%= time_ago_in_words(@post.created_at) %> 전 · 조회 <%= @post.views_count %>
          </p>
        </div>
      <% end %>

      <!-- Category Badge (외주 글만 표시) -->
      <% if @post.outsourcing? %>
        <div class="flex flex-wrap items-center gap-2 mb-4">
          <% if @post.hiring? %>
            <%= render partial: "shared/icons/briefcase", locals: { css_class: "h-4 w-4 text-blue-500" } %>
            <span class="inline-flex items-center rounded-md bg-blue-500/10 text-blue-600 px-3 py-1 text-xs font-semibold">
              구인 공고
            </span>
          <% else %>
            <%= render partial: "shared/icons/user", locals: { css_class: "h-4 w-4 text-green-500" } %>
            <span class="inline-flex items-center rounded-md bg-green-500/10 text-green-600 px-3 py-1 text-xs font-semibold">
              구직 공고
            </span>
          <% end %>

          <% if @post.service_type.present? %>
            <span class="inline-flex items-center rounded-md bg-secondary px-3 py-1 text-xs font-semibold text-secondary-foreground">
              <%= Post::SERVICE_TYPES[@post.service_type] %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- Post Title -->
      <h1 class="text-2xl font-bold mb-4 text-foreground"><%= @post.title %></h1>

      <!-- Outsourcing Info (구인/구직일 때만 표시) -->
      <% if @post.outsourcing? %>
        <div class="grid grid-cols-2 gap-3 mb-6">
          <div class="bg-secondary/50 rounded-lg p-4">
            <span class="text-xs text-muted-foreground block mb-1">예산/금액</span>
            <span class="text-base font-bold text-primary"><%= @post.price_display %></span>
          </div>
          <% if @post.work_period.present? %>
            <div class="bg-secondary/50 rounded-lg p-4">
              <span class="text-xs text-muted-foreground block mb-1">예상 기간</span>
              <span class="text-base font-medium text-foreground"><%= @post.work_period %></span>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Post Content -->
      <div class="prose max-w-none mb-6">
        <p class="text-foreground leading-relaxed whitespace-pre-wrap"><%= @post.content %></p>
      </div>

      <!-- Post Images -->
      <% if @post.images.attached? %>
        <% images = @post.images.to_a %>
        <% image_urls = images.map { |img| url_for(img) } %>

        <div class="mb-6" data-controller="image-lightbox" data-image-lightbox-images-value="<%= image_urls.to_json %>">
          <% if images.size == 1 %>
            <!-- 단일 이미지: 심플하게 표시 -->
            <div class="flex justify-center">
              <%= image_tag images.first, class: "max-w-[50%] rounded-lg cursor-pointer hover:opacity-90 transition-opacity", alt: "첨부 이미지", data: { action: "click->image-lightbox#open", index: 0 } %>
            </div>
          <% else %>
            <!-- 다중 이미지: 캐러셀 -->
            <div class="flex justify-center">
              <div class="relative w-1/2" data-controller="image-carousel">
                <!-- 이미지 슬라이드 (4:3 고정 비율) -->
                <div class="relative overflow-hidden rounded-lg bg-secondary aspect-[4/3]">
                  <% images.each_with_index do |image, index| %>
                    <div class="<%= index == 0 ? 'flex' : 'hidden' %> absolute inset-0 items-center justify-center" data-image-carousel-target="slide">
                      <%= image_tag image, class: "max-w-full max-h-full object-contain cursor-pointer hover:opacity-90 transition-opacity", alt: "첨부 이미지 #{index + 1}", data: { action: "click->image-lightbox#open", index: index } %>
                    </div>
                  <% end %>

                  <!-- 이전/다음 버튼 -->
                  <button
                    type="button"
                    class="absolute left-2 top-1/2 -translate-y-1/2 w-8 h-8 flex items-center justify-center bg-black/40 hover:bg-black/60 rounded-full text-white transition-colors z-10"
                    data-image-carousel-target="prevButton"
                    data-action="click->image-carousel#prev"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                  </button>
                  <button
                    type="button"
                    class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 flex items-center justify-center bg-black/40 hover:bg-black/60 rounded-full text-white transition-colors z-10"
                    data-image-carousel-target="nextButton"
                    data-action="click->image-carousel#next"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </button>

                  <!-- 인디케이터 (하단 점) -->
                  <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex items-center gap-1.5 z-10">
                    <% images.each_with_index do |_, index| %>
                      <button
                        type="button"
                        class="w-1.5 h-1.5 rounded-full <%= index == 0 ? 'bg-white' : 'bg-white/50' %> transition-colors"
                        data-image-carousel-target="indicator"
                        data-action="click->image-carousel#goToSlide"
                        data-index="<%= index %>"
                      ></button>
                    <% end %>
                  </div>

                  <!-- 페이지 카운터 -->
                  <div class="absolute top-2 right-2 px-1.5 py-0.5 bg-black/50 rounded-full text-white text-[10px] font-medium z-10">
                    <span data-image-carousel-target="current">1</span> / <%= images.size %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Lightbox Modal -->
          <div
            class="hidden fixed inset-0 bg-black/90 z-50 flex items-center justify-center"
            data-image-lightbox-target="modal"
            data-action="click->image-lightbox#close"
          >
            <!-- 닫기 버튼 -->
            <button
              type="button"
              class="absolute top-4 right-4 w-10 h-10 flex items-center justify-center bg-white/10 hover:bg-white/20 rounded-full text-white transition-colors"
              data-action="click->image-lightbox#close"
            >
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>

            <!-- 이미지 카운터 -->
            <% if images.size > 1 %>
              <div class="absolute top-4 left-1/2 -translate-x-1/2 px-3 py-1 bg-white/10 rounded-full text-white text-sm font-medium">
                <span data-image-lightbox-target="counter">1 / <%= images.size %></span>
              </div>
            <% end %>

            <!-- 이전 버튼 -->
            <% if images.size > 1 %>
              <button
                type="button"
                class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-white/20 rounded-full text-white transition-colors"
                data-action="click->image-lightbox#prev"
              >
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              </button>
            <% end %>

            <!-- 이미지 -->
            <img
              src="<%= image_urls.first %>"
              alt="확대 이미지"
              class="max-w-[90vw] max-h-[90vh] object-contain"
              data-image-lightbox-target="image"
              data-action="click->image-lightbox#stopPropagation"
            >

            <!-- 다음 버튼 -->
            <% if images.size > 1 %>
              <button
                type="button"
                class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-white/20 rounded-full text-white transition-colors"
                data-action="click->image-lightbox#next"
              >
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Outsourcing Contact Button -->
      <% if @post.outsourcing? %>
        <div class="mb-6">
          <button class="w-full inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-11 px-8">
            <%= render partial: "shared/icons/message_square", locals: { css_class: "h-4 w-4" } %>
            문의하기
          </button>
        </div>
      <% end %>

      <!-- Interaction Buttons -->
      <div class="flex items-center gap-4 pt-4 border-t border-border">
        <%= render partial: "shared/like_button", locals: { post: @post, liked: logged_in? ? @post.liked_by?(current_user) : false } %>
        <div class="inline-flex items-center gap-2 px-4 py-2 text-muted-foreground">
          <%= render partial: "shared/icons/message_square", locals: { css_class: "h-5 w-5" } %>
          <span class="text-sm font-medium"><%= @post.comments_count %></span>
        </div>
        <button class="inline-flex items-center gap-2 px-4 py-2 rounded-md hover:bg-secondary transition-colors text-foreground ml-auto">
          <%= render partial: "shared/icons/share", locals: { css_class: "h-5 w-5" } %>
        </button>
        <%= render partial: "shared/bookmark_button", locals: { post: @post, bookmarked: logged_in? ? @post.bookmarked_by?(current_user) : false } %>
      </div>
    </article>

    <!-- Comments Section -->
    <div class="bg-card rounded-xl pt-6 px-6 border border-border">
      <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
        <%= render partial: "shared/icons/message_square", locals: { css_class: "h-5 w-5" } %>
        <span>댓글 <span id="comments-count"><%= @post.comments_count %></span>개</span>
      </h2>

      <!-- Comment Form -->
      <% if logged_in? %>
        <div class="pb-4 border-b border-border">
          <%= render partial: "comments/form", locals: { post: @post } %>
        </div>
      <% else %>
        <div class="pb-4 border-b border-border">
          <div class="text-center py-4 bg-secondary/30 rounded-lg">
            <p class="text-sm text-muted-foreground mb-2">댓글을 작성하려면 로그인이 필요합니다</p>
            <%= link_to "로그인", login_path, class: "text-sm font-medium text-primary hover:underline" %>
          </div>
        </div>
      <% end %>

      <!-- Comments List -->
      <div id="comments-list" class="divide-y divide-border">
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <%= render partial: "comments/comment", locals: {
              comment: comment,
              post: @post,
              current_user: current_user,
              depth: 0
            } %>
          <% end %>
        <% end %>
      </div>

      <% if @comments.empty? %>
        <div id="comments-empty" class="text-center py-12 text-muted-foreground">
          <%= render partial: "shared/icons/message_square", locals: { css_class: "h-12 w-12 mx-auto mb-3 opacity-50" } %>
          <p>아직 댓글이 없습니다</p>
          <p class="text-sm mt-1">첫 댓글을 작성해보세요!</p>
        </div>
      <% end %>
    </div>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
