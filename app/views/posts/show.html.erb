<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center gap-3">
      <button onclick="history.back()" class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 rounded-md">
        <%= render partial: "shared/icons/arrow_left", locals: { css_class: "h-5 w-5" } %>
      </button>
      <h1 class="text-xl font-bold"><%= @post.outsourcing? ? (@post.hiring? ? '구인 공고' : '구직 공고') : '게시글' %></h1>

      <% if logged_in? && @post.user == current_user %>
        <div class="ml-auto flex items-center gap-2">
          <%= link_to edit_post_path(@post), class: "text-sm text-muted-foreground hover:text-foreground" do %>
            수정
          <% end %>
        </div>
      <% end %>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <!-- Post Card -->
    <article class="bg-card rounded-xl p-6 border border-border mb-6">
      <!-- Author Info -->
      <%= link_to profile_path(@post.user_id), class: "flex items-start gap-3 mb-4 group" do %>
        <div class="h-12 w-12 rounded-full bg-secondary flex items-center justify-center overflow-hidden">
          <% if @post.user.avatar.attached? %>
            <%= image_tag @post.user.avatar, alt: @post.user.name, class: "h-full w-full object-cover" %>
          <% elsif @post.user.avatar_url.present? %>
            <%= image_tag @post.user.avatar_url, alt: @post.user.name, class: "h-full w-full object-cover" %>
          <% else %>
            <span class="text-xl font-semibold"><%= @post.user.name[0] %></span>
          <% end %>
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors"><%= @post.user.name %></h3>
            <% if @post.user.role_title.present? %>
              <span class="inline-flex items-center rounded-md bg-secondary px-2 py-0.5 text-xs font-semibold text-secondary-foreground">
                <%= @post.user.role_title %>
              </span>
            <% end %>
          </div>
          <p class="text-xs text-muted-foreground">
            <%= time_ago_in_words(@post.created_at) %> 전 · 조회 <%= @post.views_count %>
          </p>
        </div>
      <% end %>

      <!-- Category Badge (외주 글만 표시) -->
      <% if @post.outsourcing? %>
        <div class="flex flex-wrap items-center gap-2 mb-4">
          <% if @post.hiring? %>
            <%= render partial: "shared/icons/briefcase", locals: { css_class: "h-4 w-4 text-blue-500" } %>
            <span class="inline-flex items-center rounded-md bg-blue-500/10 text-blue-600 px-3 py-1 text-xs font-semibold">
              구인 공고
            </span>
          <% else %>
            <%= render partial: "shared/icons/user", locals: { css_class: "h-4 w-4 text-green-500" } %>
            <span class="inline-flex items-center rounded-md bg-green-500/10 text-green-600 px-3 py-1 text-xs font-semibold">
              구직 공고
            </span>
          <% end %>

          <% if @post.service_type.present? %>
            <span class="inline-flex items-center rounded-md bg-secondary px-3 py-1 text-xs font-semibold text-secondary-foreground">
              <%= Post::SERVICE_TYPES[@post.service_type] %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- Post Title -->
      <h1 class="text-2xl font-bold mb-4 text-foreground"><%= @post.title %></h1>

      <!-- Outsourcing Info (구인/구직일 때만 표시) -->
      <% if @post.outsourcing? %>
        <div class="bg-secondary/50 rounded-lg p-4 mb-6 space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-sm text-muted-foreground">예산/금액</span>
            <span class="text-lg font-bold text-primary"><%= @post.price_display %></span>
          </div>
          <% if @post.work_period.present? %>
            <div class="flex items-center justify-between">
              <span class="text-sm text-muted-foreground">예상 기간</span>
              <span class="font-medium text-foreground"><%= @post.work_period %></span>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Post Content -->
      <div class="prose max-w-none mb-6">
        <p class="text-foreground leading-relaxed whitespace-pre-wrap"><%= @post.content %></p>
      </div>

      <!-- Outsourcing Contact Button -->
      <% if @post.outsourcing? %>
        <div class="flex gap-3 mb-6">
          <button class="flex-1 inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-11 px-8">
            <%= render partial: "shared/icons/message_square", locals: { css_class: "h-4 w-4" } %>
            문의하기
          </button>
          <div class="inline-flex items-center justify-center rounded-md border border-input bg-background shadow-sm h-11 px-2">
            <%= render partial: "shared/bookmark_button", locals: { post: @post, bookmarked: logged_in? ? @post.bookmarked_by?(current_user) : false, size: "sm" } %>
          </div>
          <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-11 px-4 py-2">
            <%= render partial: "shared/icons/share", locals: { css_class: "h-4 w-4" } %>
          </button>
        </div>
      <% end %>

      <!-- Interaction Buttons -->
      <div class="flex items-center gap-4 pt-4 border-t border-border">
        <%= render partial: "shared/like_button", locals: { post: @post, liked: logged_in? ? @post.liked_by?(current_user) : false } %>
        <div class="inline-flex items-center gap-2 px-4 py-2 text-muted-foreground">
          <%= render partial: "shared/icons/message_square", locals: { css_class: "h-5 w-5" } %>
          <span class="text-sm font-medium"><%= @post.comments_count %></span>
        </div>
        <button class="inline-flex items-center gap-2 px-4 py-2 rounded-md hover:bg-secondary transition-colors text-foreground ml-auto">
          <%= render partial: "shared/icons/share", locals: { css_class: "h-5 w-5" } %>
        </button>
        <%= render partial: "shared/bookmark_button", locals: { post: @post, bookmarked: logged_in? ? @post.bookmarked_by?(current_user) : false } %>
      </div>
    </article>

    <!-- Comments Section -->
    <div class="bg-card rounded-xl p-6 border border-border">
      <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
        <%= render partial: "shared/icons/message_square", locals: { css_class: "h-5 w-5" } %>
        댓글 <%= @post.comments_count %>개
      </h2>

      <!-- Comment Form -->
      <div class="mb-6 pb-6 border-b border-border">
        <div class="flex gap-3">
          <div class="h-10 w-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0">
            <span class="text-lg font-semibold">U</span>
          </div>
          <div class="flex-1">
            <textarea
              class="w-full min-h-[80px] px-3 py-2 rounded-md border border-border bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring resize-none"
              placeholder="댓글을 작성하세요..."
            ></textarea>
            <div class="flex justify-end mt-2">
              <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2">
                댓글 작성
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Comments List -->
      <div class="space-y-4">
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <div class="flex gap-3 group">
              <%= link_to profile_path(comment.user_id), class: "flex-shrink-0" do %>
                <div class="h-10 w-10 rounded-full bg-secondary flex items-center justify-center overflow-hidden">
                  <% if comment.user.avatar.attached? %>
                    <%= image_tag comment.user.avatar, alt: comment.user.name, class: "h-full w-full object-cover" %>
                  <% elsif comment.user.avatar_url.present? %>
                    <%= image_tag comment.user.avatar_url, alt: comment.user.name, class: "h-full w-full object-cover" %>
                  <% else %>
                    <span class="text-lg font-semibold"><%= comment.user.name[0] %></span>
                  <% end %>
                </div>
              <% end %>
              <div class="flex-1">
                <div class="bg-secondary rounded-lg px-4 py-3">
                  <%= link_to profile_path(comment.user_id) do %>
                    <div class="flex items-center gap-2 mb-1">
                      <span class="font-semibold text-sm text-foreground hover:text-primary transition-colors"><%= comment.user.name %></span>
                      <% if comment.user.role_title.present? %>
                        <span class="text-xs text-muted-foreground"><%= comment.user.role_title %></span>
                      <% end %>
                    </div>
                  <% end %>
                  <p class="text-foreground leading-relaxed whitespace-pre-wrap"><%= comment.content %></p>
                </div>
                <div class="flex items-center gap-3 mt-1 px-2">
                  <span class="text-xs text-muted-foreground"><%= time_ago_in_words(comment.created_at) %> 전</span>
                  <button class="text-xs text-muted-foreground hover:text-foreground transition-colors">답글</button>
                  <button class="text-xs text-muted-foreground hover:text-foreground transition-colors opacity-0 group-hover:opacity-100">삭제</button>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-12 text-muted-foreground">
            <%= render partial: "shared/icons/message_square", locals: { css_class: "h-12 w-12 mx-auto mb-3 opacity-50" } %>
            <p>아직 댓글이 없습니다</p>
            <p class="text-sm mt-1">첫 댓글을 작성해보세요!</p>
          </div>
        <% end %>
      </div>
    </div>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
