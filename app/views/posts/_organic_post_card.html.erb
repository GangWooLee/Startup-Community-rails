<%#
  Organic Post Card - 수평 레이아웃
  Reference: design-sample/community_page/community_page (lines 206-302)

  Features:
  - Horizontal layout (thumbnail left, content right)
  - Category badge
  - Author name and time
  - Title and description
  - Like/Comment/View stats
  - Hover effects

  Local variable:
  - post: The Post object (required)
%>

<% if local_assigns[:post] && post.present? %>
  <%= link_to post_path(post),
      class: "block bg-white/90 backdrop-blur-sm p-5 rounded-2xl border border-stone-200/60 card-lift cursor-pointer group" do %>
    <div class="flex flex-col sm:flex-row gap-5">
      <%# Thumbnail %>
      <div class="w-full sm:w-48 h-32 sm:h-auto shrink-0 rounded-xl overflow-hidden bg-stone-100 relative">
        <% if post.images.attached? && post.images.first.present? %>
          <%= image_tag post.images.first,
              alt: post.title,
              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
        <% else %>
          <%# Placeholder %>
          <div class="absolute inset-0 flex items-center justify-center bg-stone-100 text-stone-300">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
        <% end %>
      </div>

      <%# Content %>
      <div class="flex-1 flex flex-col min-w-0">
        <%# Meta Row: Category + Author + Time %>
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center gap-2">
            <%# Category Badge (only for outsourcing posts) %>
            <% if post.hiring? || post.seeking? %>
              <span class="bg-stone-100 text-stone-600 text-[10px] px-2 py-0.5 rounded-md font-semibold border border-stone-200">
                <%= post_category_label(post) %>
              </span>
              <span class="text-xs text-stone-400">•</span>
            <% end %>
            <span class="text-xs text-stone-500"><%= post.user.name %></span>
          </div>
          <span class="text-xs text-stone-400"><%= time_ago_in_words(post.created_at) %> 전</span>
        </div>

        <%# Title %>
        <h4 class="text-lg font-bold text-stone-900 mb-2 leading-tight group-hover:text-orange-600 transition-colors line-clamp-2">
          <%= post.title %>
        </h4>

        <%# Description %>
        <% if post.content.present? %>
          <p class="text-sm text-stone-500 line-clamp-2 leading-relaxed mb-4 flex-1">
            <%= truncate(strip_tags(post.content), length: 100) %>
          </p>
        <% else %>
          <div class="flex-1"></div>
        <% end %>

        <%# Stats Row %>
        <div class="flex items-center gap-4 text-stone-400 text-xs font-medium">
          <%# Likes %>
          <span class="flex items-center gap-1 hover:text-orange-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
            </svg>
            <%= post.likes_count || 0 %>
          </span>

          <%# Comments %>
          <span class="flex items-center gap-1 hover:text-stone-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <%= post.comments_count || 0 %>
          </span>

          <%# Views %>
          <span class="flex items-center gap-1 hover:text-stone-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            <%= format_views_count(post.views_count || 0) %>
          </span>

          <%# Bookmark (spacer + icon) %>
          <span class="ml-auto">
            <svg class="w-5 h-5 hover:text-stone-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
            </svg>
          </span>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
