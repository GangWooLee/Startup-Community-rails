<%#
  Sidebar User Widget - Bottom Fixed Profile Area
  Reference: Linear, Raycast style user widget

  Features:
  - Avatar + Name + Role (expanded) / Avatar only (collapsed)
  - Dropdown menu (Profile, Settings, Logout)
  - Menu opens upward (above the widget)
  - Login button for guests
  - Supports sidebar collapse state

  Usage:
  Rendered inside _global_sidebar.html.erb
%>

<div class="border-t border-stone-200/60 p-2" data-controller="sidebar-dropdown">
  <% if logged_in? %>
    <%# === 펼친 상태: Profile Card + Dropdown === %>
    <div class="relative" data-sidebar-collapse-target="expandedContent">
      <button type="button"
              class="w-full flex items-center gap-3 px-2 py-2 rounded-xl
                     hover:bg-stone-50 transition-all group"
              data-action="click->sidebar-dropdown#toggle">
        <%# Avatar %>
        <div class="w-9 h-9 rounded-full bg-stone-200 overflow-hidden flex-shrink-0
                    ring-2 ring-white shadow-sm">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, alt: current_user.display_name,
                class: "w-full h-full object-cover" %>
          <% elsif current_user.avatar_url.present? %>
            <%= image_tag current_user.avatar_url, alt: current_user.display_name,
                class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center
                        bg-gradient-to-br from-orange-400 to-rose-400
                        text-white font-bold text-sm">
              <%= current_user.display_name[0].upcase %>
            </div>
          <% end %>
        </div>

        <%# Name + Role %>
        <div class="flex-1 min-w-0 text-left">
          <p class="text-sm font-medium text-stone-800 truncate">
            <%= current_user.display_name %>
          </p>
          <p class="text-xs text-stone-400 truncate">
            <%= current_user.role_title.presence || current_user.email.truncate(20) %>
          </p>
        </div>

        <%# Dropdown Arrow %>
        <svg class="w-4 h-4 text-stone-400 group-hover:text-stone-600 transition-transform"
             data-sidebar-dropdown-target="arrow"
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
        </svg>
      </button>

      <%# Dropdown Menu - Opens Upward %>
      <div class="absolute bottom-full left-0 right-0 mb-2 py-1 bg-white rounded-xl
                  shadow-lg border border-stone-200/60 hidden z-50"
           data-sidebar-dropdown-target="menu">
        <%# My Profile %>
        <%= link_to my_page_path,
            class: "flex items-center gap-3 px-4 py-2.5 text-sm text-stone-600
                    hover:bg-stone-50 hover:text-stone-900 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          내 프로필
        <% end %>

        <%# Settings %>
        <%= link_to settings_path,
            class: "flex items-center gap-3 px-4 py-2.5 text-sm text-stone-600
                    hover:bg-stone-50 hover:text-stone-900 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          설정
        <% end %>

        <div class="border-t border-stone-100 my-1"></div>

        <%# Logout %>
        <%= link_to logout_path,
            data: { turbo_method: :delete },
            class: "flex items-center gap-3 px-4 py-2.5 text-sm text-red-600
                    hover:bg-red-50 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          로그아웃
        <% end %>
      </div>
    </div>

    <%# === 접힌 상태: 아바타만 (클릭하면 마이페이지) === %>
    <div class="hidden justify-center" data-sidebar-collapse-target="collapsedContent">
      <%= link_to my_page_path,
          class: "block p-1 rounded-lg hover:bg-stone-50 transition-colors",
          title: current_user.display_name do %>
        <div class="w-9 h-9 rounded-full bg-stone-200 overflow-hidden
                    ring-2 ring-white shadow-sm">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, alt: current_user.display_name,
                class: "w-full h-full object-cover" %>
          <% elsif current_user.avatar_url.present? %>
            <%= image_tag current_user.avatar_url, alt: current_user.display_name,
                class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center
                        bg-gradient-to-br from-orange-400 to-rose-400
                        text-white font-bold text-sm">
              <%= current_user.display_name[0].upcase %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <%# Guest: Login Button - 펼친 상태 %>
    <div data-sidebar-collapse-target="expandedContent">
      <%= link_to login_path,
          class: "flex items-center justify-center gap-2 w-full px-4 py-2.5
                  bg-[#2C2825] hover:bg-stone-800 text-white
                  rounded-xl font-medium text-sm transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        로그인
      <% end %>
    </div>

    <%# Guest: Login Button - 접힌 상태 (아이콘만) %>
    <div class="hidden justify-center" data-sidebar-collapse-target="collapsedContent">
      <%= link_to login_path,
          class: "block p-2 rounded-lg bg-[#2C2825] hover:bg-stone-800 transition-colors",
          title: "로그인" do %>
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      <% end %>
    </div>
  <% end %>
</div>
