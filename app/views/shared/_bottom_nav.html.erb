<nav class="fixed bottom-0 left-0 right-0 bg-background border-t border-border z-50 md:hidden">
  <div class="max-w-screen-xl mx-auto px-4">
    <div class="flex items-center justify-around h-16">
      <!-- Home/Community -->
      <% is_active_home = current_page?(community_path) || current_page?(posts_path) %>
      <%= link_to community_path, class: "flex flex-col items-center justify-center gap-1 flex-1 h-full link-hover relative #{is_active_home ? 'text-primary' : 'text-muted-foreground'}" do %>
        <%= render partial: "shared/icons/home", locals: { css_css_class: "h-5 w-5" } %>
        <span class="text-xs font-medium">커뮤니티</span>
      <% end %>

      <!-- Freelance/Jobs -->
      <% is_active_jobs = current_page?(job_posts_path) %>
      <%= link_to job_posts_path, class: "flex flex-col items-center justify-center gap-1 flex-1 h-full link-hover relative #{is_active_jobs ? 'text-primary' : 'text-muted-foreground'}" do %>
        <%= render partial: "shared/icons/briefcase", locals: { css_css_class: "h-5 w-5" } %>
        <span class="text-xs font-medium">Project</span>
      <% end %>

      <!-- 채팅/메시지 -->
      <% is_active_chat = controller_name == "chat_rooms" || controller_name == "messages" %>
      <% if logged_in? %>
        <%= link_to chat_rooms_path, class: "flex flex-col items-center justify-center gap-1 flex-1 h-full link-hover relative #{is_active_chat ? 'text-primary' : 'text-muted-foreground'}" do %>
          <div class="relative">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <% unread_count = current_user.total_unread_messages %>
            <% if unread_count > 0 %>
              <span class="absolute -top-1 -right-1 bg-red-500 text-white text-[10px] rounded-full min-w-[16px] h-4 flex items-center justify-center px-1 font-medium animate-pulse-glow">
                <%= unread_count > 99 ? "99+" : unread_count %>
              </span>
            <% end %>
          </div>
          <span class="text-xs font-medium">메시지</span>
        <% end %>
      <% else %>
        <%= link_to login_path, class: "flex flex-col items-center justify-center gap-1 flex-1 h-full link-hover relative text-muted-foreground" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <span class="text-xs font-medium">메시지</span>
        <% end %>
      <% end %>

      <!-- AI 아이디어 분석 -->
      <% is_active_ai = current_page?(onboarding_ai_input_path) || request.path.start_with?("/ai/result") %>
      <%= link_to onboarding_ai_input_path, class: "flex flex-col items-center justify-center gap-1 flex-1 h-full link-hover relative #{is_active_ai ? 'text-primary' : 'text-muted-foreground'}" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <span class="text-xs font-medium">AI 분석</span>
      <% end %>

    </div>
  </div>
</nav>
