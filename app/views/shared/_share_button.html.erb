<%# 공유 버튼 컴포넌트 (카드용 - 컴팩트 버전) %>
<%# locals: (url:, title:, description: nil, image_url: nil, size: "default") %>
<%# size: "sm" = 작은 버튼, "default" = 기본 버튼 %>
<%# image_url: 카카오톡 공유 시 표시될 이미지 (없으면 og:image 또는 기본 아이콘 사용) %>

<% size ||= "default" %>
<% button_class = size == "sm" ? "h-9 rounded-md px-3" : "px-4 py-2 rounded-md" %>
<% icon_class = size == "sm" ? "h-4 w-4" : "h-5 w-5" %>

<div data-controller="share"
     data-share-url-value="<%= url %>"
     data-share-title-value="<%= title %>"
     data-share-description-value="<%= description || title.truncate(80) %>"
     <% if defined?(image_url) && image_url.present? %>data-share-image-url-value="<%= image_url %>"<% end %>>

  <%# 공유 버튼 트리거 %>
  <button type="button"
          data-action="click->share#open"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium btn-hover focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 <%= button_class %>">
    <%= render partial: "shared/icons/share", locals: { css_css_class: icon_class } %>
  </button>

  <%# 오버레이 & 바텀시트 %>
  <div data-share-target="overlay"
       class="hidden fixed inset-0 bg-black/50 z-[100] transition-opacity duration-300 opacity-0"
       data-action="click->share#close">

    <%# 바텀시트 %>
    <div data-share-target="sheet"
         class="fixed bottom-0 left-0 right-0 bg-card rounded-t-2xl transform translate-y-full transition-transform duration-300 ease-out z-[101]"
         data-action="click->share#stopPropagation">

      <%# 핸들 바 %>
      <div class="flex justify-center pt-3 pb-2">
        <div class="w-10 h-1 bg-border rounded-full"></div>
      </div>

      <%# 헤더 %>
      <div class="px-6 pb-4 border-b border-border">
        <h3 class="text-lg font-semibold text-foreground text-center">공유하기</h3>
      </div>

      <%# 공유 옵션들 %>
      <div class="p-6">
        <%# 소셜 공유 버튼들 %>
        <div class="grid grid-cols-4 gap-2 mb-6">
          <%# 링크 복사 %>
          <button type="button"
                  data-action="click->share#copyUrl"
                  class="flex flex-col items-center gap-2 p-2 rounded-xl card-hover">
            <div class="w-12 h-12 rounded-full bg-secondary flex items-center justify-center">
              <svg class="h-6 w-6 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
            </div>
            <span class="text-xs text-muted-foreground">링크 복사</span>
          </button>

          <%# Threads %>
          <button type="button"
                  data-action="click->share#shareThreads"
                  class="flex flex-col items-center gap-2 p-2 rounded-xl card-hover">
            <div class="w-12 h-12 rounded-full bg-black flex items-center justify-center">
              <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12.186 24h-.007c-3.581-.024-6.334-1.205-8.184-3.509C2.35 18.44 1.5 15.586 1.472 12.01v-.017c.03-3.579.879-6.43 2.525-8.482C5.845 1.205 8.6.024 12.18 0h.014c2.746.02 5.043.725 6.826 2.098 1.677 1.29 2.858 3.13 3.509 5.467l-2.04.569c-1.104-3.96-3.898-5.984-8.304-6.015-2.91.022-5.11.936-6.54 2.717C4.307 6.504 3.616 8.914 3.59 12c.025 3.086.718 5.496 2.057 7.164 1.432 1.781 3.632 2.695 6.54 2.717 2.623-.02 4.358-.631 5.8-2.045 1.647-1.613 1.618-3.593 1.09-4.798-.31-.71-.873-1.3-1.634-1.75-.192 1.352-.622 2.446-1.284 3.272-.886 1.102-2.14 1.704-3.73 1.79-1.202.065-2.361-.218-3.259-.801-1.063-.689-1.685-1.74-1.752-2.96-.065-1.17.408-2.133 1.332-2.714.869-.545 1.951-.837 3.479-.837.669 0 1.293.043 1.863.115v2.022c-.47-.065-.99-.098-1.556-.098-1.09 0-1.804.168-2.252.448-.384.24-.419.493-.41.635.027.498.262.828.699 1.044.543.268 1.263.354 1.866.354 1.146-.053 1.915-.391 2.42-1.065.478-.634.716-1.6.716-2.88v-.252c0-.199-.009-.393-.024-.582-.347-.089-.713-.16-1.096-.212-.79-.108-1.633-.163-2.5-.163-2.033 0-3.592.305-4.768.932-1.37.729-2.065 1.9-2.065 3.482 0 1.9.68 3.436 2.02 4.565 1.268 1.069 3.006 1.657 4.895 1.657.91 0 1.783-.103 2.596-.307 1.635-.409 3.03-1.202 4.144-2.358 1.23-1.278 1.913-2.9 2.034-4.831.186.104.358.22.52.349.686.544 1.186 1.249 1.487 2.1.602 1.695.504 4.193-1.695 6.396C18.252 23.14 15.79 23.97 12.186 24z"/>
              </svg>
            </div>
            <span class="text-xs text-muted-foreground">Threads</span>
          </button>

          <%# 트위터(X) %>
          <button type="button"
                  data-action="click->share#shareTwitter"
                  class="flex flex-col items-center gap-2 p-2 rounded-xl card-hover">
            <div class="w-12 h-12 rounded-full bg-black flex items-center justify-center">
              <svg class="h-5 w-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </div>
            <span class="text-xs text-muted-foreground">X</span>
          </button>

          <%# 페이스북 %>
          <button type="button"
                  data-action="click->share#shareFacebook"
                  class="flex flex-col items-center gap-2 p-2 rounded-xl card-hover">
            <div class="w-12 h-12 rounded-full bg-[#1877F2] flex items-center justify-center">
              <svg class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </div>
            <span class="text-xs text-muted-foreground">페이스북</span>
          </button>
        </div>

        <%# 네이티브 공유 (Web Share API 지원 시) %>
        <button type="button"
                data-action="click->share#nativeShare"
                class="w-full flex items-center justify-center gap-2 py-3 px-4 bg-primary text-primary-foreground rounded-lg font-medium btn-hover">
          <%= render partial: "shared/icons/share", locals: { css_css_class: "h-5 w-5" } %>
          다른 앱으로 공유하기
        </button>
      </div>

      <%# 하단 여백 (safe area) %>
      <div class="h-6 pb-safe"></div>
    </div>
  </div>

  <%# 토스트 메시지 %>
  <div data-share-target="toast"
       class="hidden fixed bottom-32 left-1/2 -translate-x-1/2 bg-primary text-primary-foreground px-4 py-2 rounded-lg shadow-lg text-sm font-medium z-[110] transition-opacity duration-300 opacity-0">
  </div>
</div>
