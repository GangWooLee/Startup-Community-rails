<%#
  스켈레톤 로더 - Lazy Loading 시 표시되는 플레이스홀더

  사용법:
    <%= render "shared/skeleton_loader", type: "post" %>
    <%= render "shared/skeleton_loader", type: "notification", count: 5 %>
    <%= render "shared/skeleton_loader", type: "chat", count: 3 %>
    <%= render "shared/skeleton_loader", type: "comment", count: 4 %>

  Parameters:
    type: "post" | "notification" | "chat" | "comment" | "card"
    count: 표시할 스켈레톤 수 (기본값: 3)
%>
<% type ||= "card" %>
<% count ||= 3 %>

<div class="animate-pulse space-y-4" role="status" aria-label="콘텐츠 로딩 중">
  <% count.times do %>
    <% case type %>
    <% when "post" %>
      <%# 게시글 스켈레톤 %>
      <div class="p-4 border-b border-stone-100">
        <div class="flex items-center gap-3 mb-3">
          <div class="w-10 h-10 rounded-full bg-stone-200"></div>
          <div class="flex-1 space-y-2">
            <div class="h-4 w-24 bg-stone-200 rounded"></div>
            <div class="h-3 w-16 bg-stone-100 rounded"></div>
          </div>
        </div>
        <div class="space-y-2">
          <div class="h-5 bg-stone-200 rounded w-3/4"></div>
          <div class="h-4 bg-stone-100 rounded w-full"></div>
          <div class="h-4 bg-stone-100 rounded w-5/6"></div>
        </div>
        <div class="flex gap-4 mt-4">
          <div class="h-4 w-12 bg-stone-100 rounded"></div>
          <div class="h-4 w-12 bg-stone-100 rounded"></div>
        </div>
      </div>

    <% when "notification" %>
      <%# 알림 스켈레톤 %>
      <div class="flex items-start gap-3 p-4 rounded-xl bg-white/60 border border-stone-100">
        <div class="w-10 h-10 rounded-full bg-stone-200 flex-shrink-0"></div>
        <div class="flex-1 min-w-0 space-y-2">
          <div class="h-4 bg-stone-200 rounded w-3/4"></div>
          <div class="h-3 bg-stone-100 rounded w-1/2"></div>
        </div>
      </div>

    <% when "chat" %>
      <%# 채팅방 목록 스켈레톤 %>
      <div class="flex items-center gap-3 p-4 border-b border-stone-100">
        <div class="w-12 h-12 rounded-full bg-stone-200"></div>
        <div class="flex-1 min-w-0 space-y-2">
          <div class="h-4 bg-stone-200 rounded w-1/3"></div>
          <div class="h-3 bg-stone-100 rounded w-2/3"></div>
        </div>
        <div class="w-16 text-right space-y-2">
          <div class="h-3 bg-stone-100 rounded w-full"></div>
        </div>
      </div>

    <% when "comment" %>
      <%# 댓글 스켈레톤 %>
      <div class="flex items-start gap-3 py-3">
        <div class="w-8 h-8 rounded-full bg-stone-200"></div>
        <div class="flex-1 space-y-2">
          <div class="flex items-center gap-2">
            <div class="h-4 w-20 bg-stone-200 rounded"></div>
            <div class="h-3 w-12 bg-stone-100 rounded"></div>
          </div>
          <div class="h-4 bg-stone-100 rounded w-full"></div>
          <div class="h-4 bg-stone-100 rounded w-2/3"></div>
        </div>
      </div>

    <% else %>
      <%# 기본 카드 스켈레톤 %>
      <div class="h-24 bg-stone-200 rounded-xl"></div>
    <% end %>
  <% end %>

  <span class="sr-only">로딩 중...</span>
</div>
