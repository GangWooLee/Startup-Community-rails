<%# 플로팅 글쓰기 버튼 + 바텀시트 %>
<%# 표시 조건: 로그인 상태 + 글 작성/수정 페이지가 아닌 경우 %>
<% show_write_button = logged_in? && !@hide_floating_button %>
<% if show_write_button %>
  <div data-controller="write-bottomsheet">
    <!-- Floating Action Button - 모바일 최적화 -->
    <button
      type="button"
      data-action="click->write-bottomsheet#open"
      class="fixed bottom-24 right-4 z-50 h-14 w-14 sm:h-16 sm:w-16 rounded-full bg-primary text-primary-foreground shadow-lg btn-hover flex items-center justify-center hover:scale-105 active:scale-95 touch-manipulation"
    >
      <%= icon "plus", size: "lg", css_class: "sm:w-7 sm:h-7" %>
    </button>

    <!-- Bottom Sheet Overlay -->
    <div
      data-write-bottomsheet-target="overlay"
      data-action="click->write-bottomsheet#close"
      class="fixed inset-0 bg-black/50 z-50 hidden opacity-0 transition-opacity duration-300"
    ></div>

    <!-- Bottom Sheet - iOS Safe Area 대응 -->
    <div
      data-write-bottomsheet-target="sheet"
      class="fixed bottom-0 left-0 right-0 z-50 bg-background rounded-t-2xl shadow-xl transform translate-y-full transition-transform duration-300 ease-out pb-safe"
    >
      <!-- Handle - 터치 영역 확대 -->
      <div class="flex justify-center pt-4 pb-3 cursor-grab active:cursor-grabbing">
        <div class="w-12 h-1.5 bg-muted-foreground/30 rounded-full"></div>
      </div>

      <!-- Header -->
      <div class="px-6 pb-4">
        <h3 class="text-lg font-semibold text-center">어떤 이야기를 나누고 싶으신가요?</h3>
      </div>

      <!-- Options -->
      <div class="px-6 pb-8 space-y-3">
        <!-- 일반 커뮤니티 글 -->
        <%= link_to new_post_path(type: 'community'),
            class: "flex items-center gap-4 p-4 rounded-xl border border-border btn-hover touch-manipulation" do %>
          <div class="h-12 w-12 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center flex-shrink-0">
            <%= icon "chat-bubble-left", size: "lg", css_class: "text-blue-600 dark:text-blue-400" %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-foreground">일반 커뮤니티 글</p>
            <p class="text-sm text-muted-foreground truncate">자유, 질문, 홍보</p>
          </div>
          <%= icon "chevron-right", size: "md", css_class: "text-muted-foreground flex-shrink-0" %>
        <% end %>

        <!-- 외주/마켓 등록 -->
        <%= link_to new_post_path(type: 'outsourcing'),
            class: "flex items-center gap-4 p-4 rounded-xl border border-border btn-hover touch-manipulation" do %>
          <div class="h-12 w-12 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center flex-shrink-0">
            <%= icon "shopping-cart", size: "lg", css_class: "text-green-600 dark:text-green-400" %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-foreground">외주/마켓 등록</p>
            <p class="text-sm text-muted-foreground truncate">일 구해요, 사람 구해요</p>
          </div>
          <%= icon "chevron-right", size: "md", css_class: "text-muted-foreground flex-shrink-0" %>
        <% end %>
      </div>

      <!-- Cancel Button - 터치 최적화 -->
      <div class="px-6 pb-6">
        <button
          type="button"
          data-action="click->write-bottomsheet#close"
          class="w-full py-3.5 text-base rounded-xl border border-border text-muted-foreground btn-hover touch-manipulation"
        >
          취소
        </button>
      </div>
    </div>
  </div>
<% end %>
