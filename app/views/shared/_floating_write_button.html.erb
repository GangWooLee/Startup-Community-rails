<%# 플로팅 글쓰기 버튼 + 바텀시트 %>
<%# 표시 조건: 로그인 상태 + 글 작성/수정 페이지가 아닌 경우 %>
<% show_write_button = logged_in? && !@hide_floating_button %>
<% if show_write_button %>
  <div data-controller="write-bottomsheet">
    <!-- Floating Action Button -->
    <button
      type="button"
      data-action="click->write-bottomsheet#open"
      class="fixed bottom-24 right-4 z-50 h-14 w-14 rounded-full bg-primary text-primary-foreground shadow-lg hover:bg-primary/90 transition-all duration-200 flex items-center justify-center hover:scale-105 active:scale-95"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    </button>

    <!-- Bottom Sheet Overlay -->
    <div
      data-write-bottomsheet-target="overlay"
      data-action="click->write-bottomsheet#close"
      class="fixed inset-0 bg-black/50 z-50 hidden opacity-0 transition-opacity duration-300"
    ></div>

    <!-- Bottom Sheet -->
    <div
      data-write-bottomsheet-target="sheet"
      class="fixed bottom-0 left-0 right-0 z-50 bg-background rounded-t-2xl shadow-xl transform translate-y-full transition-transform duration-300 ease-out"
    >
      <!-- Handle -->
      <div class="flex justify-center pt-3 pb-2">
        <div class="w-10 h-1 bg-muted-foreground/30 rounded-full"></div>
      </div>

      <!-- Header -->
      <div class="px-6 pb-4">
        <h3 class="text-lg font-semibold text-center">어떤 이야기를 나누고 싶으신가요?</h3>
      </div>

      <!-- Options -->
      <div class="px-6 pb-8 space-y-3">
        <!-- 일반 커뮤니티 글 -->
        <%= link_to new_post_path(type: 'community'),
            class: "flex items-center gap-4 p-4 rounded-xl border border-border hover:bg-secondary/50 transition-colors" do %>
          <div class="h-12 w-12 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center flex-shrink-0">
            <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-medium text-foreground">일반 커뮤니티 글</p>
            <p class="text-sm text-muted-foreground">자유, 질문, 홍보</p>
          </div>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <!-- 외주/마켓 등록 -->
        <%= link_to new_post_path(type: 'outsourcing'),
            class: "flex items-center gap-4 p-4 rounded-xl border border-border hover:bg-secondary/50 transition-colors" do %>
          <div class="h-12 w-12 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center flex-shrink-0">
            <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-medium text-foreground">외주/마켓 등록</p>
            <p class="text-sm text-muted-foreground">일 구해요, 사람 구해요</p>
          </div>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>

      <!-- Cancel Button -->
      <div class="px-6 pb-6">
        <button
          type="button"
          data-action="click->write-bottomsheet#close"
          class="w-full py-3 rounded-xl border border-border text-muted-foreground hover:bg-secondary/50 transition-colors"
        >
          취소
        </button>
      </div>
    </div>
  </div>
<% end %>
