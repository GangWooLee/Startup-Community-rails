<%# 스크랩 버튼 - 재사용 가능한 컴포넌트 %>
<%# 사용법: render partial: "shared/bookmark_button", locals: { post: @post, bookmarked: @post.bookmarked_by?(current_user) } %>
<%# 옵션: size: "sm" | "md" (기본값: "md") %>

<% post = local_assigns[:post] %>
<% bookmarked = local_assigns.fetch(:bookmarked, false) %>
<% size = local_assigns.fetch(:size, "md") %>

<%
  button_class = size == "sm" ? "h-8 px-2" : "h-9 px-3"
  icon_class = size == "sm" ? "h-4 w-4" : "h-5 w-5"
%>

<div
  id="bookmark-button-<%= post.id %>"
  data-controller="bookmark-button"
  data-bookmark-button-url-value="<%= bookmark_post_path(post) %>"
  data-bookmark-button-bookmarked-value="<%= bookmarked %>"
>
  <button
    type="button"
    data-action="click->bookmark-button#toggle"
    class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium btn-hover focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 rounded-md <%= button_class %>"
  >
    <span data-bookmark-button-target="icon" class="<%= bookmarked ? 'text-yellow-500' : 'text-muted-foreground' %> transition-transform">
      <% if bookmarked %>
        <svg class="<%= icon_class %>" fill="currentColor" viewBox="0 0 24 24">
          <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
        </svg>
      <% else %>
        <svg class="<%= icon_class %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
        </svg>
      <% end %>
    </span>
  </button>
</div>
