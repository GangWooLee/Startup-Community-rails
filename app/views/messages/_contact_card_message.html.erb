<%# 연락처 카드 메시지 %>
<%# locals: message, show_profile (optional), show_time (optional), is_read (optional) %>
<%
  # current_user가 없을 수 있음 (브로드캐스트 시)
  viewing_user_id = defined?(current_user) && current_user ? current_user.id : nil
  is_mine = viewing_user_id && message.sender_id == viewing_user_id
  container_class = is_mine ? "justify-end" : "justify-start"
  metadata = message.metadata || {}

  # 그룹화 옵션 (기본값: 프로필과 시간 모두 표시)
  show_profile = local_assigns.fetch(:show_profile, true)
  show_time = local_assigns.fetch(:show_time, true)
  is_read = local_assigns.fetch(:is_read, true)
%>

<div id="<%= dom_id(message) %>" class="flex <%= container_class %> animate-fade-in <%= show_profile ? '' : 'mt-0.5' %>">
  <% unless is_mine %>
    <%# 프로필 영역: 표시하거나 빈 공간 유지 %>
    <div class="flex-shrink-0 mr-2 self-end w-8">
      <% if show_profile %>
        <%= link_to profile_path(message.sender), class: "block" do %>
          <%= render "shared/avatar", user: message.sender, size: "sm" %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <div class="max-w-[75%] <%= is_mine ? 'order-1' : '' %>">
    <%# 카드와 시간/읽음 표시를 같은 줄에 %>
    <div class="flex items-end gap-1.5 <%= is_mine ? 'flex-row-reverse' : '' %>">
      <div class="bg-white border border-gray-200 rounded-xl p-3 flex-1">
        <!-- 카드 헤더 -->
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <span class="text-xs font-medium text-blue-500">연락처 공유</span>
        </div>

        <!-- 연락처 정보 -->
        <div class="space-y-2">
          <% if metadata["email"].present? %>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <a href="mailto:<%= metadata["email"] %>" class="text-sm text-blue-600 hover:underline truncate">
                <%= metadata["email"] %>
              </a>
            </div>
          <% end %>

          <% if metadata["open_chat_url"].present? %>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <a href="<%= metadata["open_chat_url"] %>" target="_blank" rel="noopener" class="text-sm text-blue-600 hover:underline truncate">
                오픈채팅 링크
              </a>
            </div>
          <% end %>
        </div>
      </div>

      <%# 시간 또는 읽음 표시가 필요한 경우 %>
      <% if show_time || (is_mine && !is_read) %>
        <div class="flex flex-col items-<%= is_mine ? 'end' : 'start' %> gap-0.5 flex-shrink-0">
          <%# 읽음 표시 (내 메시지이고 상대방이 안 읽었을 때 - 시간과 관계없이 항상 표시) %>
          <% if is_mine && !is_read %>
            <span class="text-[11px] text-gray-600 font-medium">-</span>
          <% end %>
          <% if show_time %>
            <span class="text-[11px] text-gray-400">
              <%= format_message_time(message.created_at) %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
