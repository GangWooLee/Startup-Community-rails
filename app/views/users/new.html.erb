<div class="min-h-screen w-full flex items-center justify-center bg-background px-4 py-8 relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 32px 32px;"></div>

  <!-- Decorative gradient blurs -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>

  <!-- Main Content -->
  <div class="relative z-10 w-full max-w-md">
    <!-- Character Header -->
    <div class="text-center mb-6">
      <!-- Character with subtle entry animation -->
      <div class="flex justify-center mb-4">
        <img src="/undrew_hello_icon.png"
             alt="Undrew Character"
             class="w-40 h-40 object-contain animate-fade-slide-up drop-shadow-xl">
      </div>

      <!-- Welcome Text -->
      <h1 class="text-2xl font-bold text-foreground mb-1">Undrew에 오신 것을 환영합니다!</h1>
      <p class="text-muted-foreground text-sm">아이디어, 사람, 기업이 만나는 곳</p>
    </div>

    <!-- Signup Card -->
    <div class="rounded-xl border bg-card text-card-foreground shadow-xl p-8">
      <h2 class="text-xl font-semibold text-foreground mb-6 text-center">회원가입</h2>

      <!-- Social Signup Buttons -->
      <div class="space-y-2 mb-6">
        <%= form_with url: oauth_passthru_path(provider: "google_oauth2"), method: :post, local: true, data: { turbo: false } do %>
          <%= hidden_field_tag :origin, @return_to if @return_to.present? %>
          <%= render_button variant: :outline, class: "w-full h-11 gap-2 border-2 border-border hover:border-foreground/30" do %>
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
            </svg>
            Google로 시작하기
          <% end %>
        <% end %>

        <%= form_with url: oauth_passthru_path(provider: "github"), method: :post, local: true, data: { turbo: false } do %>
          <%= hidden_field_tag :origin, @return_to if @return_to.present? %>
          <%= render_button variant: :outline, class: "w-full h-11 gap-2 border-2 border-border hover:border-foreground/30" do %>
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub로 시작하기
          <% end %>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-border"></div>
        </div>
        <div class="relative flex justify-center text-xs uppercase">
          <span class="bg-card px-2 text-muted-foreground">또는 이메일로 가입</span>
        </div>
      </div>

      <%= form_with model: @user, url: signup_path, method: :post, local: true, class: "space-y-4", data: { controller: "email-verification" } do |f| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="rounded-md bg-destructive/10 border border-destructive/20 p-4">
            <div class="flex items-start gap-3">
              <svg class="h-5 w-5 text-destructive flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div class="flex-1">
                <h3 class="text-sm font-medium text-destructive mb-2">
                  <%= pluralize(@user.errors.count, "개의") %> 오류가 발생했습니다:
                </h3>
                <ul class="list-disc list-inside text-sm text-destructive space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Name Field -->
        <div class="space-y-2">
          <%= render_label name: "user[name]", label: "이름 *" %>
          <%= render_input name: "user[name]",
                          type: :text,
                          id: "user_name",
                          value: @user.name,
                          placeholder: "홍길동",
                          required: true,
                          class: "w-full" %>
        </div>

        <!-- Email Field with Verification -->
        <div class="space-y-2">
          <%= render_label name: "user[email]", label: "이메일 *" %>
          <div class="flex gap-2">
            <input type="email"
                   name="user[email]"
                   id="user_email"
                   value="<%= @user.email %>"
                   placeholder="example@startup.com"
                   required
                   data-email-verification-target="emailInput"
                   class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50">
            <button type="button"
                    data-email-verification-target="sendButton"
                    data-action="click->email-verification#sendCode"
                    class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background btn-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background h-10 px-4">
              인증 코드 받기
            </button>
          </div>

          <!-- Email Verification Code Section -->
          <div data-email-verification-target="codeSection" class="hidden mt-3">
            <div class="flex gap-2 items-center">
              <input type="text"
                     maxlength="6"
                     placeholder="인증 코드 6자리"
                     data-email-verification-target="codeInput"
                     data-action="input->email-verification#onCodeInput"
                     class="flex h-10 flex-1 rounded-md border border-input bg-background px-3 py-2 text-sm tracking-widest font-mono uppercase ring-offset-background placeholder:text-muted-foreground placeholder:tracking-normal placeholder:font-sans focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50">
              <span data-email-verification-target="timer" class="text-sm font-mono text-muted-foreground w-12">5:00</span>
              <button type="button"
                      data-email-verification-target="verifyButton"
                      data-action="click->email-verification#verifyCode"
                      class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background btn-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground h-10 px-4">
                인증
              </button>
              <span data-email-verification-target="verifiedBadge" class="hidden text-green-600 flex items-center gap-1">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm font-medium">인증 완료</span>
              </span>
            </div>
            <p class="text-xs text-muted-foreground mt-1">이메일로 발송된 6자리 인증 코드를 입력해주세요</p>
          </div>
        </div>

        <!-- Password Field -->
        <div class="space-y-2">
          <%= render_label name: "user[password]", label: "비밀번호 * (최소 8자)" %>
          <%= render_input name: "user[password]",
                          type: :password,
                          id: "user_password",
                          placeholder: "••••••••",
                          required: true,
                          class: "w-full" %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="space-y-2">
          <%= render_label name: "user[password_confirmation]", label: "비밀번호 확인 *" %>
          <%= render_input name: "user[password_confirmation]",
                          type: :password,
                          id: "user_password_confirmation",
                          placeholder: "••••••••",
                          required: true,
                          class: "w-full" %>
        </div>

        <!-- Role Title Field (Optional) -->
        <div class="space-y-2">
          <%= render_label name: "user[role_title]", label: "직함/역할 (선택)" %>
          <%= render_input name: "user[role_title]",
                          type: :text,
                          id: "user_role_title",
                          value: @user.role_title,
                          placeholder: "예: 개발자, 디자이너, 기획자",
                          class: "w-full" %>
          <p class="text-xs text-muted-foreground">프로필에 표시될 직함을 입력하세요</p>
        </div>

        <!-- Bio Field (Optional) -->
        <div class="space-y-2">
          <%= render_label name: "user[bio]", label: "자기소개 (선택)" %>
          <%= render_textarea name: "user[bio]",
                             id: "user_bio",
                             value: @user.bio,
                             placeholder: "간단한 자기소개를 작성하세요...",
                             rows: 3,
                             class: "w-full resize-none" %>
          <p class="text-xs text-muted-foreground">최대 500자</p>
        </div>

        <!-- Terms Agreement -->
        <div class="flex items-start gap-2">
          <input type="checkbox" id="terms" required class="mt-1 rounded border-input h-4 w-4">
          <label for="terms" class="text-sm text-muted-foreground">
            <a href="#" class="text-primary link-hover relative">이용약관</a> 및
            <a href="#" class="text-primary link-hover relative">개인정보 처리방침</a>에 동의합니다 *
          </label>
        </div>

        <!-- Submit Button -->
        <button type="submit"
                data-email-verification-target="submitButton"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background btn-hover focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground h-11 px-8 w-full">
          회원가입
        </button>
      <% end %>

      <!-- Login Link -->
      <div class="mt-6 text-center text-sm text-muted-foreground">
        이미 계정이 있으신가요?
        <%= link_to "로그인", login_path, class: "text-primary font-medium hover:underline ml-1" %>
      </div>
    </div>

    <!-- Back to Home -->
    <div class="mt-4 text-center">
      <%= link_to "← 처음으로 돌아가기", root_path, class: "text-sm text-muted-foreground link-hover relative inline-block" %>
    </div>
  </div>
</div>
