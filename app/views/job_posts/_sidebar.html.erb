<%#
  Job Posts Sidebar - Desktop 우측 사이드바
  lg 이상에서만 표시, Sticky 포지션

  Structure:
  - HOT Card: 인기 공고
  - Stats Card: 현황 통계
  - Top Makers Card: 인기 메이커
  - Quick Links: 빠른 시작

  locals: hiring_count, seeking_count, today_count, top_makers, featured_posts
%>

<aside class="hidden lg:block">
  <div class="sticky top-24 space-y-5">

    <%# ===== HOT 공고 Card ===== %>
    <% if featured_posts.present? && featured_posts.any? %>
      <div class="bg-gradient-to-br from-rose-50 to-orange-50 rounded-2xl border border-rose-100/50 p-4 shadow-sm">
        <h4 class="flex items-center gap-2 font-bold text-stone-900 mb-3">
          <span class="text-base">🔥</span>
          <span class="text-sm">HOT</span>
        </h4>

        <div class="space-y-2">
          <% featured_posts.first(2).each do |post| %>
            <%= link_to post_path(post),
                class: "block p-3 bg-white/80 rounded-xl hover:bg-white transition-colors group" do %>
              <%# 제목 %>
              <p class="font-medium text-sm text-stone-800 group-hover:text-orange-600
                        transition-colors line-clamp-1 mb-1">
                <%= post.title %>
              </p>
              <%# 가격/예산 + 카테고리 %>
              <div class="flex items-center justify-between">
                <span class="text-xs font-medium <%= post.hiring? ? 'text-orange-600' : 'text-blue-600' %>">
                  <%= post.hiring? ? '구인' : '구직' %>
                </span>
                <% if post.budget.present? %>
                  <span class="text-xs text-stone-500"><%= post.budget %></span>
                <% elsif post.price.present? && post.price > 0 %>
                  <span class="text-xs text-stone-500"><%= number_to_currency(post.price, unit: "₩", precision: 0) %></span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# ===== Stats Summary Card ===== %>
    <div class="bg-white rounded-2xl border border-stone-200/60 p-5 shadow-sm">
      <h4 class="flex items-center gap-2 font-bold text-stone-900 mb-4">
        <span class="text-lg">📊</span>
        Join Project 현황
      </h4>

      <div class="space-y-4">
        <%# Makers Count %>
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-lg bg-[#2C2825] flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <span class="text-stone-600">Makers</span>
          </div>
          <span class="font-bold text-lg text-stone-900"><%= hiring_count %></span>
        </div>

        <%# Projects Count %>
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-orange-400 to-amber-500 flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <span class="text-stone-600">Projects</span>
          </div>
          <span class="font-bold text-lg text-stone-900"><%= seeking_count %></span>
        </div>

        <%# Divider %>
        <div class="border-t border-stone-100"></div>

        <%# Today's New %>
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-lg bg-emerald-100 flex items-center justify-center">
              <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
            </div>
            <span class="text-stone-600">오늘 신규</span>
          </div>
          <span class="font-bold text-lg text-emerald-600">+<%= today_count %><span class="text-sm font-normal">건</span></span>
        </div>
      </div>
    </div>

    <%# ===== Top Makers Card ===== %>
    <% if top_makers.present? && top_makers.any? %>
      <div class="bg-white rounded-2xl border border-stone-200/60 p-5 shadow-sm">
        <h4 class="flex items-center gap-2 font-bold text-stone-900 mb-4">
          <span class="text-lg">⭐</span>
          Top Makers
        </h4>

        <div class="space-y-3">
          <% top_makers.each_with_index do |user, index| %>
            <%= link_to profile_path(user), class: "flex items-center gap-3 p-2 -mx-2 rounded-xl hover:bg-stone-50 transition-colors group" do %>
              <%# Rank Badge %>
              <span class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold
                           <%= index == 0 ? 'bg-amber-100 text-amber-700' : index == 1 ? 'bg-stone-200 text-stone-600' : index == 2 ? 'bg-orange-100 text-orange-600' : 'bg-stone-100 text-stone-500' %>">
                <%= index + 1 %>
              </span>

              <%# Avatar (익명 모드 지원) %>
              <%= render_user_avatar(user, size: "sm") %>

              <%# Info (익명 모드 지원) %>
              <div class="flex-1 min-w-0">
                <p class="font-medium text-sm text-stone-900 truncate group-hover:text-orange-600 transition-colors">
                  <%= user.display_name %>
                </p>
                <p class="text-xs text-stone-500 truncate"><%= user.role_title.presence || '멤버' %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# ===== Quick Links Card ===== %>
    <div class="bg-gradient-to-br from-orange-50 to-amber-50 rounded-2xl p-5 border border-orange-100/50">
      <h4 class="flex items-center gap-2 font-bold text-stone-900 mb-4">
        <span class="text-lg">💡</span>
        빠른 시작
      </h4>

      <div class="space-y-2">
        <% if logged_in? %>
          <%= link_to new_post_path(type: 'outsourcing'),
              class: "flex items-center gap-3 px-4 py-3 bg-white rounded-xl text-sm font-medium
                     text-stone-700 hover:bg-orange-100 hover:text-orange-700 transition-colors shadow-sm" do %>
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            등록하기
          <% end %>

          <%= link_to my_page_path,
              class: "flex items-center gap-3 px-4 py-3 bg-white rounded-xl text-sm font-medium
                     text-stone-700 hover:bg-orange-100 hover:text-orange-700 transition-colors shadow-sm" do %>
            <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            내 프로필 관리
          <% end %>
        <% else %>
          <%= link_to login_path,
              class: "flex items-center gap-3 px-4 py-3 bg-white rounded-xl text-sm font-medium
                     text-stone-700 hover:bg-orange-100 hover:text-orange-700 transition-colors shadow-sm" do %>
            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
            </svg>
            로그인하고 시작하기
          <% end %>
        <% end %>

        <%= link_to community_path,
            class: "flex items-center gap-3 px-4 py-3 bg-white/80 rounded-xl text-sm font-medium
                   text-stone-600 hover:bg-white hover:text-stone-700 transition-colors" do %>
          <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
          </svg>
          커뮤니티 둘러보기
        <% end %>
      </div>
    </div>

    <%# ===== Help Banner ===== %>
    <div class="text-center py-4">
      <p class="text-xs text-stone-400">
        도움이 필요하신가요?
        <a href="mailto:support@example.com" class="text-orange-600 hover:underline">문의하기</a>
      </p>
    </div>

  </div>
</aside>
