<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center gap-3">
      <button onclick="history.back()" class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 rounded-md">
        <%= render partial: "shared/icons/arrow_left", locals: { css_class: "h-5 w-5" } %>
      </button>
      <h1 class="text-xl font-bold">구인 공고</h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <!-- Job Post Card -->
    <article class="bg-card rounded-xl p-6 border border-border mb-6">
      <!-- Author Info -->
      <%= link_to profile_path(@job_post.user_id), class: "flex items-center gap-3 mb-6 group" do %>
        <div class="h-14 w-14 rounded-full bg-secondary flex items-center justify-center overflow-hidden flex-shrink-0">
          <% if @job_post.user.avatar_url %>
            <%= image_tag @job_post.user.avatar_url, alt: @job_post.user.name, class: "h-full w-full object-cover" %>
          <% else %>
            <span class="text-xl font-semibold"><%= @job_post.user.name[0] %></span>
          <% end %>
        </div>
        <div class="flex-1">
          <p class="font-bold text-lg text-foreground group-hover:text-primary transition-colors"><%= @job_post.user.name %></p>
          <% if @job_post.user.role_title.present? %>
            <p class="text-sm text-muted-foreground"><%= @job_post.user.role_title %></p>
          <% end %>
          <p class="text-xs text-muted-foreground mt-1">
            <%= time_ago_in_words(@job_post.created_at) %> 전 등록 · 조회 <%= @job_post.views_count %>
          </p>
        </div>
      <% end %>

      <!-- Category & Type Badges -->
      <div class="flex flex-wrap items-center gap-2 mb-4">
        <%= render partial: "shared/icons/briefcase", locals: { css_class: "h-4 w-4 text-primary" } %>
        <span class="inline-flex items-center rounded-md bg-primary/10 px-3 py-1 text-xs font-semibold text-primary">
          구인 공고
        </span>
        <span class="inline-flex items-center rounded-md bg-secondary px-3 py-1 text-xs font-semibold text-secondary-foreground">
          <%= @job_post.category_i18n %>
        </span>
        <span class="inline-flex items-center rounded-md border border-border px-3 py-1 text-xs font-semibold">
          <%= @job_post.project_type_i18n %>
        </span>
        <span class="inline-flex items-center rounded-md border border-border px-3 py-1 text-xs font-semibold">
          <%= @job_post.status_i18n %>
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-2xl font-bold mb-4 text-foreground"><%= @job_post.title %></h1>

      <!-- Budget -->
      <% if @job_post.budget.present? %>
        <div class="bg-secondary rounded-lg p-4 mb-6">
          <p class="text-sm text-muted-foreground mb-1">예산</p>
          <p class="text-xl font-bold text-primary"><%= @job_post.budget %></p>
        </div>
      <% end %>

      <!-- Description -->
      <div class="prose max-w-none mb-6">
        <h3 class="text-lg font-semibold mb-3">상세 설명</h3>
        <p class="text-foreground leading-relaxed whitespace-pre-wrap"><%= @job_post.description %></p>
      </div>

      <!-- Divider -->
      <div class="border-t border-border my-6"></div>

      <!-- Contact Button -->
      <div class="flex gap-3">
        <button class="flex-1 inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-11 px-8">
          <%= render partial: "shared/icons/message_square", locals: { css_class: "h-4 w-4" } %>
          문의하기
        </button>
        <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-11 px-4 py-2">
          <%= render partial: "shared/icons/bookmark", locals: { css_class: "h-4 w-4" } %>
        </button>
        <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-11 px-4 py-2">
          <%= render partial: "shared/icons/share", locals: { css_class: "h-4 w-4" } %>
        </button>
      </div>
    </article>

    <!-- Author's Other Posts -->
    <div class="bg-card rounded-xl p-6 border border-border">
      <h2 class="text-lg font-bold mb-4">이 작성자의 다른 공고</h2>
      <div class="text-center py-8 text-muted-foreground">
        <p class="text-sm">다른 공고가 없습니다</p>
      </div>
    </div>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
