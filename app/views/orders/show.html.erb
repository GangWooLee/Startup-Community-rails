<%# 주문 상세 페이지 %>
<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <%# 헤더 %>
    <div class="mb-6">
      <%= link_to orders_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        주문 내역
      <% end %>
    </div>

    <%# 주문 상태 배지 %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-xl font-bold text-gray-900">주문 상세</h1>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                     <%= case @order.status
                         when 'pending' then 'bg-yellow-100 text-yellow-800'
                         when 'paid' then 'bg-green-100 text-green-800'
                         when 'cancelled' then 'bg-gray-100 text-gray-800'
                         when 'refunded' then 'bg-red-100 text-red-800'
                         end %>">
          <%= @order.status_label %>
        </span>
      </div>

      <p class="text-sm text-gray-500">
        주문번호: <span class="font-mono"><%= @order.order_number %></span>
      </p>
    </div>

    <%# 상품 정보 %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">상품 정보</h2>

      <%= link_to post_path(@order.post), class: "flex items-start space-x-4 p-4 -mx-4 rounded-xl card-hover" do %>
        <div class="flex-1 min-w-0">
          <h3 class="font-medium text-gray-900"><%= @order.post.title %></h3>
          <p class="text-sm text-gray-500 mt-1 line-clamp-2"><%= @order.post.content.truncate(100) %></p>
          <div class="flex flex-wrap gap-2 mt-3">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= @order.post.category_label %>
            </span>
            <% if @order.post.service_type.present? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                <%= @order.post.service_type_label %>
              </span>
            <% end %>
          </div>
        </div>
        <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>

    <%# 거래 상대방 정보 %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">
        <%= @order.user_id == current_user.id ? '판매자 정보' : '구매자 정보' %>
      </h2>

      <% other_user = @order.user_id == current_user.id ? @order.seller : @order.user %>
      <%= link_to profile_path(other_user), class: "flex items-center justify-between p-4 -mx-4 rounded-xl card-hover" do %>
        <div class="flex items-center space-x-4">
          <%= render_user_avatar(other_user, size: :lg) %>
          <div>
            <p class="font-medium text-gray-900"><%= other_user.name %></p>
            <p class="text-sm text-gray-500"><%= other_user.role_title %></p>
          </div>
        </div>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>

    <%# 결제 정보 %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">결제 정보</h2>

      <dl class="space-y-3">
        <div class="flex justify-between">
          <dt class="text-gray-500">결제 금액</dt>
          <dd class="font-bold text-gray-900"><%= @order.formatted_amount %></dd>
        </div>

        <% if @payment %>
          <div class="flex justify-between">
            <dt class="text-gray-500">결제 수단</dt>
            <dd class="text-gray-900"><%= @payment.method_label %></dd>
          </div>

          <% if @payment.card_company.present? %>
            <div class="flex justify-between">
              <dt class="text-gray-500">카드사</dt>
              <dd class="text-gray-900"><%= @payment.card_company %></dd>
            </div>
          <% end %>

          <% if @payment.card_number.present? %>
            <div class="flex justify-between">
              <dt class="text-gray-500">카드 번호</dt>
              <dd class="text-gray-900 font-mono"><%= @payment.card_number %></dd>
            </div>
          <% end %>

          <div class="flex justify-between">
            <dt class="text-gray-500">결제 상태</dt>
            <dd class="text-gray-900"><%= @payment.status_label %></dd>
          </div>

          <% if @payment.approved_at.present? %>
            <div class="flex justify-between">
              <dt class="text-gray-500">결제 일시</dt>
              <dd class="text-gray-900"><%= @payment.approved_at.strftime("%Y.%m.%d %H:%M:%S") %></dd>
            </div>
          <% end %>
        <% end %>

        <div class="flex justify-between">
          <dt class="text-gray-500">주문 일시</dt>
          <dd class="text-gray-900"><%= @order.created_at.strftime("%Y.%m.%d %H:%M:%S") %></dd>
        </div>
      </dl>

      <%# 영수증 버튼 %>
      <% if @payment&.receipt_available? %>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <%= link_to @payment.receipt_url,
                      target: "_blank",
                      rel: "noopener",
                      class: "inline-flex items-center text-blue-600 hover:text-blue-700 font-medium" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            영수증 보기
          <% end %>
        </div>
      <% end %>
    </div>

    <%# 액션 버튼 %>
    <% if @order.user_id == current_user.id %>
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <% if @order.can_cancel? %>
          <%= button_to "주문 취소",
                        cancel_order_path(@order),
                        method: :post,
                        data: { confirm: "정말 주문을 취소하시겠습니까?" },
                        class: "w-full py-3 px-6 bg-red-600 text-white font-semibold rounded-xl btn-hover" %>
          <p class="text-xs text-gray-500 text-center mt-3">
            결제 후 7일 이내에만 취소가 가능합니다.
          </p>
        <% elsif @order.pending? %>
          <%= link_to "결제 진행하기",
                      new_payment_path(post_id: @order.post_id),
                      class: "block w-full py-3 px-6 bg-blue-600 text-white font-semibold rounded-xl text-center btn-hover" %>
        <% elsif @order.cancelled? || @order.refunded? %>
          <p class="text-center text-gray-500">
            <%= @order.cancelled? ? '취소된 주문입니다.' : '환불된 주문입니다.' %>
          </p>
        <% else %>
          <p class="text-center text-gray-500">취소 가능 기간이 지났습니다.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
