<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <button onclick="history.back()" class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 rounded-md">
          <%= render partial: "shared/icons/arrow_left", locals: { css_class: "h-5 w-5" } %>
        </button>
        <h1 class="text-xl font-bold">프로필</h1>
      </div>
      <% if @is_own_profile %>
        <%= link_to edit_my_page_path, class: "text-sm text-muted-foreground hover:text-foreground" do %>
          설정
        <% end %>
      <% end %>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto">
    <!-- Profile Header -->
    <div class="px-4 py-6 border-b border-border text-center">
      <!-- Profile Image -->
      <div class="h-24 w-24 rounded-full ring-4 ring-background overflow-hidden bg-secondary flex items-center justify-center mx-auto mb-4">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, alt: @user.name, class: "h-full w-full object-cover" %>
        <% elsif @user.avatar_url.present? %>
          <%= image_tag @user.avatar_url, alt: @user.name, class: "h-full w-full object-cover" %>
        <% else %>
          <span class="text-3xl font-semibold text-muted-foreground"><%= @user.name[0] %></span>
        <% end %>
      </div>

      <!-- Name & Affiliation -->
      <div class="mb-3">
        <div class="flex items-center justify-center gap-2 mb-1">
          <h2 class="text-2xl font-bold"><%= @user.name %></h2>
          <% if @user.affiliation.present? %>
            <span class="text-muted-foreground">(<%= @user.affiliation %>)</span>
          <% end %>
        </div>

        <!-- Availability Status Badges -->
        <% if @user.has_availability_status? %>
          <div class="flex items-center justify-center gap-2 flex-wrap">
            <% @user.availability_badges.each do |badge| %>
              <span class="inline-flex items-center gap-1.5 rounded-full px-3 py-1 text-xs font-semibold text-white <%= badge[:color] %>">
                <span class="h-1.5 w-1.5 rounded-full bg-white animate-pulse"></span>
                <%= badge[:label] %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Role Tags -->
      <div class="flex items-center justify-center gap-2 flex-wrap mb-3">
        <% if @user.role_title.present? %>
          <span class="inline-flex items-center rounded-md bg-primary/10 text-primary px-2.5 py-0.5 text-xs font-semibold">
            #<%= @user.role_title %>
          </span>
        <% end %>
        <% @user.skills_array.first(3).each do |skill| %>
          <span class="inline-flex items-center rounded-md bg-secondary px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground">
            #<%= skill %>
          </span>
        <% end %>
      </div>

      <!-- Bio (한 줄 소개) -->
      <% if @user.bio.present? %>
        <p class="text-foreground leading-relaxed max-w-md mx-auto mb-4">"<%= @user.bio %>"</p>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex items-center justify-center gap-3">
        <% if @user.open_chat_url.present? %>
          <%= link_to @user.open_chat_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-4 py-2" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            1:1 문의하기
          <% end %>
        <% end %>

        <% if @user.github_url.present? %>
          <%= link_to @user.github_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2" do %>
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          <% end %>
        <% end %>

        <% if @user.portfolio_url.present? %>
          <%= link_to @user.portfolio_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            포트폴리오
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Tab Navigation (Sticky) -->
    <div class="sticky top-[57px] bg-background z-30 border-b border-border">
      <div class="max-w-screen-xl mx-auto px-4">
        <div class="flex">
          <button data-tab="about" class="tab-trigger flex-1 py-3 text-sm font-medium text-center border-b-2 border-primary text-foreground">
            소개
          </button>
          <button data-tab="posts" class="tab-trigger flex-1 py-3 text-sm font-medium text-center border-b-2 border-transparent text-muted-foreground hover:text-foreground">
            커뮤니티 글
          </button>
          <button data-tab="market" class="tab-trigger flex-1 py-3 text-sm font-medium text-center border-b-2 border-transparent text-muted-foreground hover:text-foreground">
            외주/공고
          </button>
        </div>
      </div>
    </div>

    <!-- Tab Contents -->
    <div class="px-4 py-6">
      <!-- 소개 탭 -->
      <div id="tab-about" class="tab-content space-y-6">
        <!-- 상세 정보 -->
        <div class="bg-card rounded-xl p-6 border border-border">
          <h3 class="text-lg font-semibold mb-4">기본 정보</h3>
          <div class="space-y-3 text-sm">
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span><%= @user.email %></span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>가입일: <%= @user.created_at.strftime("%Y년 %m월") %></span>
            </div>
          </div>
        </div>

        <!-- 기술 스택 -->
        <% if @user.skills_array.any? %>
          <div class="bg-card rounded-xl p-6 border border-border">
            <h3 class="text-lg font-semibold mb-4">기술 스택</h3>
            <div class="flex flex-wrap gap-2">
              <% @user.skills_array.each do |skill| %>
                <span class="inline-flex items-center rounded-full bg-secondary px-3 py-1 text-sm font-medium text-secondary-foreground">
                  <%= skill %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- 연결된 계정 -->
        <% if @user.oauth_identities.any? %>
          <div class="bg-card rounded-xl p-6 border border-border">
            <h3 class="text-lg font-semibold mb-4">연결된 계정</h3>
            <div class="flex gap-3">
              <% @user.oauth_identities.each do |identity| %>
                <div class="flex items-center gap-2 px-3 py-2 rounded-lg bg-secondary/50">
                  <% if identity.provider == "google_oauth2" %>
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                    </svg>
                    <span class="text-sm">Google</span>
                  <% elsif identity.provider == "github" %>
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    <span class="text-sm">GitHub</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 커뮤니티 글 탭 -->
      <div id="tab-posts" class="tab-content space-y-4 hidden">
        <% if @posts.any? %>
          <% @posts.each do |post| %>
            <%= link_to post_path(post.id) do %>
              <article class="bg-card rounded-xl p-6 border border-border hover:border-primary/50 transition-all cursor-pointer mb-4">
                <h3 class="text-lg font-bold mb-2"><%= post.title %></h3>
                <p class="text-foreground mb-3 leading-relaxed line-clamp-2"><%= post.content %></p>
                <div class="flex items-center gap-4 text-sm text-muted-foreground">
                  <span><%= post.likes_count %> 좋아요</span>
                  <span><%= post.comments_count %> 댓글</span>
                  <span class="ml-auto"><%= time_ago_in_words(post.created_at) %> 전</span>
                </div>
              </article>
            <% end %>
          <% end %>
        <% else %>
          <div class="text-center py-12 text-muted-foreground">
            <svg class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p>아직 작성한 글이 없습니다</p>
          </div>
        <% end %>
      </div>

      <!-- 외주/공고 탭 -->
      <div id="tab-market" class="tab-content space-y-4 hidden">
        <% if @job_posts.any? || @talent_listings.any? %>
          <!-- 구인 공고 -->
          <% @job_posts.each do |job| %>
            <%= link_to job_post_path(job.id) do %>
              <article class="bg-card rounded-xl p-6 border border-border hover:border-primary/50 transition-all cursor-pointer mb-4">
                <div class="flex items-center gap-2 mb-3">
                  <span class="inline-flex items-center rounded-md bg-blue-500/10 text-blue-600 px-2.5 py-0.5 text-xs font-semibold">
                    구인
                  </span>
                  <span class="inline-flex items-center rounded-md bg-secondary px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground">
                    <%= job.category_i18n %>
                  </span>
                </div>
                <h3 class="text-lg font-bold mb-2"><%= job.title %></h3>
                <p class="text-muted-foreground mb-3 line-clamp-2"><%= job.description %></p>
                <div class="flex items-center gap-4 text-sm text-muted-foreground">
                  <% if job.budget.present? %>
                    <span class="font-medium text-foreground"><%= job.budget %></span>
                  <% end %>
                  <span class="ml-auto"><%= time_ago_in_words(job.created_at) %> 전</span>
                </div>
              </article>
            <% end %>
          <% end %>

          <!-- 구직 공고 -->
          <% @talent_listings.each do |talent| %>
            <article class="bg-card rounded-xl p-6 border border-border hover:border-primary/50 transition-all cursor-pointer mb-4">
              <div class="flex items-center gap-2 mb-3">
                <span class="inline-flex items-center rounded-md bg-green-500/10 text-green-600 px-2.5 py-0.5 text-xs font-semibold">
                  구직
                </span>
                <span class="inline-flex items-center rounded-md bg-secondary px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground">
                  <%= talent.category_i18n %>
                </span>
              </div>
              <h3 class="text-lg font-bold mb-2"><%= talent.title %></h3>
              <p class="text-muted-foreground mb-3 line-clamp-2"><%= talent.description %></p>
              <div class="flex items-center gap-4 text-sm text-muted-foreground">
                <% if talent.rate.present? %>
                  <span class="font-medium text-foreground"><%= talent.rate %></span>
                <% end %>
                <span class="ml-auto"><%= time_ago_in_words(talent.created_at) %> 전</span>
              </div>
            </article>
          <% end %>
        <% else %>
          <div class="text-center py-12 text-muted-foreground">
            <svg class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <p>아직 등록한 외주 공고가 없습니다</p>
          </div>
        <% end %>
      </div>
    </div>
  </main>

  <%= render "shared/bottom_nav" %>
</div>

<script>
  function setupProfileTabs() {
    const tabTriggers = document.querySelectorAll('.tab-trigger');
    const tabContents = document.querySelectorAll('.tab-content');

    tabTriggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        const tabId = this.getAttribute('data-tab');

        // Reset all triggers
        tabTriggers.forEach(t => {
          t.classList.remove('border-primary', 'text-foreground');
          t.classList.add('border-transparent', 'text-muted-foreground');
        });

        // Activate clicked trigger
        this.classList.remove('border-transparent', 'text-muted-foreground');
        this.classList.add('border-primary', 'text-foreground');

        // Hide all contents
        tabContents.forEach(content => content.classList.add('hidden'));

        // Show selected content
        document.getElementById('tab-' + tabId).classList.remove('hidden');
      });
    });
  }

  document.addEventListener('DOMContentLoaded', setupProfileTabs);
  document.addEventListener('turbo:load', setupProfileTabs);
  document.addEventListener('turbo:render', setupProfileTabs);
</script>
