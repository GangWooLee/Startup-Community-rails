<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<%#
  Maker's Studio - Profile Page (Global Sidebar Version)
  Wide-style layout that works with the Global Sidebar

  Layout: Cover Image (full width) → 2 Column (Profile Card + Tabs)
  Profile card overlaps the cover image for visual interest
%>
<div class="min-h-full pb-20 md:pb-0" data-controller="report-modal">
  <%# Noise Texture Background %>
  <div class="absolute inset-0 pointer-events-none opacity-30 z-0"
       style="background-image: url('data:image/svg+xml,%3Csvg viewBox=\"0 0 200 200\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cfilter id=\"noise\"%3E%3CfeTurbulence type=\"fractalNoise\" baseFrequency=\"0.65\" numOctaves=\"3\" stitchTiles=\"stitch\"/%3E%3C/filter%3E%3Crect width=\"100%\" height=\"100%\" filter=\"url(%23noise)\" opacity=\"0.4\"/%3E%3C/svg%3E');">
  </div>

  <%# Inline Header (Settings/Report + Back button) %>
  <div class="relative z-20 max-w-[1200px] mx-auto px-6 py-3 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <button type="button"
              class="p-2 rounded-xl text-stone-500 hover:bg-stone-100/80 transition-colors bg-white/60 backdrop-blur-sm"
              data-controller="navigation"
              data-navigation-fallback-value="<%= root_path %>"
              data-action="click->navigation#goBack">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>
      <span class="text-sm font-medium text-stone-600"><%= @user.display_name %>님의 프로필</span>
    </div>

    <div class="flex items-center gap-2">
      <% if @is_own_profile %>
        <%= link_to edit_my_page_path,
            class: "inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium
                    text-stone-600 hover:text-stone-800 bg-white/60 hover:bg-white
                    rounded-lg transition-colors backdrop-blur-sm" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          설정
        <% end %>
      <%# 신고 버튼: 프로필 카드에 이미 있으므로 상단 헤더에서 제거 (Task #68) %>
      <% end %>
    </div>
  </div>

  <%# Cover Image - Full Width Hero %>
  <div class="relative z-10">
    <%= render "profiles/cover", user: @user, editable: false %>
  </div>

  <%# Main Content - 2 Column Layout (노트북: 5:7, 데스크탑: 4:8) %>
  <main class="relative z-10 max-w-[1200px] mx-auto px-6 py-6">
    <div class="lg:grid lg:grid-cols-12 lg:gap-6 xl:gap-8">

      <%# Left: Sticky Sidebar - overlaps cover image %>
      <aside class="lg:col-span-5 xl:col-span-4 mb-6 lg:mb-0">
        <div class="lg:sticky lg:top-6 lg:-mt-20 relative z-10">
          <%= render "profiles/sidebar",
              user: @user,
              is_own_profile: @is_own_profile,
              is_following: @is_following %>
        </div>
      </aside>

      <%# Right: Main Content (노트북: 7/12, 데스크탑: 8/12) %>
      <div class="lg:col-span-7 xl:col-span-8">
        <%# Tabbed Content %>
        <%= render "profiles/tabs",
            user: @user,
            posts: @posts,
            outsourcing_posts: @outsourcing_posts,
            is_own_profile: @is_own_profile %>
      </div>

    </div>
  </main>

  <%# Bottom Navigation (Mobile Only) %>
  <%= render "shared/bottom_nav" %>

  <%# 신고 모달 %>
  <% if logged_in? && !@is_own_profile %>
    <%= render "reports/modal" %>
  <% end %>
</div>
