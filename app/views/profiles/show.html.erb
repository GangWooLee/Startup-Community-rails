<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="min-h-screen bg-background pb-20" data-controller="report-modal">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <%= render_button variant: :ghost, class: "h-9 w-9 p-0", data: { controller: "navigation", navigation_fallback_value: root_path, action: "click->navigation#goBack" } do %>
          <%= render partial: "shared/icons/arrow_left", locals: { css_class: "h-5 w-5" } %>
        <% end %>
        <h1 class="text-xl font-bold">프로필</h1>
      </div>
      <% if @is_own_profile %>
        <%= link_to edit_my_page_path, class: "text-sm text-muted-foreground hover:text-foreground link-hover relative" do %>
          설정
        <% end %>
      <% elsif logged_in? %>
        <%# 신고 버튼 - render_dropdown 헬퍼 사용 %>
        <%= render_dropdown align: :right do |d| %>
          <% d.trigger do %>
            <button type="button" class="p-2 rounded-md text-muted-foreground hover:text-foreground hover:bg-secondary">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
              </svg>
            </button>
          <% end %>
          <% d.menu do %>
            <button type="button"
                    class="w-full text-left px-4 py-2 text-sm text-destructive hover:bg-destructive/10 flex items-center gap-2 rounded-md"
                    data-action="click->report-modal#open"
                    data-reportable-type="User"
                    data-reportable-id="<%= @user.id %>"
                    data-target-name="<%= @user.name %>">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              신고하기
            </button>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto">
    <!-- Profile Header -->
    <div class="px-4 py-6 border-b border-border text-center">
      <!-- Profile Image - render_user_avatar 헬퍼 사용 -->
      <div class="flex justify-center mb-4">
        <%= render_user_avatar(@user, size: :xl, class: "ring-4 ring-background") %>
      </div>

      <!-- Name & Affiliation -->
      <div class="mb-3">
        <div class="flex items-center justify-center gap-2 mb-1">
          <h2 class="text-2xl font-bold"><%= @user.name %></h2>
          <% if @user.affiliation.present? %>
            <span class="text-muted-foreground">(<%= @user.affiliation %>)</span>
          <% end %>
        </div>

        <!-- Availability Status Badges -->
        <% if @user.has_availability_status? %>
          <div class="flex items-center justify-center gap-2 flex-wrap">
            <% @user.availability_badges.each do |badge| %>
              <span class="inline-flex items-center gap-1.5 rounded-full px-3 py-1 text-xs font-semibold text-white <%= badge[:color] %>">
                <span class="h-1.5 w-1.5 rounded-full bg-white"></span>
                <%= badge[:label] %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Role Tags -->
      <div class="flex items-center justify-center gap-2 flex-wrap mb-3">
        <% if @user.role_title.present? %>
          <%= render_badge "##{@user.role_title}", variant: :default, class: "text-xs" %>
        <% end %>
        <% @user.skills_array.first(3).each do |skill| %>
          <%= render_badge "##{skill}", variant: :secondary, class: "text-xs" %>
        <% end %>
      </div>

      <!-- Bio (한 줄 소개) -->
      <% if @user.bio.present? %>
        <p class="text-foreground leading-relaxed max-w-md mx-auto mb-4">"<%= @user.bio %>"</p>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex items-center justify-center gap-3 flex-wrap">
        <!-- 대화하기 버튼 (자신이 아닌 경우) -->
        <% if logged_in? && !@is_own_profile %>
          <%= button_to start_chat_path(@user), method: :post, class: "inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2 bg-primary text-primary-foreground btn-hover" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            대화하기
          <% end %>
        <% elsif !logged_in? %>
          <%= render_button as: :link, href: login_path, class: "gap-2" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            대화하기
          <% end %>
        <% end %>

        <% if @user.linkedin_url.present? %>
          <%= link_to @user.linkedin_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring bg-blue-600 text-white shadow btn-hover h-10 px-4 py-2" do %>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          <% end %>
        <% end %>

        <% if @user.github_url.present? %>
          <%= render_button variant: :outline, as: :link, href: @user.github_url, class: "gap-2", data: { turbo: false } do %>
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          <% end %>
        <% end %>

        <% if @user.portfolio_url.present? %>
          <%= render_button variant: :outline, as: :link, href: @user.portfolio_url, class: "gap-2", data: { turbo: false } do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            포트폴리오
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Tab Navigation - render_tabs 헬퍼 사용 -->
    <%= render_tabs variant: :underline, default_tab: "about", class: "sticky top-[57px] z-30" do |tabs| %>
      <% tabs.list class: "bg-background border-b border-border" do %>
        <% tabs.trigger "about", label: "소개" %>
        <% tabs.trigger "posts", label: "커뮤니티 글", count: @posts.size %>
        <% tabs.trigger "market", label: "외주/공고", count: @outsourcing_posts.size %>
      <% end %>

      <%# 소개 탭 패널 %>
      <% tabs.panel "about", class: "px-4 py-6 space-y-6" do %>
        <!-- 상세 정보 -->
        <div class="rounded-xl border bg-card text-card-foreground p-6">
          <h3 class="text-lg font-semibold mb-4">기본 정보</h3>
          <div class="space-y-3 text-sm">
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span><%= @user.email %></span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>가입일: <%= @user.created_at.strftime("%Y년 %m월") %></span>
            </div>
          </div>
        </div>

        <!-- 기술 스택 -->
        <% if @user.skills_array.any? %>
          <div class="rounded-xl border bg-card text-card-foreground p-6">
            <h3 class="text-lg font-semibold mb-4">기술 스택</h3>
            <div class="flex flex-wrap gap-2">
              <% @user.skills_array.each do |skill| %>
                <%= render_badge skill, variant: :secondary %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- 연결된 계정 -->
        <% if @user.oauth_identities.any? %>
          <div class="rounded-xl border bg-card text-card-foreground p-6">
            <h3 class="text-lg font-semibold mb-4">연결된 계정</h3>
            <div class="flex gap-3">
              <% @user.oauth_identities.each do |identity| %>
                <div class="flex items-center gap-2 px-3 py-2 rounded-lg bg-secondary/50">
                  <% if identity.provider == "google_oauth2" %>
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                    </svg>
                    <span class="text-sm">Google</span>
                  <% elsif identity.provider == "github" %>
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    <span class="text-sm">GitHub</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%# 커뮤니티 글 탭 패널 %>
      <% tabs.panel "posts", class: "px-4 py-6 space-y-4" do %>
        <% if @posts.any? %>
          <% @posts.each do |post| %>
            <%= render_post_card(post, variant: :community, show_author: false, show_actions: true) %>
          <% end %>
        <% else %>
          <div class="text-center py-12 text-muted-foreground">
            <svg class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p>아직 작성한 글이 없습니다</p>
          </div>
        <% end %>
      <% end %>

      <%# 외주/공고 탭 패널 %>
      <% tabs.panel "market", class: "px-4 py-6 space-y-4" do %>
        <% if @outsourcing_posts.any? %>
          <% @outsourcing_posts.each do |post| %>
            <%= render_post_card(post, variant: :outsourcing, show_author: false) %>
          <% end %>
        <% else %>
          <div class="text-center py-12 text-muted-foreground">
            <svg class="h-12 w-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <p>아직 등록한 외주 공고가 없습니다</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </main>

  <%= render "shared/bottom_nav" %>

  <%# 신고 모달 %>
  <% if logged_in? && !@is_own_profile %>
    <%= render "reports/modal" %>
  <% end %>
</div>
