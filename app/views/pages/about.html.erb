        <!-- Instagram -->
        <div>
          <p class="text-sm text-muted-foreground font-medium mb-1">Instagram</p>
          <a href="https://instagram.com/undrew.community"
             target="_blank"
             rel="noopener noreferrer"
             class="text-sm sm:text-base text-foreground hover:text-primary hover:underline transition-colors break-all inline-flex items-center gap-1">
            @undrew.community
            <svg class="h-3 w-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Tablet+: Floating Card Over Map -->
    <div class="hidden md:block relative w-3/4 mx-auto">
      <!-- Background Map -->
      <div class="h-[450px] lg:h-[525px] rounded-sm overflow-hidden border shadow-sm">
        <img src="/images/map.png" alt="Yonsei University Location" class="w-full h-full object-cover">
      </div>

      <!-- Floating Contact Card -->
      <div class="absolute top-8 right-8 w-[300px] md:w-[320px] lg:w-[338px] max-h-[calc(100%-4rem)] rounded-sm border bg-card shadow-xl p-4 md:p-5 lg:p-6 space-y-4 md:space-y-5 overflow-y-auto">
        <!-- Mail -->
        <div>
          <p class="text-sm text-muted-foreground font-medium mb-1">Mail</p>
          <a href="mailto:ziwonlee9@yonsei.ac.kr"
             class="text-base text-foreground hover:text-primary hover:underline transition-colors break-all block">
            ziwonlee9@yonsei.ac.kr
          </a>
        </div>

        <!-- LinkedIn -->
        <div>
          <p class="text-sm text-muted-foreground font-medium mb-1">LinkedIn</p>
