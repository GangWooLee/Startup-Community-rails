<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center gap-3">
      <%= render_button variant: :ghost, class: "h-9 w-9 p-0", data: { controller: "navigation", navigation_fallback_value: root_path, action: "click->navigation#goBack" } do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-lg font-semibold">CONTACT US</h1>
        <p class="text-xs text-muted-foreground hidden sm:block">편하게 연락주세요, 커피 한잔 해요!</p>
      </div>
    </div>
  </header>

  <!-- Content -->
  <main class="max-w-7xl mx-auto px-4 py-8 space-y-6 md:space-y-8">
    <!-- Contact Section: Floating Card Over Map -->
    <!-- Mobile: Vertical Stack -->
    <div class="md:hidden space-y-4">
      <div class="h-[200px] sm:h-[250px] w-3/4 mx-auto rounded-sm overflow-hidden border shadow-sm">
        <img src="/images/map.png" alt="Yonsei University Location" class="w-full h-full object-cover">
      </div>

      <div class="w-3/4 mx-auto rounded-sm border bg-card p-4 sm:p-6 space-y-5">
        <!-- Mail -->
        <div>
          <p class="text-sm text-muted-foreground font-medium mb-1">Mail</p>
          <a href="mailto:ziwonlee9@yonsei.ac.kr"
             class="text-sm sm:text-base text-foreground hover:text-primary hover:underline transition-colors break-all block">
            ziwonlee9@yonsei.ac.kr
          </a>
        </div>

        <!-- LinkedIn -->
        <div>
          <p class="text-sm text-muted-foreground font-medium mb-1">LinkedIn</p>
          <a href="https://linkedin.com/company/grounded-ai-community"
             target="_blank"
             rel="noopener noreferrer"
             class="text-sm sm:text-base text-foreground hover:text-primary hover:underline transition-colors break-all inline-flex items-center gap-1">
            linkedin.com/company/grounded-ai-community
            <svg class="h-3 w-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
