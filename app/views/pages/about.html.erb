<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center gap-3">
      <%= render_button variant: :ghost, class: "h-9 w-9 p-0", data: { controller: "navigation", navigation_fallback_value: root_path, action: "click->navigation#goBack" } do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-lg font-semibold">CONTACT US</h1>
        <p class="text-xs text-muted-foreground hidden sm:block">편하게 연락주세요, 커피 한잔 해요!</p>
      </div>
    </div>
  </header>

  <!-- Content -->
  <main class="max-w-7xl mx-auto px-4 py-8 space-y-8">
    <!-- Contact Section: Map + Info Card -->
    <div class="grid lg:grid-cols-2 gap-6">
      <!-- Left: Google Maps -->
      <div class="rounded-xl overflow-hidden border shadow-sm h-[400px] lg:h-[600px]">
        <iframe
          src="https://maps.google.com/maps?q=%EC%97%B0%EC%84%B8%EB%8C%80%ED%95%99%EA%B5%90&output=embed"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>

      <!-- Right: Contact Info Card -->
      <div class="rounded-xl border bg-card p-6 lg:p-8 space-y-6 h-fit">
        <h2 class="text-2xl font-bold">Contact Us</h2>

        <!-- Mail -->
        <div class="flex items-start gap-4">
          <div class="h-10 w-10 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="min-w-0">
            <p class="text-sm text-muted-foreground mb-1">Mail</p>
            <a href="mailto:ziwonlee9@yonsei.ac.kr"
               class="text-primary hover:underline font-medium break-all">
              ziwonlee9@yonsei.ac.kr
            </a>
          </div>
        </div>

        <!-- LinkedIn -->
        <div class="flex items-start gap-4">
          <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </div>
          <div class="min-w-0">
            <p class="text-sm text-muted-foreground mb-1">LinkedIn</p>
            <a href="https://linkedin.com/company/grounded-ai-community"
               target="_blank"
               rel="noopener noreferrer"
               class="text-primary hover:underline font-medium break-all inline-flex items-center gap-1">
              linkedin.com/company/grounded-ai-community
              <svg class="h-3 w-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Instagram -->
        <div class="flex items-start gap-4">
          <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-pink-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <div class="min-w-0">
            <p class="text-sm text-muted-foreground mb-1">Instagram</p>
            <a href="https://instagram.com/undrew.community"
               target="_blank"
               rel="noopener noreferrer"
               class="text-primary hover:underline font-medium break-all inline-flex items-center gap-1">
              @undrew.community
              <svg class="h-3 w-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Service Policies Section -->
    <section class="rounded-xl border bg-card p-6">
      <h2 class="text-lg font-semibold mb-4">
        서비스 정책
      </h2>
      <div class="space-y-1">
        <%= link_to terms_path, class: "flex items-center justify-between p-3 rounded-lg hover:bg-muted transition-colors group" do %>
          <span class="font-medium">서비스 이용약관</span>
          <svg class="h-5 w-5 text-muted-foreground group-hover:text-foreground transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
        <%= link_to privacy_path, class: "flex items-center justify-between p-3 rounded-lg hover:bg-muted transition-colors group" do %>
          <span class="font-medium">개인정보 처리방침</span>
          <svg class="h-5 w-5 text-muted-foreground group-hover:text-foreground transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
        <%= link_to refund_path, class: "flex items-center justify-between p-3 rounded-lg hover:bg-muted transition-colors group" do %>
          <span class="font-medium">환불 정책</span>
          <svg class="h-5 w-5 text-muted-foreground group-hover:text-foreground transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </section>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
