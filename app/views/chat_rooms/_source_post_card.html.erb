<%# 게시글 컨텍스트 카드 - 어떤 글을 통해 대화가 시작되었는지 표시 %>
<div class="mx-4 mt-3 p-3 bg-gray-50 rounded-xl border border-gray-200">
  <%= link_to post_path(post), class: "block hover:opacity-80 transition", data: { turbo_frame: "_top" } do %>
    <div class="flex items-start gap-3">
      <!-- 카테고리 아이콘 -->
      <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center <%= post_category_bg_class(post) %>">
        <%= post_category_icon(post) %>
      </div>

      <div class="flex-1 min-w-0">
        <!-- 카테고리 뱃지 -->
        <div class="flex items-center gap-2 mb-1">
          <span class="text-[10px] font-semibold px-2 py-0.5 rounded <%= post_category_badge_class(post) %>">
            <%= post_category_label(post) %>
          </span>
          <% if chat_room.confirmed? %>
            <span class="text-[10px] font-semibold px-2 py-0.5 rounded bg-green-100 text-green-700">
              거래 확정
            </span>
          <% end %>
        </div>

        <!-- 제목 -->
        <p class="font-medium text-sm text-foreground truncate">
          <%= post.title %>
        </p>

        <!-- 메타 정보 -->
        <div class="flex items-center gap-2 mt-1 text-xs text-gray-500">
          <% if post.budget.present? %>
            <span class="flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= post.budget %>
            </span>
          <% end %>
          <% if post.duration.present? %>
            <span class="flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <%= post.duration %>
            </span>
          <% end %>
        </div>
      </div>

      <!-- 화살표 -->
      <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </div>
  <% end %>
</div>
