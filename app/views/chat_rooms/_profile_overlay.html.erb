<%# 채팅방 내 프로필 오버레이 카드 %>
<%# locals: user %>

<div id="profile-overlay"
     class="fixed inset-0 z-50 flex items-center justify-center p-4"
     data-controller="profile-overlay"
     data-action="keydown.esc->profile-overlay#close click->profile-overlay#backdropClick">

  <!-- 반투명 배경 -->
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" data-profile-overlay-target="backdrop"></div>

  <!-- 프로필 카드 -->
  <div class="relative bg-white rounded-2xl shadow-2xl w-full max-w-sm max-h-[85vh] overflow-hidden animate-slide-up"
       data-profile-overlay-target="card">

    <!-- 닫기 버튼 -->
    <button type="button"
            class="absolute top-3 right-3 z-10 p-2 rounded-full bg-white/80 hover:bg-white text-gray-500 hover:text-gray-700 transition-colors shadow-sm"
            data-action="click->profile-overlay#close">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- 카드 내용 (스크롤 가능) -->
    <div class="overflow-y-auto max-h-[85vh]">
      <!-- 프로필 헤더 -->
      <div class="px-6 pt-8 pb-6 text-center border-b border-gray-100">
        <!-- 프로필 이미지 -->
        <div class="h-20 w-20 rounded-full ring-4 ring-white overflow-hidden bg-gray-100 flex items-center justify-center mx-auto mb-4 shadow-lg">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, alt: user.name, class: "h-full w-full object-cover" %>
          <% elsif user.avatar_url.present? %>
            <%= image_tag user.avatar_url, alt: user.name, class: "h-full w-full object-cover" %>
          <% else %>
            <span class="text-2xl font-semibold text-gray-400"><%= user.name&.first&.upcase || "?" %></span>
          <% end %>
        </div>

        <!-- 이름 & 소속 -->
        <div class="mb-3">
          <div class="flex items-center justify-center gap-2 mb-1">
            <h2 class="text-xl font-bold text-gray-900"><%= user.name %></h2>
            <% if user.provider.present? %>
              <span class="inline-flex items-center gap-0.5 px-1.5 py-0.5 rounded text-[10px] font-medium bg-blue-100 text-blue-700">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                인증됨
              </span>
            <% end %>
          </div>
          <% if user.affiliation.present? %>
            <p class="text-sm text-gray-500"><%= user.affiliation %></p>
          <% end %>
        </div>

        <!-- 활동 상태 뱃지 -->
        <% if user.respond_to?(:has_availability_status?) && user.has_availability_status? %>
          <div class="flex items-center justify-center gap-2 flex-wrap mb-3">
            <% user.availability_badges.each do |badge| %>
              <span class="inline-flex items-center gap-1 rounded-full px-2.5 py-1 text-xs font-semibold text-white <%= badge[:color] %>">
                <span class="h-1.5 w-1.5 rounded-full bg-white"></span>
                <%= badge[:label] %>
              </span>
            <% end %>
          </div>
        <% end %>

        <!-- 역할 & 스킬 태그 -->
        <div class="flex items-center justify-center gap-2 flex-wrap">
          <% if user.role_title.present? %>
            <span class="inline-flex items-center rounded-full bg-primary/10 text-primary px-2.5 py-0.5 text-xs font-semibold">
              <%= user.role_title %>
            </span>
          <% end %>
          <% if user.respond_to?(:skills_array) %>
            <% user.skills_array.first(2).each do |skill| %>
              <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600">
                <%= skill %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- 한줄 소개 -->
      <% if user.bio.present? %>
        <div class="px-6 py-4 border-b border-gray-100">
          <p class="text-sm text-gray-600 text-center leading-relaxed">"<%= user.bio %>"</p>
        </div>
      <% end %>

      <!-- 연락처 정보 -->
      <div class="px-6 py-4 space-y-3">
        <% if user.email.present? %>
          <div class="flex items-center gap-3 text-sm">
            <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <span class="text-gray-700 truncate"><%= user.email %></span>
          </div>
        <% end %>

        <% if user.open_chat_url.present? %>
          <div class="flex items-center gap-3 text-sm">
            <div class="w-8 h-8 rounded-full bg-yellow-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <%= link_to user.open_chat_url, target: "_blank", class: "text-primary hover:underline truncate" do %>
              오픈채팅 바로가기
            <% end %>
          </div>
        <% end %>

        <% if user.github_url.present? %>
          <div class="flex items-center gap-3 text-sm">
            <div class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
            <%= link_to user.github_url, target: "_blank", class: "text-primary hover:underline truncate" do %>
              GitHub 프로필
            <% end %>
          </div>
        <% end %>

        <% if user.portfolio_url.present? %>
          <div class="flex items-center gap-3 text-sm">
            <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </div>
            <%= link_to user.portfolio_url, target: "_blank", class: "text-primary hover:underline truncate" do %>
              포트폴리오
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- 하단 버튼 영역 -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 space-y-2">
        <!-- 전체 프로필 보기 -->
        <%= link_to profile_path(user),
                    class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium bg-primary text-white hover:bg-primary/90 transition-colors",
                    data: { turbo_frame: "_top" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          전체 프로필 보기
        <% end %>

        <!-- 닫기 버튼 -->
        <button type="button"
                class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 rounded-xl text-sm font-medium bg-white border border-gray-200 text-gray-700 hover:bg-gray-50 transition-colors"
                data-action="click->profile-overlay#close">
          닫기
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .animate-slide-up {
    animation: slide-up 0.2s ease-out;
  }
</style>
