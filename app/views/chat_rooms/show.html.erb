<div class="flex flex-col h-[calc(100vh-64px)] bg-background"
     data-controller="chat-room"
     data-chat-room-room-id-value="<%= @chat_room.id %>">

  <!-- 헤더: 프로필 강화 -->
  <header class="flex items-center gap-3 p-4 border-b border-divider bg-surface sticky top-0 z-20">
    <%= link_to chat_rooms_path, class: "text-muted-foreground hover:text-foreground transition-colors flex-shrink-0" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>

    <%= link_to profile_path(@other_user), class: "flex items-center gap-3 flex-1 min-w-0" do %>
      <%= render "shared/avatar", user: @other_user, size: "md" %>
      <div class="min-w-0 flex-1">
        <div class="flex items-center gap-2">
          <p class="font-semibold text-foreground truncate"><%= @other_user.name %></p>
          <% if @other_user.provider.present? %>
            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-blue-100 text-blue-700">
              인증됨
            </span>
          <% end %>
        </div>
        <p class="text-xs text-muted-foreground truncate">
          <% if @other_user.role_title.present? %>
            <%= @other_user.role_title %>
            <% if @other_user.affiliation.present? %>
              <span class="text-gray-400">@</span><%= @other_user.affiliation %>
            <% end %>
          <% else %>
            프로필 보기
          <% end %>
        </p>
      </div>
    <% end %>

    <!-- 더보기 메뉴 -->
    <button class="text-muted-foreground hover:text-foreground transition-colors flex-shrink-0" type="button">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
      </svg>
    </button>
  </header>

  <!-- 게시글 컨텍스트 카드 (있을 경우만 표시) -->
  <% if @chat_room.source_post.present? %>
    <%= render "chat_rooms/source_post_card", post: @chat_room.source_post, chat_room: @chat_room %>
  <% end %>

  <!-- 거래 상태 변경 버튼 (게시글 작성자에게만 표시) -->
  <% if @chat_room.source_post.present? && @chat_room.post_author?(current_user) %>
    <%= render "chat_rooms/deal_actions", chat_room: @chat_room %>
  <% end %>

  <!-- 메시지 영역 -->
  <%= turbo_stream_from @chat_room %>
  <div id="messages"
       class="flex-1 overflow-y-auto p-4 space-y-3"
       data-chat-room-target="messages">

    <!-- 안전 거래 경고 (첫 방문 시) -->
    <div class="flex justify-center mb-4">
      <p class="text-xs text-gray-500 text-center max-w-xs">
        본 서비스는 통신판매중개자이며 거래의 당사자가 아닙니다.
        직거래 시 발생하는 문제에 대해 책임지지 않습니다.
      </p>
    </div>

    <% if @messages.empty? %>
      <div class="flex flex-col items-center justify-center h-full text-gray-500">
        <p class="text-sm">대화를 시작해보세요</p>
      </div>
    <% else %>
      <% @messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    <% end %>
  </div>

  <!-- 퀵 전송 버튼 -->
  <div class="px-4 py-2 border-t border-divider bg-gray-50">
    <div class="flex gap-2 overflow-x-auto scrollbar-hide">
      <%= button_to send_profile_chat_room_messages_path(@chat_room),
                    method: :post,
                    class: "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium text-gray-700 bg-white border border-gray-200 hover:bg-gray-100 transition whitespace-nowrap",
                    data: { turbo_stream: true } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        내 프로필 전송
      <% end %>

      <% if current_user.open_chat_url.present? || current_user.email.present? %>
        <%= button_to send_contact_chat_room_messages_path(@chat_room),
                      method: :post,
                      class: "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium text-gray-700 bg-white border border-gray-200 hover:bg-gray-100 transition whitespace-nowrap",
                      data: { turbo_stream: true } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          연락처 전송
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- 입력 영역 -->
  <div class="p-4 border-t border-divider bg-surface safe-area-bottom">
    <%= form_with model: [@chat_room, Message.new],
                  data: {
                    controller: "message-form",
                    action: "turbo:submit-end->message-form#reset"
                  },
                  class: "flex items-end gap-2" do |f| %>
      <%= f.text_area :content,
                      placeholder: "메시지를 입력하세요...",
                      rows: 1,
                      class: "flex-1 px-4 py-2 rounded-2xl border border-gray-200 bg-white text-gray-900 placeholder-gray-400 resize-none focus:outline-none focus:ring-2 focus:ring-primary max-h-32",
                      data: {
                        message_form_target: "input",
                        action: "input->message-form#autoResize keydown.ctrl+enter->message-form#submit keydown.meta+enter->message-form#submit"
                      } %>
      <%= f.submit "전송",
                   class: "px-4 py-2 bg-primary text-white rounded-full font-medium hover:bg-primary/90 transition cursor-pointer disabled:opacity-50",
                   data: { message_form_target: "button" } %>
    <% end %>
  </div>
</div>
