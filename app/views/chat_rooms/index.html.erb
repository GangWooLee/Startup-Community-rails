<div class="flex flex-col h-[calc(100vh-128px)] bg-background">
  <!-- 헤더 -->
  <header class="sticky top-0 z-10 p-4 border-b border-divider bg-surface">
    <h1 class="text-lg font-bold text-foreground">메시지</h1>
  </header>

  <!-- 채팅방 목록 -->
  <div class="flex-1 overflow-y-auto">
    <% if @chat_rooms.any? %>
      <div class="divide-y divide-gray-100">
        <% @chat_rooms.each do |room| %>
          <%= render "chat_rooms/chat_room_item", room: room %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center h-full text-gray-500 px-4">
        <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <p class="font-medium text-gray-700">아직 대화가 없습니다</p>
        <p class="text-sm mt-1 text-center">프로필에서 대화를 시작해보세요</p>
      </div>
    <% end %>
  </div>
</div>
