<div class="min-h-screen bg-background flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <!-- Logo/Title -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">스타트업 커뮤니티</h1>
      <p class="text-muted-foreground">아이디어, 사람, 기업이 만나는 곳</p>
    </div>

    <!-- Reset Password Card -->
    <div class="rounded-xl border bg-card text-card-foreground shadow-lg p-8">
      <h2 class="text-2xl font-bold text-foreground mb-2">새 비밀번호 설정</h2>
      <p class="text-muted-foreground mb-6">
        새로운 비밀번호를 입력해주세요.
      </p>

      <%= form_with url: reset_password_path(token: params[:token]), method: :patch, local: true, class: "space-y-4" do |f| %>
        <!-- New Password Field -->
        <div class="space-y-2">
          <%= render_label name: "password", label: "새 비밀번호" %>
          <%= render_input name: "password",
                          type: :password,
                          id: "password",
                          placeholder: "••••••••",
                          required: true,
                          class: "w-full" %>
          <p class="text-xs text-muted-foreground">
            8자 이상, 영문과 숫자를 포함해주세요
          </p>
        </div>

        <!-- Confirm Password Field -->
        <div class="space-y-2">
          <%= render_label name: "password_confirmation", label: "비밀번호 확인" %>
          <%= render_input name: "password_confirmation",
                          type: :password,
                          id: "password_confirmation",
                          placeholder: "••••••••",
                          required: true,
                          class: "w-full" %>
        </div>

        <!-- Submit Button -->
        <%= render_button "비밀번호 변경", class: "w-full h-11" %>
      <% end %>

      <!-- Password Requirements -->
      <div class="mt-4 p-3 bg-muted rounded-lg">
        <p class="text-xs text-muted-foreground font-medium mb-2">비밀번호 요구사항:</p>
        <ul class="text-xs text-muted-foreground space-y-1">
          <li class="flex items-center gap-2">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            최소 8자 이상
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            영문 포함
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            숫자 포함
          </li>
        </ul>
      </div>

      <!-- Back to Login -->
      <div class="mt-6 text-center text-sm text-muted-foreground">
        <%= link_to "← 로그인으로 돌아가기", login_path, class: "text-primary font-medium hover:underline" %>
      </div>
    </div>
  </div>
</div>
