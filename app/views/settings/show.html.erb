<div class="min-h-screen bg-background pb-20">
  <!-- Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <!-- 뒤로가기 버튼 - shadcn Button ghost -->
        <%= render_button variant: :ghost, class: "h-9 w-9 p-0", data: { controller: "navigation", navigation_fallback_value: my_page_path, action: "click->navigation#goBack" } do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>

        <!-- 타이틀 -->
        <div>
          <h1 class="text-xl font-bold">설정</h1>
          <p class="text-xs text-muted-foreground">계정 및 앱 설정</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6 space-y-6">

    <!-- 1. Notifications - shadcn Card 스타일 -->
    <div class="rounded-xl border bg-card text-card-foreground overflow-hidden">
      <div class="px-4 py-3 border-b border-border bg-muted/30">
        <h3 class="font-semibold text-sm text-muted-foreground">알림</h3>
      </div>
      <div class="divide-y divide-border">
        <div class="px-4 py-4 flex items-center justify-between">
          <div>
            <p class="text-sm font-medium">푸시 알림 받기</p>
            <p class="text-xs text-muted-foreground">커뮤니티 활동 및 외주 알림</p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" checked class="sr-only peer" disabled>
            <div class="w-11 h-6 bg-muted rounded-full peer peer-checked:bg-primary peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all opacity-50"></div>
          </label>
        </div>
      </div>
      <div class="px-4 py-2 bg-muted/20">
        <p class="text-xs text-muted-foreground">알림 기능은 준비 중입니다</p>
      </div>
    </div>

    <!-- 2. Support - shadcn Card 스타일 -->
    <div class="rounded-xl border bg-card text-card-foreground overflow-hidden">
      <div class="px-4 py-3 border-b border-border bg-muted/30">
        <h3 class="font-semibold text-sm text-muted-foreground">고객 지원</h3>
      </div>
      <div class="divide-y divide-border">
        <!-- 문의하기 -->
        <%= link_to new_inquiry_path, class: "px-4 py-4 flex items-center justify-between card-hover" do %>
          <div class="flex items-center gap-3">
            <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm font-medium">문의하기</span>
          </div>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <!-- 내 문의 내역 -->
        <%= link_to inquiries_path, class: "px-4 py-4 flex items-center justify-between card-hover" do %>
          <div class="flex items-center gap-3">
            <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <span class="text-sm font-medium">내 문의 내역</span>
          </div>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <!-- Terms of Service -->
        <a href="#" class="px-4 py-4 flex items-center justify-between card-hover">
          <div class="flex items-center gap-3">
            <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span class="text-sm font-medium">서비스 이용약관</span>
          </div>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>

        <!-- Privacy Policy -->
        <a href="#" class="px-4 py-4 flex items-center justify-between card-hover">
          <div class="flex items-center gap-3">
            <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <span class="text-sm font-medium">개인정보 처리방침</span>
          </div>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- 3. Account - shadcn Card 스타일 -->
    <div class="rounded-xl border bg-card text-card-foreground overflow-hidden">
      <div class="px-4 py-3 border-b border-border bg-muted/30">
        <h3 class="font-semibold text-sm text-muted-foreground">계정</h3>
      </div>
      <div class="divide-y divide-border">
        <!-- Account Info -->
        <div class="px-4 py-4">
          <p class="text-xs text-muted-foreground mb-1">로그인 계정</p>
          <p class="text-sm font-medium"><%= @user.email %></p>
          <% if @user.oauth_identities.any? %>
            <div class="flex items-center gap-2 mt-2">
              <% @user.oauth_identities.each do |identity| %>
                <% if identity.provider == "google_oauth2" %>
                  <%= render_badge "Google 연결됨", variant: :secondary, class: "text-xs gap-1" %>
                <% elsif identity.provider == "github" %>
                  <%= render_badge "GitHub 연결됨", variant: :secondary, class: "text-xs gap-1" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Logout -->
        <%= button_to logout_path, method: :delete, class: "w-full px-4 py-4 flex items-center gap-3 card-hover text-left", form: { data: { turbo_confirm: "로그아웃 하시겠습니까?" } } do %>
          <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          <span class="text-sm font-medium">로그아웃</span>
        <% end %>

        <!-- Delete Account -->
        <%= link_to delete_account_path, class: "px-4 py-4 flex items-center gap-3 card-hover" do %>
          <svg class="h-5 w-5 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          <div>
            <span class="text-sm font-medium text-destructive">회원 탈퇴</span>
            <p class="text-xs text-muted-foreground">계정 삭제 및 데이터 처리</p>
          </div>
          <svg class="h-5 w-5 text-muted-foreground ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Version Info -->
    <div class="text-center py-4">
      <p class="text-xs text-muted-foreground">버전 1.0.0 (MVP)</p>
      <p class="text-xs text-muted-foreground mt-1">가입일: <%= @user.created_at.strftime("%Y년 %m월 %d일") %></p>
    </div>

  </main>

  <%= render "shared/bottom_nav" %>
</div>
