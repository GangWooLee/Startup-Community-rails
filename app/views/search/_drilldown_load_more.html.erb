<%# Task 88: Turbo Stream용 "더 보기" 버튼 partial %>
<%# locals: query, drilldown_type, next_page, total_count %>

<div id="drilldown_load_more" class="px-4 py-3 border-t border-stone-100 bg-stone-50/30">
  <%= link_to search_path(q: query, tab: drilldown_type, page: next_page, modal: true, drilldown: true, append: true),
              data: { turbo_stream: true },
              class: "flex items-center justify-center gap-2 text-sm text-orange-500 hover:text-orange-600 font-medium py-2 transition-colors" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
    더 보기 (<%= next_page %>/<%= (total_count.to_f / 10).ceil %>)
  <% end %>
</div>
