<%# 브라우저 기본 검색 X 버튼 숨기기 %>
<style>
  input[type="search"]::-webkit-search-cancel-button {
    -webkit-appearance: none;
    appearance: none;
  }
</style>

<div class="min-h-screen bg-background pb-20" data-controller="live-search" data-live-search-url-value="<%= search_path %>" data-live-search-tab-value="<%= @tab %>" data-live-search-category-value="<%= @category %>" data-live-search-users-page-value="<%= @users_page || 1 %>" data-live-search-posts-page-value="<%= @posts_page || 1 %>">
  <!-- Search Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <!-- 뒤로가기 -->
        <%= render_button variant: :ghost, class: "h-9 w-9 p-0 -ml-2", data: { controller: "navigation", navigation_fallback_value: root_path, action: "click->navigation#goBack" } do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>

        <!-- 검색 입력 -->
        <form action="<%= search_path %>" method="get" class="flex-1" data-action="submit->live-search#preventSubmit">
          <div class="relative">
            <!-- 검색 아이콘 -->
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-muted-foreground pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>

            <!-- 입력 필드 -->
            <input
              type="search"
              name="q"
              value="<%= @query %>"
              placeholder="사용자, 게시글 검색..."
              autofocus
              autocomplete="off"
              class="w-full pl-10 pr-10 py-2.5 rounded-full bg-secondary border-0 text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20"
              data-live-search-target="input"
              data-action="input->live-search#search"
            >

            <!-- 로딩 스피너 -->
            <div class="absolute right-10 top-1/2 -translate-y-1/2 hidden" data-live-search-target="loading">
              <svg class="h-4 w-4 animate-spin text-muted-foreground" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>

            <!-- X 버튼 (커스텀) -->
            <button
              type="button"
              class="absolute right-3 top-1/2 -translate-y-1/2 p-1 rounded-full text-muted-foreground btn-hover <%= @query.present? ? '' : 'hidden' %>"
              data-live-search-target="clearButton"
              data-action="click->live-search#clear"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </form>
      </div>

      <!-- 탭 버튼 (전체/유저/게시글) -->
      <div class="flex gap-2 mt-3" data-live-search-target="tabs">
        <button
          type="button"
          class="px-4 py-1.5 rounded-full text-sm font-medium btn-hover <%= @tab == 'all' ? 'bg-primary text-primary-foreground' : 'bg-secondary text-muted-foreground' %>"
          data-tab="all"
          data-action="click->live-search#switchTab"
        >
          전체
        </button>
        <button
          type="button"
          class="px-4 py-1.5 rounded-full text-sm font-medium btn-hover <%= @tab == 'users' ? 'bg-primary text-primary-foreground' : 'bg-secondary text-muted-foreground' %>"
          data-tab="users"
          data-action="click->live-search#switchTab"
        >
          유저
        </button>
        <button
          type="button"
          class="px-4 py-1.5 rounded-full text-sm font-medium btn-hover <%= @tab == 'posts' ? 'bg-primary text-primary-foreground' : 'bg-secondary text-muted-foreground' %>"
          data-tab="posts"
          data-action="click->live-search#switchTab"
        >
          게시글
        </button>
      </div>

      <!-- 카테고리 필터 (게시글 탭일 때만 표시) -->
      <div class="flex gap-2 mt-2 <%= @tab == 'posts' ? '' : 'hidden' %>" data-live-search-target="categoryFilters">
        <button
          type="button"
          class="px-3 py-1 rounded-full text-xs font-medium btn-hover <%= @category == 'all' ? 'bg-foreground text-background' : 'bg-muted text-muted-foreground' %>"
          data-category="all"
          data-action="click->live-search#switchCategory"
        >
          전체
        </button>
        <button
          type="button"
          class="px-3 py-1 rounded-full text-xs font-medium btn-hover <%= @category == 'community' ? 'bg-foreground text-background' : 'bg-muted text-muted-foreground' %>"
          data-category="community"
          data-action="click->live-search#switchCategory"
        >
          커뮤니티
        </button>
        <button
          type="button"
          class="px-3 py-1 rounded-full text-xs font-medium btn-hover <%= @category == 'hiring' ? 'bg-foreground text-background' : 'bg-muted text-muted-foreground' %>"
          data-category="hiring"
          data-action="click->live-search#switchCategory"
        >
          구인
        </button>
        <button
          type="button"
          class="px-3 py-1 rounded-full text-xs font-medium btn-hover <%= @category == 'seeking' ? 'bg-foreground text-background' : 'bg-muted text-muted-foreground' %>"
          data-category="seeking"
          data-action="click->live-search#switchCategory"
        >
          구직
        </button>
      </div>
    </div>
  </header>

  <!-- Main Content (검색 결과 영역) -->
  <main class="max-w-screen-xl mx-auto px-4 py-6" data-live-search-target="results">
    <%= render partial: "search/results", locals: { query: @query, tab: @tab, category: @category, users: @users, posts: @posts, users_total_count: @users_total_count, posts_total_count: @posts_total_count, users_page: @users_page, users_total_pages: @users_total_pages, posts_page: @posts_page, posts_total_pages: @posts_total_pages, recent_searches: @recent_searches } %>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
