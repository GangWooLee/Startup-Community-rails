<div class="min-h-screen bg-background pb-20">
  <!-- Search Header -->
  <header class="sticky top-0 bg-background/95 backdrop-blur-sm border-b border-border z-40">
    <div class="max-w-screen-xl mx-auto px-4 py-3">
      <div class="flex items-center gap-3">
        <!-- 뒤로가기 -->
        <%= link_to :back, class: "p-2 -ml-2 rounded-full hover:bg-secondary transition-colors text-muted-foreground" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>

        <!-- 검색 입력 -->
        <form action="<%= search_path %>" method="get" class="flex-1" data-controller="search-form">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input
              type="search"
              name="q"
              value="<%= @query %>"
              placeholder="사용자, 게시글 검색..."
              autofocus
              class="w-full pl-10 pr-4 py-2.5 rounded-full bg-secondary border-0 text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20"
              data-search-form-target="input"
            >
            <% if @query.present? %>
              <%= link_to search_path, class: "absolute right-3 top-1/2 -translate-y-1/2 p-1 rounded-full hover:bg-muted transition-colors text-muted-foreground" do %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </form>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-screen-xl mx-auto px-4 py-6">
    <% if @query.blank? %>
      <!-- 검색어 없을 때 -->
      <div class="text-center py-12">
        <svg class="h-16 w-16 mx-auto text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <p class="text-muted-foreground">검색어를 입력해주세요</p>
        <p class="text-sm text-muted-foreground mt-1">사용자나 게시글을 검색할 수 있습니다</p>
      </div>
    <% elsif @users.empty? && @posts.empty? %>
      <!-- 검색 결과 없을 때 -->
      <div class="text-center py-12">
        <svg class="h-16 w-16 mx-auto text-muted-foreground/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-muted-foreground">'<span class="text-foreground font-medium"><%= @query %></span>' 검색 결과가 없습니다</p>
        <p class="text-sm text-muted-foreground mt-1">다른 검색어를 시도해보세요</p>
      </div>
    <% else %>
      <!-- 검색 결과 있을 때 -->
      <div class="space-y-8">
        <!-- 사용자 검색 결과 -->
        <% if @users.any? %>
          <section>
            <h2 class="text-lg font-semibold text-foreground mb-4 flex items-center gap-2">
              <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              사용자 (<%= @users.size %>)
            </h2>
            <div class="space-y-2">
              <% @users.each do |user| %>
                <%= link_to profile_path(user), class: "flex items-center gap-4 p-4 bg-card rounded-xl border border-border hover:border-primary/50 transition-colors" do %>
                  <div class="h-12 w-12 rounded-full overflow-hidden bg-secondary flex items-center justify-center flex-shrink-0">
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar, alt: user.name, class: "h-full w-full object-cover" %>
                    <% elsif user.avatar_url.present? %>
                      <%= image_tag user.avatar_url, alt: user.name, class: "h-full w-full object-cover" %>
                    <% else %>
                      <span class="text-lg font-semibold text-muted-foreground"><%= user.name[0] %></span>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="font-semibold text-foreground truncate"><%= user.name %></p>
                    <% if user.role_title.present? %>
                      <p class="text-sm text-muted-foreground truncate"><%= user.role_title %></p>
                    <% end %>
                  </div>
                  <svg class="h-5 w-5 text-muted-foreground flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </section>
        <% end %>

        <!-- 게시글 검색 결과 -->
        <% if @posts.any? %>
          <section>
            <h2 class="text-lg font-semibold text-foreground mb-4 flex items-center gap-2">
              <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
              게시글 (<%= @posts.size %>)
            </h2>
            <div class="space-y-4">
              <% @posts.each do |post| %>
                <% if post.outsourcing? %>
                  <%= render partial: "posts/outsourcing_post_card", locals: { post: post } %>
                <% else %>
                  <%= render partial: "posts/community_post_card", locals: { post: post } %>
                <% end %>
              <% end %>
            </div>
          </section>
        <% end %>
      </div>
    <% end %>
  </main>

  <%= render "shared/bottom_nav" %>
</div>
