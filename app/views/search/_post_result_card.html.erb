<%# 검색 결과용 게시글 카드 - 하이라이팅 적용 %>
<%# 사용법: render partial: "search/post_result_card", locals: { post: @post, query: "검색어" } %>

<div class="block bg-card rounded-xl p-3 sm:p-4 border border-border card-hover hover:border-primary/50 min-h-[clamp(100px,15vh,120px)] cursor-pointer"
     role="link"
     tabindex="0"
     data-href="<%= post_path(post) %>"
     onmousedown="event.preventDefault(); window.location.href = this.dataset.href;"
     onkeydown="if(event.key==='Enter') window.location.href = this.dataset.href;">
  <div class="flex gap-2 sm:gap-4">
    <!-- Content -->
    <div class="flex-1 min-w-0 flex flex-col">
      <!-- Category Badge -->
      <div class="flex items-center gap-2 mb-1.5 h-5">
        <% if post.outsourcing? %>
          <% if post.hiring? %>
            <span class="inline-flex items-center rounded-md bg-blue-500/10 text-blue-600 px-2 py-0.5 text-xs font-semibold">
              Makers
            </span>
          <% else %>
            <span class="inline-flex items-center rounded-md bg-green-500/10 text-green-600 px-2 py-0.5 text-xs font-semibold">
              Projects
            </span>
          <% end %>
        <% else %>
          <span class="inline-flex items-center rounded-md bg-secondary px-2 py-0.5 text-xs font-medium text-muted-foreground">
            <%= post.category_label %>
          </span>
        <% end %>
      </div>

      <!-- Title with highlight (고정 1줄) -->
      <h3 class="font-semibold text-foreground mb-1 line-clamp-1">
        <%= highlight_search(post.title, query) %>
      </h3>

      <!-- Content snippet with highlight (고정 2줄) -->
      <p class="text-sm text-muted-foreground line-clamp-2 mb-auto flex-1">
        <%= highlight_snippet(post.content, query, max_length: 120) %>
      </p>

      <!-- Meta -->
      <div class="flex items-center gap-3 text-xs text-muted-foreground">
        <!-- Author -->
        <div class="flex items-center gap-1.5">
          <%= render_user_avatar(post.user, size: "xs") %>
          <span><%= post.user.display_name %></span>
        </div>

        <span class="text-border">|</span>

        <!-- Stats -->
        <div class="flex items-center gap-2">
          <span class="flex items-center gap-1">
            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
            <%= post.likes_count %>
          </span>
          <span class="flex items-center gap-1">
            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <%= post.comments_count %>
          </span>
        </div>

        <span class="ml-auto"><%= time_ago_in_words(post.created_at) %> 전</span>
      </div>
    </div>

    <!-- Thumbnail -->
    <% if post.images.attached? %>
      <div class="flex-shrink-0">
        <div class="relative w-[clamp(3rem,8vw,4rem)] h-[clamp(3rem,8vw,4rem)] rounded-lg overflow-hidden bg-secondary">
          <%= image_tag post.images.first, class: "w-full h-full object-cover", alt: "첨부 이미지" %>
          <% if post.images.count > 1 %>
            <div class="absolute inset-0 bg-black/50 flex items-center justify-center">
              <span class="text-white text-xs sm:text-sm font-bold">+<%= post.images.count - 1 %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
