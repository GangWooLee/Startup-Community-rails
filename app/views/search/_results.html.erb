<%# 검색 결과 partial - 실시간 검색에서 동적으로 교체됨 %>
<%# locals: query, tab, category, users, posts, users_total_count, posts_total_count, users_page, users_total_pages, posts_page, posts_total_pages, recent_searches %>

<% query ||= "" %>
<% tab ||= "all" %>
<% category ||= "all" %>
<% users ||= [] %>
<% posts ||= [] %>
<% users_total_count ||= 0 %>
<% posts_total_count ||= 0 %>
<% users_page ||= 1 %>
<% users_total_pages ||= 0 %>
<% posts_page ||= 1 %>
<% posts_total_pages ||= 0 %>
<% recent_searches ||= [] %>

<% if query.blank? %>
  <!-- 검색어 없을 때: 최근 검색어 표시 -->
  <% if recent_searches.present? %>
    <section class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-sm font-medium text-muted-foreground">최근 검색어</h2>
        <%= button_to clear_recent_searches_path, method: :delete, class: "text-xs text-muted-foreground hover:text-foreground transition-colors", data: { turbo_confirm: "모든 최근 검색어를 삭제하시겠습니까?" } do %>
          전체 삭제
        <% end %>
      </div>
      <div class="flex flex-wrap gap-2">
        <% recent_searches.each do |recent_query| %>
          <div class="group flex items-center gap-1 px-3 py-1.5 rounded-full bg-secondary hover:bg-secondary/80 transition-colors">
            <%= link_to recent_query, search_path(q: recent_query), class: "text-sm text-foreground", data: { turbo: false } %>
            <%= button_to destroy_recent_search_path(query: recent_query), method: :delete, class: "ml-1 p-0.5 rounded-full text-muted-foreground hover:text-foreground hover:bg-muted transition-colors opacity-0 group-hover:opacity-100" do %>
              <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- 검색 가이드 -->
  <div class="text-center py-8">
    <svg class="h-16 w-16 mx-auto text-muted-foreground/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    </svg>
    <p class="text-muted-foreground">검색어를 입력해주세요</p>
    <p class="text-sm text-muted-foreground mt-1">사용자 이름, 역할, 게시글 제목/내용으로 검색할 수 있습니다</p>
  </div>

<% elsif users.empty? && posts.empty? %>
  <!-- 검색 결과 없을 때 -->
  <div class="text-center py-12">
    <svg class="h-16 w-16 mx-auto text-muted-foreground/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
    <% result_type = case tab
                     when "users" then "유저"
                     when "posts" then "게시글"
                     else ""
                     end %>
    <p class="text-muted-foreground">'<span class="text-foreground font-medium"><%= query %></span>'<%= " #{result_type}" if result_type.present? %> 검색 결과가 없습니다</p>
    <% if tab == "posts" && category != "all" %>
      <p class="text-sm text-muted-foreground mt-2">다른 카테고리를 선택해보세요</p>
    <% else %>
      <p class="text-sm text-muted-foreground mt-2">다른 검색어를 시도해보세요</p>
    <% end %>
  </div>

<% else %>
  <!-- 검색 결과 있을 때 -->
  <div class="space-y-8">

    <!-- 사용자 검색 결과 -->
    <% if users.any? && (tab == "all" || tab == "users") %>
      <section>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-muted-foreground flex items-center gap-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            유저
            <span class="text-xs text-muted-foreground/70">(<%= users_total_count %>)</span>
          </h2>
          <% if tab == "all" && users_total_count > SearchController::USERS_LIMIT %>
            <button type="button" class="text-xs text-primary hover:underline" data-action="click->live-search#switchTab" data-tab="users">
              +<%= users_total_count - SearchController::USERS_LIMIT %>명 더 보기
            </button>
          <% end %>
        </div>
        <div class="space-y-2">
          <% users.each do |user| %>
            <%= link_to profile_path(user), class: "block p-4 bg-card rounded-xl border border-border hover:border-primary/50 transition-colors h-[88px]", data: { turbo: false } do %>
              <div class="flex items-center gap-4 h-full">
                <!-- 좌측: 아바타 -->
                <div class="h-14 w-14 rounded-full overflow-hidden bg-secondary flex items-center justify-center flex-shrink-0">
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar, alt: user.name, class: "h-full w-full object-cover" %>
                  <% elsif user.avatar_url.present? %>
                    <%= image_tag user.avatar_url, alt: user.name, class: "h-full w-full object-cover" %>
                  <% else %>
                    <span class="text-xl font-semibold text-muted-foreground"><%= user.name[0] %></span>
                  <% end %>
                </div>

                <!-- 중앙: 이름 + 직군/소속 -->
                <div class="flex-shrink-0 w-28 min-w-0">
                  <p class="font-semibold text-foreground truncate">
                    <%= highlight_search(user.name, query) %>
                  </p>
                  <% if user.role_title.present? %>
                    <p class="text-sm text-muted-foreground truncate">
                      <%= highlight_search(user.role_title, query) %>
                    </p>
                  <% end %>
                  <% if user.affiliation.present? %>
                    <p class="text-xs text-muted-foreground/70 truncate">
                      <%= highlight_search(user.affiliation, query) %>
                    </p>
                  <% end %>
                </div>

                <!-- 우측: 한줄소개 + 기술스택 -->
                <div class="flex-1 min-w-0 border-l border-border pl-4">
                  <% if user.bio.present? %>
                    <p class="text-sm text-foreground/80 line-clamp-1">
                      <%= highlight_snippet(user.bio, query, max_length: 96) %>
                    </p>
                  <% else %>
                    <p class="text-sm text-muted-foreground/50 italic">소개가 없습니다</p>
                  <% end %>
                  <% skills = user.skills_array.take(3) %>
                  <% if skills.any? %>
                    <div class="flex flex-wrap gap-1 mt-1.5">
                      <% skills.each do |skill| %>
                        <span class="px-2 py-0.5 text-xs rounded-full bg-primary/10 text-primary truncate max-w-[80px]">
                          <%= skill %>
                        </span>
                      <% end %>
                      <% if user.skills_array.length > 3 %>
                        <span class="px-2 py-0.5 text-xs rounded-full bg-muted text-muted-foreground">
                          +<%= user.skills_array.length - 3 %>
                        </span>
                      <% end %>
                    </div>
                  <% elsif user.availability_badges.any? %>
                    <div class="flex flex-wrap gap-1 mt-1.5">
                      <% user.availability_badges.take(2).each do |badge| %>
                        <span class="px-2 py-0.5 text-xs rounded-full <%= badge[:color] %> text-white">
                          <%= badge[:label] %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>

                <!-- 화살표 -->
                <svg class="h-5 w-5 text-muted-foreground flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            <% end %>
          <% end %>
        </div>

        <%# 유저 탭일 때 페이지네이션 표시 %>
        <% if tab == "users" && users_total_pages > 1 %>
          <div class="flex items-center justify-center gap-2 mt-6">
            <%# 이전 페이지 버튼 %>
            <button
              type="button"
              class="p-2 rounded-lg <%= users_page > 1 ? 'bg-secondary hover:bg-secondary/80 text-foreground' : 'bg-muted text-muted-foreground cursor-not-allowed' %>"
              data-action="click->live-search#prevPage"
              <%= 'disabled' if users_page <= 1 %>
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </button>

            <%# 페이지 번호 %>
            <div class="flex items-center gap-1">
              <% page_range = pagination_range(users_page, users_total_pages) %>
              <% page_range.each do |page_num| %>
                <% if page_num == :ellipsis %>
                  <span class="px-2 text-muted-foreground">...</span>
                <% else %>
                  <button
                    type="button"
                    class="min-w-[36px] h-9 rounded-lg text-sm font-medium transition-colors <%= page_num == users_page ? 'bg-primary text-primary-foreground' : 'bg-secondary hover:bg-secondary/80 text-foreground' %>"
                    data-action="click->live-search#goToPage"
                    data-page="<%= page_num %>"
                  >
                    <%= page_num %>
                  </button>
                <% end %>
              <% end %>
            </div>

            <%# 다음 페이지 버튼 %>
            <button
              type="button"
              class="p-2 rounded-lg <%= users_page < users_total_pages ? 'bg-secondary hover:bg-secondary/80 text-foreground' : 'bg-muted text-muted-foreground cursor-not-allowed' %>"
              data-action="click->live-search#nextPage"
              <%= 'disabled' if users_page >= users_total_pages %>
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>

          <p class="text-center text-xs text-muted-foreground mt-2">
            <%= (users_page - 1) * SearchController::USERS_PER_PAGE + 1 %>-<%= [users_page * SearchController::USERS_PER_PAGE, users_total_count].min %> of <%= users_total_count %>
          </p>
        <% end %>
      </section>
    <% end %>

    <!-- 게시글 검색 결과 -->
    <% if posts.any? && (tab == "all" || tab == "posts") %>
      <section>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-sm font-medium text-muted-foreground flex items-center gap-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
            게시글
            <span class="text-xs text-muted-foreground/70">(<%= posts_total_count %>)</span>
          </h2>
          <% if tab == "all" && posts_total_count > SearchController::POSTS_LIMIT %>
            <button type="button" class="text-xs text-primary hover:underline" data-action="click->live-search#switchTab" data-tab="posts">
              더 보기
            </button>
          <% end %>
        </div>

        <div class="space-y-4">
          <% posts.each do |post| %>
            <%= render partial: "search/post_result_card", locals: { post: post, query: query } %>
          <% end %>
        </div>

        <%# 게시글 탭일 때 페이지네이션 표시 %>
        <% if tab == "posts" && posts_total_pages > 1 %>
          <div class="flex items-center justify-center gap-2 mt-6">
            <%# 이전 페이지 버튼 %>
            <button
              type="button"
              class="p-2 rounded-lg <%= posts_page > 1 ? 'bg-secondary hover:bg-secondary/80 text-foreground' : 'bg-muted text-muted-foreground cursor-not-allowed' %>"
              data-action="click->live-search#prevPage"
              <%= 'disabled' if posts_page <= 1 %>
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </button>

            <%# 페이지 번호 %>
            <div class="flex items-center gap-1">
              <% page_range = pagination_range(posts_page, posts_total_pages) %>
              <% page_range.each do |page_num| %>
                <% if page_num == :ellipsis %>
                  <span class="px-2 text-muted-foreground">...</span>
                <% else %>
                  <button
                    type="button"
                    class="min-w-[36px] h-9 rounded-lg text-sm font-medium transition-colors <%= page_num == posts_page ? 'bg-primary text-primary-foreground' : 'bg-secondary hover:bg-secondary/80 text-foreground' %>"
                    data-action="click->live-search#goToPage"
                    data-page="<%= page_num %>"
                  >
                    <%= page_num %>
                  </button>
                <% end %>
              <% end %>
            </div>

            <%# 다음 페이지 버튼 %>
            <button
              type="button"
              class="p-2 rounded-lg <%= posts_page < posts_total_pages ? 'bg-secondary hover:bg-secondary/80 text-foreground' : 'bg-muted text-muted-foreground cursor-not-allowed' %>"
              data-action="click->live-search#nextPage"
              <%= 'disabled' if posts_page >= posts_total_pages %>
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>

          <p class="text-center text-xs text-muted-foreground mt-2">
            <%= (posts_page - 1) * SearchController::POSTS_PER_PAGE + 1 %>-<%= [posts_page * SearchController::POSTS_PER_PAGE, posts_total_count].min %> of <%= posts_total_count %>
          </p>
        <% end %>
      </section>
    <% end %>

  </div>
<% end %>
