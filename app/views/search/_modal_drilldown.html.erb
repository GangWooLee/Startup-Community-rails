<%# Drill-down 모달 뷰 - "모두 보기" 클릭 시 전체 결과 표시 %>
<%# Task 58-59: 모달 내 계층 전환 (Raycast/Linear 스타일) %>

<turbo-frame id="search_modal_results" class="animate-slide-in-right">
  <%# Drill-down 헤더: 뒤로가기 + 타이틀 %>
  <div class="flex items-center gap-3 px-4 py-3 border-b border-stone-100 bg-stone-50/30">
    <button type="button"
            data-action="click->search-modal#goBack"
            class="p-1.5 rounded-lg hover:bg-stone-100/80 transition-colors">
      <svg class="w-5 h-5 text-stone-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>
    <div class="flex-1">
      <h3 class="font-semibold text-stone-800">
        <%= drilldown_type == "users" ? "사용자" : "게시글" %> 검색 결과
      </h3>
      <p class="text-xs text-stone-400">"<%= query %>" 검색 · <%= total_count %>개</p>
    </div>
  </div>

  <%# 결과 리스트 - Task 88: append 패턴을 위한 ID 추가 %>
  <div class="max-h-[50vh] overflow-y-auto custom-scrollbar-premium">
    <% if items.any? %>
      <div id="drilldown_items_<%= drilldown_type %>" class="space-y-1 px-2 py-3">
        <% if drilldown_type == "users" %>
          <%# 사용자 리스트 %>
          <% items.each do |user| %>
            <%= link_to profile_path(user),
                        data: { action: "click->search-modal#resultClick", search_modal_target: "resultItem" },
                        tabindex: "0",
                        class: "flex items-center gap-3 px-3 py-2.5 rounded-xl
                                hover:bg-orange-50/50 focus:bg-orange-50/50
                                hover:ring-1 focus:ring-1 hover:ring-orange-200/50 focus:ring-orange-200/50
                                transition-all duration-150 group outline-none" do %>
              <%# 아바타 %>
              <div class="w-10 h-10 rounded-full bg-stone-200 overflow-hidden flex-shrink-0">
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar, alt: user.name, class: "w-full h-full object-cover" %>
                <% elsif user.avatar_url.present? %>
                  <%= image_tag user.avatar_url, alt: user.name, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center bg-stone-300 text-stone-600 font-bold text-sm">
                    <%= user.name[0].upcase %>
                  </div>
                <% end %>
              </div>

              <%# 정보 %>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-stone-700 group-hover:text-stone-900 truncate">
                  <%= user.name %>
                </p>
                <% if user.role_title.present? || user.affiliation.present? %>
                  <p class="text-xs text-stone-400 truncate">
                    <%= [user.role_title, user.affiliation].compact.join(" · ") %>
                  </p>
                <% end %>
              </div>

              <%# 화살표 %>
              <svg class="w-4 h-4 text-stone-300 group-hover:text-orange-400 flex-shrink-0 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          <% end %>
        <% else %>
          <%# 게시글 리스트 %>
          <% items.each do |post| %>
            <%= link_to post_path(post),
                        data: { action: "click->search-modal#resultClick", search_modal_target: "resultItem" },
                        tabindex: "0",
                        class: "flex items-start gap-3 px-3 py-2.5 rounded-xl
                                hover:bg-orange-50/50 focus:bg-orange-50/50
                                hover:ring-1 focus:ring-1 hover:ring-orange-200/50 focus:ring-orange-200/50
                                transition-all duration-150 group outline-none" do %>
              <%# 카테고리 아이콘 %>
              <div class="w-8 h-8 rounded-lg flex-shrink-0 flex items-center justify-center <%= post_category_bg_class(post) %>">
                <%= post_category_icon(post) %>
              </div>

              <%# 정보 %>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-stone-700 group-hover:text-stone-900 truncate">
                  <%= post.title %>
                </p>
                <div class="flex items-center gap-2 mt-0.5">
                  <span class="text-xs text-stone-400"><%= post.user.name %></span>
                  <span class="text-xs text-stone-300">·</span>
                  <span class="text-xs text-stone-400"><%= time_ago_in_words(post.created_at) %> 전</span>
                </div>
              </div>

              <%# 화살표 %>
              <svg class="w-4 h-4 text-stone-300 group-hover:text-orange-400 flex-shrink-0 mt-1 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <%# 페이지네이션 (더 보기) - Task 88: Turbo Stream append 패턴 %>
      <% if has_more_pages %>
        <div id="drilldown_load_more" class="px-4 py-3 border-t border-stone-100 bg-stone-50/30">
          <%= link_to search_path(q: query, tab: drilldown_type, page: next_page, modal: true, drilldown: true, append: true),
                      data: { turbo_stream: true },
                      class: "flex items-center justify-center gap-2 text-sm text-orange-500 hover:text-orange-600 font-medium py-2 transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
            더 보기 (<%= next_page %>/<%= (total_count.to_f / 10).ceil %>)
          <% end %>
        </div>
      <% end %>
    <% else %>
      <%# 결과 없음 %>
      <div class="py-12 text-center">
        <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-stone-100 flex items-center justify-center">
          <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <p class="text-sm text-stone-500">검색 결과가 없습니다</p>
      </div>
    <% end %>
  </div>
</turbo-frame>
