<% content_for :page_title, "채팅방 열람" %>

<!-- 브레드크럼 -->
<nav class="flex items-center gap-2 text-sm text-muted-foreground mb-6">
  <%= icon "home", variant: :solid, class: "w-4 h-4" %>
  <span>/</span>
  <%= link_to "대시보드", admin_root_path, class: "link-hover relative" %>
  <span>/</span>
  <span class="text-foreground font-medium">채팅방 #<%= @chat_room.id %></span>
</nav>

<!-- 경고 배너 -->
<div class="bg-amber-50 border border-amber-200 rounded-xl p-4 mb-6">
  <div class="flex items-center gap-3">
    <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center flex-shrink-0">
      <%= icon "eye", variant: :solid, class: "h-5 w-5 text-amber-600" %>
    </div>
    <div>
      <h3 class="text-sm font-semibold text-amber-800">감청 모드 (Read Only)</h3>
      <p class="text-sm text-amber-600">이 페이지의 열람은 사용자에게 읽음 표시되지 않습니다. 모든 활동은 관리자 로그에 기록됩니다.</p>
    </div>
  </div>
</div>

<div class="flex gap-6 h-[calc(100vh-280px)]">
  <!-- 왼쪽: 참여자 정보 (고정) -->
  <div class="w-72 flex-shrink-0">
    <div class="bg-card rounded-xl border border-border h-full flex flex-col">
      <!-- 헤더 -->
      <div class="px-4 py-3 border-b border-border">
        <h3 class="font-semibold text-foreground">채팅방 정보</h3>
      </div>

      <!-- 참여자 목록 -->
      <div class="p-4 flex-1 overflow-auto">
        <p class="text-xs font-semibold text-muted-foreground uppercase tracking-wider mb-3">참여자</p>
        <div class="space-y-2">
          <% @participants.each_with_index do |user, index| %>
            <%= link_to admin_user_path(user), class: "flex items-center gap-3 p-2 rounded-lg btn-hover" do %>
              <div class="w-10 h-10 rounded-full <%= index == 0 ? 'bg-gradient-to-br from-blue-500 to-purple-600' : 'bg-gradient-to-br from-green-500 to-teal-600' %> flex items-center justify-center text-white font-medium flex-shrink-0">
                <%= user.name&.first&.upcase || "?" %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-foreground truncate"><%= user.name %></p>
                <p class="text-xs text-muted-foreground truncate"><%= user.email %></p>
              </div>
              <%= icon "chevron-right", variant: :mini, class: "w-4 h-4 text-muted-foreground" %>
            <% end %>
          <% end %>
        </div>

        <!-- 통계 -->
        <div class="mt-6 pt-4 border-t border-border space-y-3">
          <div class="flex items-center justify-between text-sm">
            <span class="text-muted-foreground">채팅방 ID</span>
            <span class="font-medium text-foreground">#<%= @chat_room.id %></span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-muted-foreground">총 메시지</span>
            <span class="font-medium text-foreground"><%= @messages_count %>개</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-muted-foreground">첫 메시지</span>
            <span class="font-medium text-foreground text-xs"><%= @first_message_at&.strftime("%m/%d %H:%M") || "-" %></span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-muted-foreground">마지막</span>
            <span class="font-medium text-foreground text-xs"><%= @last_message_at&.strftime("%m/%d %H:%M") || "-" %></span>
          </div>
        </div>

        <% if @chat_room.source_post.present? %>
          <div class="mt-6 pt-4 border-t border-border">
            <p class="text-xs font-semibold text-muted-foreground uppercase tracking-wider mb-2">관련 게시글</p>
            <%= link_to @chat_room.source_post.title, post_path(@chat_room.source_post),
                        class: "text-sm text-blue-600 link-hover relative", target: "_blank" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 오른쪽: 대화 내용 (메신저 스타일) -->
  <div class="flex-1 min-w-0">
    <div class="bg-card rounded-xl border border-border h-full flex flex-col">
      <!-- 채팅 헤더 -->
      <div class="px-5 py-3 border-b border-border flex items-center justify-between flex-shrink-0">
        <div class="flex items-center gap-3">
          <h2 class="font-semibold text-foreground">대화 내용</h2>
          <span class="px-2 py-0.5 text-xs font-medium bg-muted text-muted-foreground rounded-full">
            <%= @messages_count %>개
          </span>
        </div>
        <div class="flex items-center gap-2">
          <button class="p-2 text-muted-foreground btn-hover rounded-lg" title="검색">
            <%= icon "magnifying-glass", variant: :outline, class: "w-5 h-5" %>
          </button>
          <button class="p-2 text-muted-foreground btn-hover rounded-lg" title="내보내기">
            <%= icon "arrow-down-tray", variant: :outline, class: "w-5 h-5" %>
          </button>
        </div>
      </div>

      <!-- 대화 로그 (스크롤 영역) -->
      <div class="flex-1 overflow-y-auto p-4 space-y-3 bg-gradient-to-b from-gray-50 to-gray-100" id="chat-logs">
        <% if @messages.empty? %>
          <div class="flex items-center justify-center h-full">
            <div class="text-center">
              <%= icon "chat-bubble-left-right", variant: :outline, class: "mx-auto h-16 w-16 text-muted-foreground" %>
              <p class="mt-3 text-sm text-muted-foreground">대화 내용이 없습니다.</p>
            </div>
          </div>
        <% else %>
          <% current_date = nil %>
          <% first_user = @participants.first %>
          <% @messages.each do |message| %>
            <%# 날짜 구분선 %>
            <% message_date = message.created_at.to_date %>
            <% if current_date != message_date %>
              <% current_date = message_date %>
              <div class="flex items-center justify-center my-4">
                <span class="px-3 py-1 text-xs font-medium text-muted-foreground bg-card rounded-full shadow-sm border border-border">
                  <%= message_date.strftime("%Y년 %m월 %d일") %>
                </span>
              </div>
            <% end %>

            <%# 시스템 메시지 %>
            <% if message.message_type == 'system' %>
              <div class="flex justify-center my-2">
                <div class="px-4 py-2 bg-gray-200/80 rounded-full">
                  <p class="text-xs text-muted-foreground"><%= message.content %></p>
                </div>
              </div>
            <% else %>
              <%# 일반 메시지 (말풍선 스타일) %>
              <% is_first_user = message.sender == first_user %>
              <div class="flex items-end gap-2 <%= is_first_user ? '' : 'flex-row-reverse' %>">
                <%# 아바타 %>
                <% if message.sender.present? %>
                  <%= link_to admin_user_path(message.sender), class: "flex-shrink-0" do %>
                    <div class="w-8 h-8 rounded-full <%= is_first_user ? 'bg-gradient-to-br from-blue-500 to-purple-600' : 'bg-gradient-to-br from-green-500 to-teal-600' %> flex items-center justify-center text-white text-sm font-medium shadow-sm">
                      <%= message.sender.name&.first&.upcase || "?" %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="w-8 h-8 rounded-full bg-gray-400 flex items-center justify-center flex-shrink-0 shadow-sm">
                    <%= icon "computer-desktop", variant: :solid, class: "w-4 h-4 text-white" %>
                  </div>
                <% end %>

                <%# 메시지 본문 %>
                <div class="max-w-[65%]">
                  <%# 발신자 이름 (첫 번째 사용자만 왼쪽 정렬) %>
                  <p class="text-xs text-muted-foreground mb-1 px-1 <%= is_first_user ? '' : 'text-right' %>">
                    <%= message.sender&.name || "시스템" %>
                  </p>

                  <%# 메시지 타입별 렌더링 %>
                  <% case message.message_type %>
                  <% when 'offer_card' %>
                    <%# 견적 카드 %>
                    <div class="bg-card border border-border rounded-2xl <%= is_first_user ? 'rounded-tl-sm' : 'rounded-tr-sm' %> p-4 shadow-sm">
                      <div class="flex items-center gap-2 mb-2">
                        <%= icon "currency-dollar", variant: :solid, class: "w-5 h-5 text-green-600" %>
                        <span class="font-semibold text-foreground text-sm">견적 제안</span>
                      </div>
                      <% if message.metadata.present? %>
                        <p class="text-xl font-bold text-foreground"><%= number_to_currency(message.metadata['amount'], unit: '₩', precision: 0) rescue message.metadata['amount'] %></p>
                        <% if message.metadata['description'].present? %>
                          <p class="text-sm text-muted-foreground mt-1"><%= message.metadata['description'] %></p>
                        <% end %>
                      <% end %>
                      <p class="text-xs text-muted-foreground mt-2 text-right"><%= message.created_at.strftime("%H:%M") %></p>
                    </div>
                  <% when 'deal_confirm' %>
                    <%# 거래 확정 %>
                    <div class="bg-purple-50 border border-purple-200 rounded-2xl <%= is_first_user ? 'rounded-tl-sm' : 'rounded-tr-sm' %> p-4 shadow-sm">
                      <div class="flex items-center gap-2 mb-2">
                        <%= icon "check-badge", variant: :solid, class: "w-5 h-5 text-purple-600" %>
                        <span class="font-semibold text-purple-900 text-sm">거래 확정</span>
                      </div>
                      <p class="text-sm text-purple-700"><%= message.content %></p>
                      <p class="text-xs text-purple-400 mt-2 text-right"><%= message.created_at.strftime("%H:%M") %></p>
                    </div>
                  <% when 'profile_card' %>
                    <%# 프로필 카드 %>
                    <div class="bg-blue-50 border border-blue-200 rounded-2xl <%= is_first_user ? 'rounded-tl-sm' : 'rounded-tr-sm' %> p-4 shadow-sm">
                      <div class="flex items-center gap-2 mb-2">
                        <%= icon "user-circle", variant: :solid, class: "w-5 h-5 text-blue-600" %>
                        <span class="font-semibold text-blue-900 text-sm">프로필 공유</span>
                      </div>
                      <p class="text-sm text-blue-700"><%= message.content %></p>
                      <p class="text-xs text-blue-400 mt-2 text-right"><%= message.created_at.strftime("%H:%M") %></p>
                    </div>
                  <% else %>
                    <%# 일반 텍스트 메시지 %>
                    <div class="<%= is_first_user ? 'bg-card border border-border rounded-tl-sm' : 'bg-blue-500 rounded-tr-sm' %> rounded-2xl px-4 py-2.5 shadow-sm">
                      <p class="text-sm whitespace-pre-wrap break-words <%= is_first_user ? 'text-foreground' : 'text-white' %>"><%= message.content %></p>
                    </div>
                    <p class="text-xs text-muted-foreground mt-1 px-1 <%= is_first_user ? '' : 'text-right' %>">
                      <%= message.created_at.strftime("%H:%M") %>
                    </p>
                  <% end %>

                  <%# 메타데이터 (관리자 전용 - 접기) %>
                  <% if message.metadata.present? && !['offer_card'].include?(message.message_type) %>
                    <details class="mt-1 px-1">
                      <summary class="text-xs text-muted-foreground cursor-pointer link-hover relative">메타데이터</summary>
                      <pre class="mt-1 p-2 bg-card border border-border rounded text-xs text-muted-foreground overflow-x-auto max-w-full"><%= JSON.pretty_generate(message.metadata) %></pre>
                    </details>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- 하단 안내 -->
      <div class="px-4 py-3 border-t border-border bg-card rounded-b-xl flex-shrink-0">
        <div class="flex items-center justify-center gap-2 text-sm text-muted-foreground">
          <%= icon "lock-closed", variant: :solid, class: "w-4 h-4" %>
          <span>감청 모드 - 메시지 전송 불가</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // 페이지 로드 시 스크롤을 맨 아래로
  document.addEventListener('DOMContentLoaded', function() {
    const chatLogs = document.getElementById('chat-logs');
    if (chatLogs) {
      chatLogs.scrollTop = chatLogs.scrollHeight;
    }
  });
</script>
