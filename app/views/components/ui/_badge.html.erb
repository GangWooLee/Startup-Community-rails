<%# shadcn Badge 컴포넌트 %>
<%# locals: text, variant (default/secondary/destructive/outline) %>
<%
  variant ||= :default

  base_classes = "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"

  variant_classes = case variant.to_sym
  when :default
    "bg-primary text-primary-foreground hover:bg-primary/80"
  when :secondary
    "bg-secondary text-secondary-foreground hover:bg-secondary/80"
  when :destructive
    "bg-destructive text-destructive-foreground hover:bg-destructive/80"
  when :outline
    "border border-input bg-background hover:bg-accent hover:text-accent-foreground"
  else
    "bg-primary text-primary-foreground hover:bg-primary/80"
  end
%>

<span class="<%= base_classes %> <%= variant_classes %> <%= local_assigns[:class] %>">
  <%= text %>
</span>
