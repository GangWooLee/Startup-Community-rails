<!--prettier-ignore-->
<% case as %>
<% when :link %>
 <%= link_to href, class: button_classes, data: data do %>
    <%= text %>
  <% end %>
<% when :button %>
  <%# type: submit이 기본값, form: 외부 폼 ID 연결 지원 %>
  <%= button_tag class: button_classes, data: data, type: (type || :submit), form: form do %>
    <%= text %>
  <% end %>
<% end %>
