<% comment = local_assigns[:comment] %>
<% liked = local_assigns.fetch(:liked, false) %>

<%# 우측 고정 좋아요 아이콘 - 터치 영역 24px 확보 %>
<div id="comment-like-button-<%= comment.id %>"
     data-controller="comment-like-button"
     data-comment-like-button-url-value="<%= like_post_comment_path(comment.post, comment) %>"
     data-comment-like-button-liked-value="<%= liked %>"
     data-comment-like-button-comment-id-value="<%= comment.id %>">
  <button type="button"
          data-action="click->comment-like-button#toggle"
          class="p-2 -m-2 transition-colors"
          aria-label="좋아요">
    <span data-comment-like-button-target="icon"
          class="<%= liked ? 'text-red-500' : 'text-muted-foreground hover:text-red-500' %> transition-all duration-150">
      <% if liked %>
        <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z"/>
        </svg>
      <% else %>
        <svg class="h-3 w-3" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
        </svg>
      <% end %>
    </span>
  </button>
</div>
